<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://axelor.com/xml/ns/object-views"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid model="com.axelor.apps.intervention.db.AnswerValue" title="Answer value"
    name="answer-value-grid" editable="true" x-selector="checkbox" orderBy="sequence" canMove="true">
    <field name="name"/>
    <field name="isDefault"/>
    <field name="sequence" hidden="true"/>
  </grid>

  <form model="com.axelor.apps.intervention.db.AnswerValue" title="Answer value"
    name="answer-value-form">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="isDefault"/>
      <field name="nonConforming"/>
      <field name="following"/>
    </panel>
  </form>

</object-views>