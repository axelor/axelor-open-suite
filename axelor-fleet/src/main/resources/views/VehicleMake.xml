<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="vehicle-make-grid" title="Vehicle brands"
    model="com.axelor.apps.fleet.db.VehicleMake">
    <field name="name"/>
  </grid>

  <form name="vehicle-make-form" title="Brand" model="com.axelor.apps.fleet.db.VehicleMake"
    width="large">
    <panel name="mainPanel">
      <panel colSpan="2" name="imagePanel">
        <field name="image" widget="Image" colSpan="12"/>
      </panel>
      <panel colSpan="6" itemSpan="12" name="namePanel">
        <field name="name"/>
      </panel>
    </panel>
  </form>

</object-views>