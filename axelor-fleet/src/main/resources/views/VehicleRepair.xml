<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="vehicle-repair-grid" title="Repairs"
    model="com.axelor.apps.fleet.db.VehicleRepair">
    <field name="repairDate"/>
    <field name="repairCause"/>
  </grid>

  <form name="vehicle-repair-form" title="Repairs"
    model="com.axelor.apps.fleet.db.VehicleRepair" width="large">
    <panel name="mainPanel">
      <field name="repairDate" colSpan="3"/>
      <field name="repairCause"/>
    </panel>
  </form>

</object-views>
