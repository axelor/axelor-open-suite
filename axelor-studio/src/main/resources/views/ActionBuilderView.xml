<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="action-builder-view-grid" title="View"
    model="com.axelor.studio.db.ActionBuilderView" editable="true" orderBy="sequence" canMove="true">
    <field name="viewType"/>
    <field name="viewName" widget="ref-text" x-target="com.axelor.meta.db.MetaView"
      x-target-name="name" onSelect="action-action-builder-view-name-domain"/>
    <field name="viewConditionToCheck"/>
  </grid>

  <form name="action-builder-view-form" title="View"
    model="com.axelor.studio.db.ActionBuilderView">
    <panel name="mainPanel">
      <field name="viewType" colSpan="4"/>
      <field name="viewName" colSpan="8" widget="ref-text"
        x-target="com.axelor.meta.db.MetaView" x-target-name="name"
        onSelect="action-action-builder-view-name-domain"/>
      <field name="viewConditionToCheck"/>
    </panel>
  </form>

</object-views>