<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
  
  <grid name="action-builder-line-grid" title="Fields" model="com.axelor.studio.db.ActionBuilderLine" >
      <field name="name" />
      <field name="value" />
      <field name="conditionText" />
      <field name="filter" />
      <field name="dummy" />
  </grid>
  
  <form name="action-builder-line-form" title="Field" model="com.axelor.studio.db.ActionBuilderLine">
<!--   	  onNew="action-builder-line-set-default-attrs" onLoad="action-builder-line-set-default-attrs"> -->
      <panel name="mainPanel">
      	<field name="dummy" colSpan="4"/>
      	<field name="isTargetJson" hideIf="dummy" colSpan="4"/>
      	<field name="isSourceJson" hideIf="dummy" colSpan="4"/>
      	<panel name="metaFieldsPanel" colSpan="6" itemSpan="12" hideIf="dummy">
      		<field name="metaJsonField" showIf="isTargetJson"  onSelect="action-action-builder-line-meta-json-field-domain" onChange="action-action-builder-line-set-name-json"/>
      		<field name="metaField" showIf="!isTargetJson" onSelect="action-action-builder-line-meta-field-domain" onChange="action-action-builder-line-set-name-meta"/>
      	</panel>
      	<panel name="valuePanel" colSpan="6" itemSpan="12" hideIf="dummy">
      		<field name="valueJson" showIf="isSourceJson" onSelect="action-action-builder-line-value-json-domain" onChange="action-action-builder-line-set-src-field-json" />
      		<field name="valueField" showIf="!isSourceJson"  onSelect="action-action-builder-line-value-field-domain" onChange="action-action-builder-line-set-src-field-meta" />
      	</panel>
      	<field name="name" showIf="dummy" colSpan="6" required="true" />
      	<field name="value" colSpan="12"/>
      	<field name="conditionText" hideIf="dummy" />
      	<field name="filter" showIf="!dummy &amp;&amp; (metaField.relationship != null || metaJsonField.targetModel != null || metaJsonField.targetJsonModel != null)"/>
      	<field name="metaJsonField.type" hidden="true" />
      	<field name="metaJsonField.targetJsonModel" hidden="true" />
      	<field name="metaJsonField.targetModel" hidden="true"/>
      	<field name="metaField.typeName" hidden="true" />
      	<field name="metaField.relationship" hidden="true" />
      	<field name="valueJson.type" hidden="true" />
      	<field name="valueJson.targetJsonModel" hidden="true" />
      	<field name="valueJson.targetModel" hidden="true"/>
      	<field name="valueField.typeName" hidden="true" />
      	<panel-related name="subLinesPanel" field="subLines" colSpan="12" hideIf="dummy" showIf="!dummy &amp;&amp; (metaField.relationship != null || metaJsonField.targetModel != null || metaJsonField.targetJsonModel != null)" grid-view="action-builder-line-grid" form-view="action-builder-line-form"/>
	  </panel>
  </form>
  
  <grid name="action-builder-line-simple-grid" title="Field" model="com.axelor.studio.db.ActionBuilderLine" editable="true" >
      <field name="name" title="Name" />
      <field name="value" />
  </grid>
  
  <form name="action-builder-line-simple-form" title="Field" model="com.axelor.studio.db.ActionBuilderLine">
  	  <panel name="mainPanel">
	      <field name="name" title="Name" />
	      <field name="value" />
      </panel>
  </form>
  
  <action-attrs name="action-action-builder-line-meta-json-field-domain">
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.model = '${__parent__.model}'&quot;" if="__parent__.typeSelect == 1 &amp;&amp; !__parent__.isJson"/>
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.model = '${__parent__.targetModel}'&quot;" if="__parent__.typeSelect == 0 &amp;&amp; !__parent__.isJson"/>
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.jsonModel.name = '${__parent__.model}'&quot;" if="__parent__.typeSelect == 1 &amp;&amp; __parent__.isJson"/>
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.jsonModel.name = '${__parent__.targetModel}'&quot;" if="__parent__.typeSelect == 0 &amp;&amp; __parent__.isJson"/>
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.jsonModel.id = ${__parent__.metaJsonField?.targetJsonModel?.id} &quot;" if="__parent__.isTargetJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  	<attribute name="domain" for="metaJsonField" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.model LIKE '%.${__parent__?.metaField.typeName}' &quot;" if="!__parent__.isTargetJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  </action-attrs>
  
  <action-attrs name="action-action-builder-line-value-json-domain">
  	<attribute name="domain" for="valueJson" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.jsonModel.name = '${__parent__.model}' &quot;" if="__parent__.isJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilder'"/>
  	<attribute name="domain" for="valueJson" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.model = '${__parent__.model}' &quot;" if="!__parent__.isJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilder' "/>
  	<attribute name="domain" for="valueJson" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.jsonModel.id = ${__parent__.valueJson?.targetJsonModel?.id} &quot;" if="__parent__.isSourceJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  	<attribute name="domain" for="valueJson" expr="eval:&quot;self.type not in ('panel','button','separator','label','spacer') and self.model LIKE '%.${__parent__?.valueField.typeName}' &quot;" if="!__parent__.isSourceJson &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  </action-attrs>
  
  <action-attrs name="action-action-builder-line-meta-field-domain">
  	<attribute name="domain" for="metaField" expr="eval:&quot;self.metaModel.fullName = '${__parent__.targetModel}'&quot;"  if="__parent__.typeSelect == 0"/>
  	<attribute name="domain" for="metaField" expr="eval:&quot;self.metaModel.fullName = '${__parent__.model}'&quot;"  if="__parent__.typeSelect == 1"/>
  	<attribute name="domain" for="metaField" expr="eval:&quot;self.metaModel.fullName = '${__parent__.metaJsonField?.targetModel}'&quot;" if="__parent__.metaJsonField != null &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  	<attribute name="domain" for="metaField" expr="eval:&quot;self.metaModel.name = '${__parent__.metaField?.typeName}'&quot;" if="__parent__.metaField != null &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  </action-attrs>
  
  <action-attrs name="action-action-builder-line-value-field-domain">
    <attribute name="domain" for="valueField" expr="eval:&quot;self.metaModel.fullName = '${__parent__.model}'&quot;" />
  	<attribute name="domain" for="valueField" expr="eval:&quot;self.metaModel.fullName = '${__parent__.valueJson?.targetModel}'&quot;" if="__parent__.valueJson != null &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  	<attribute name="domain" for="valueField" expr="eval:&quot;self.metaModel.name = '${__parent__.valueField?.typeName}'&quot;" if="__parent__.valueField != null &amp;&amp; __parent__._model == 'com.axelor.studio.db.ActionBuilderLine'"/>
  </action-attrs>
  
  <action-record name="action-action-builder-line-set-name-meta" model="com.axelor.studio.db.ActionBuilderLine">
  	<field name="name" expr="eval:metaField?.name"/>
  </action-record>
  
  <action-record name="action-action-builder-line-set-name-json" model="com.axelor.studio.db.ActionBuilderLine">
  	<field name="name" expr="eval:metaJsonField?.name"/>
  </action-record>
  
  <action-record name="action-action-builder-line-set-src-field-meta" model="com.axelor.studio.db.ActionBuilderLine">
  	<field name="value" expr="eval:valueField != null ? '$.' + valueField.name : null"/>
  </action-record>
  
  <action-record name="action-action-builder-line-set-src-field-json" model="com.axelor.studio.db.ActionBuilderLine">
  	<field name="value" expr="eval:valueJson != null ? '$.' + valueJson.name : null"/>
  </action-record>
  
