<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="app-builder-grid" title="App builder" model="com.axelor.studio.db.AppBuilder">
    <field name="name"/>
    <field name="code"/>
    <field name="generatedApp.active"/>
  </grid>

  <form name="app-builder-form" title="App builder" model="com.axelor.studio.db.AppBuilder"
    width="large">
    <panel name="mainPanel">
      <field name="image" widget="Image" colSpan="2"/>
      <panel name="detailPanel" colSpan="10">
        <field name="code" colSpan="3"/>
        <field name="name" colSpan="8"/>
        <field name="dependsOnSet" colSpan="12" widget="TagSelect" canNew="false"
          canEdit="false"/>
        <field name="modules"/>
        <field name="sequence"/>
        <field name="generatedApp.active" hidden="true"/>
      </panel>
      <field name="description" widget="html" colSpan="12"/>
    </panel>
    <panel-tabs name="mainPanelTab">
      <panel-dashlet action="action-studio-view-app-builder-custom-model"
        title="Custom models"/>
      <panel-dashlet action="action-studio-view-app-builder-custom-field"
        title="Custom fields"/>
      <panel-dashlet action="action-studio-view-app-builder-menu" title="Menus"/>
      <panel-dashlet action="action-studio-view-app-builder-action" title="Actions"/>
      <panel name="chartPanel" title="Charts">
        <panel-dashlet action="action-studio-view-app-builder-dashboard"
          title="Dashboards" colSpan="12"/>
        <panel-dashlet action="action-studio-view-app-builder-chart" title="Charts"
          colSpan="12"/>
      </panel>
    </panel-tabs>
    <panel name="actionPanel" sidebar="true">
      <button onClick="action-studio-method-app-builder-install-app" name="installBtn"
        title="Install" showIf="id &amp;&amp; !generatedApp.active"/>
      <button onClick="action-studio-method-app-builder-uninstall-app" name="uninstallBtn"
        title="Uninstall" showIf="id &amp;&amp; generatedApp.active"/>
    </panel>
  </form>

  <action-view name="action-studio-view-app-builder-custom-model" title="Custom models"
    model="com.axelor.meta.db.MetaJsonModel">
    <view type="grid" name="json-model-grid"/>
    <view type="form" name="json-model-form"/>
    <domain>self.appBuilder.id = :appBuilderId</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-view name="action-studio-view-app-builder-custom-field" title="Custom fields"
    model="com.axelor.meta.db.MetaJsonField">
    <view type="grid" name="json-field-grid"/>
    <view type="form" name="json-field-form"/>
    <domain>self.appBuilder.id = :appBuilderId AND self.jsonModel IS NULL</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-view name="action-studio-view-app-builder-menu" title="Menus"
    model="com.axelor.studio.db.MenuBuilder">
    <view type="grid" name="menu-builder-grid"/>
    <view type="form" name="menu-builder-form"/>
    <domain>self.appBuilder.id = :appBuilderId</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-view name="action-studio-view-app-builder-action" title="Actions"
    model="com.axelor.studio.db.ActionBuilder">
    <view type="grid" name="action-builder-grid"/>
    <view type="form" name="action-builder-form"/>
    <domain>self.appBuilder.id = :appBuilderId AND self.menuAction = false</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-view name="action-studio-view-app-builder-dashboard" title="Dashboards"
    model="com.axelor.studio.db.DashboardBuilder">
    <view type="grid" name="dashboard-builder-grid"/>
    <view type="form" name="dashboard-builder-form"/>
    <domain>self.appBuilder.id = :appBuilderId</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-view name="action-studio-view-app-builder-chart" title="Charts"
    model="com.axelor.studio.db.ChartBuilder">
    <view type="grid" name="chart-builder-grid"/>
    <view type="form" name="chart-builder-form"/>
    <domain>self.appBuilder.id = :appBuilderId</domain>
    <context name="appBuilderId" expr="eval: id"/>
  </action-view>

  <action-method name="action-studio-app-builder-method-import-bpm">
    <call class="com.axelor.studio.web.AppBuilderController" method="importBpm"/>
  </action-method>

  <action-method name="action-studio-method-app-builder-install-app">
    <call class="com.axelor.studio.web.AppBuilderController" method="installApp"/>
  </action-method>

  <action-method name="action-studio-method-app-builder-uninstall-app">
    <call class="com.axelor.studio.web.AppBuilderController" method="uninstallApp"/>
  </action-method>

</object-views>
