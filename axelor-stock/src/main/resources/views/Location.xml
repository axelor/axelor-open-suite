<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="location-grid" title="Stock Locations" model="com.axelor.apps.stock.db.Location">
        <toolbar>
    		<button name="print" title="Print" icon="fa-print" onClick="action-stock-location-method-print"/>
    	</toolbar>
        <field name="name"/>
        <field name="parentLocation" form-view="location-form" grid-view="location-grid"/>
        <field name="company" form-view="company-form" grid-view="company-grid"/>
        <field name="partner" form-view="partner-form" grid-view="partner-grid"/>
        <field name="address" form-view="address-form" grid-view="address-grid"/>
        <field name="typeSelect"/>
        <field name="isDefaultLocation"/>
    </grid>

	<grid name="location-stock-rules-grid" title="Stock Locations" model="com.axelor.apps.stock.db.Location">
        <field name="name"/>
	</grid>

	<form name="location-form" title="Stock Location" model="com.axelor.apps.stock.db.Location" onNew="action-location-record-new" width="large">
		<toolbar>
			<button name="createInventory" title="Create inventory" onClick="action-location-view-create-inventory"/>
			<button name="print" title="Print" icon="fa-print" onClick="action-stock-location-method-print"/>
		</toolbar>
		<panel name="main">
			<field name="name"/>
			<field name="typeSelect" onChange="action-location-is-default-location" colSpan="3"/>
			<field name="isDefaultLocation" onChange="action-location-is-default-location" colSpan="3"/>
			<field name="parentLocation" form-view="location-form" grid-view="location-grid"/>
			<field name="company" widget="SuggestBox" onChange="action-location-is-default-location" form-view="company-form" grid-view="company-grid"/>
			<field name="partner" domain="self.isContact = false" form-view="partner-form" grid-view="partner-grid"/>
			<field name="address" form-view="address-form" grid-view="address-grid"/>
		</panel>    
		<panel-tabs>
			<panel name="locationContent" title="Location Content">
				<panel-dashlet title="Location Lines" field="locationLineList" canNew="false" colSpan="12" action="action-location-view-location-content" canSearch="true"/>
			</panel> 
			<panel-dashlet title="Stock Details" field="detailsLocationLineList" action="action-location-details-view-location-content" canSearch="true"/>
		</panel-tabs>   
		<panel-dashlet height="350" hideIf="$popup()" colSpan="12" action="dashlet.locationLine.location.value"/>      
	</form>
    
    <action-method name="action-stock-location-method-print">
    	<call class="com.axelor.apps.stock.web.LocationController" method="print"></call>
    </action-method>
        
    <action-record name="action-location-record-new" model="com.axelor.apps.stock.db.Location">
	    <field name="typeSelect" expr="1"/>
	    <field name="company"  expr="eval:__user__.activeCompany" if="__user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="__user__.activeCompany == null &amp;&amp; __repo__(Company).all().fetch().size == 1"/>
	</action-record>
    
    <action-method name="action-location-is-default-location">
   		<call class="com.axelor.apps.stock.web.LocationController" method="checkIsDefaultLocation"/>
	</action-method>
	
    <action-view name="action-location-view-create-inventory" title="Create inventory" model="com.axelor.apps.stock.db.Inventory">
		<view type="form" name="inventory-form"/>
  		<view type="grid" name="inventory-grid"/>
  		<context name="_location" expr="eval:__self__" if="__self__.typeSelect == 1 || __self__.typeSelect == 2"/>
	</action-view>
	
     <action-view name="action-location-view-location-content" title="Location content" model="com.axelor.apps.stock.db.LocationLine">
 		<view type="grid" name="location-line-grid" />
 		<view type="form" name="location-line-form" />
 		<domain>self.location.id = :locationId</domain>
   		<context name="locationId" expr="eval:__self__?.id" />
     </action-view>

     <action-view name="action-location-details-view-location-content" title="Location content details" model="com.axelor.apps.stock.db.LocationLine">
 		<view type="grid" name="location-line-details-grid" />
 		<view type="form" name="location-line-details-form" />
 		<domain>self.detailsLocation.id = :locationId</domain>
   		<context name="locationId" expr="eval:__self__?.id" />
     </action-view>

</object-views>
