<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="mass-move-needs-grid" title="Products to move"
    model="com.axelor.apps.stock.db.MassMoveNeeds" onNew="action-mass-move-needs-group-onnew">
    <field name="productToMove" required="true" domain="self.productTypeSelect = 'storable'"/>
    <field name="qtyToMove" required="true"/>
  </grid>

  <form name="mass-move-needs-form" title="Products to move"
    model="com.axelor.apps.stock.db.MassMoveNeeds" onNew="action-mass-move-needs-group-onnew">
    <panel name="mainPanel">
      <field name="massMove" required="true" readonly="true"/>
      <field name="productToMove" required="true" domain="self.productTypeSelect = 'storable'"/>
      <field name="qtyToMove" required="true"/>
    </panel>
  </form>

  <action-group name="action-mass-move-needs-group-onnew">
    <action name="action-mass-move-needs-record-set-massmove"/>
  </action-group>

  <action-record name="action-mass-move-needs-record-set-massmove"
    model="com.axelor.apps.stock.db.MassMoveNeeds">
    <field name="massMove" expr="eval: __parent__"/>
  </action-record>

</object-views>
