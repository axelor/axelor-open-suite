<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="stock-config-grid" title="Stock configurations" model="com.axelor.apps.stock.db.StockConfig">
        <field name="company" form-view="company-form" grid-view="company-grid"/>
    </grid>

	<form name="stock-config-form" title="Stock configuration" model="com.axelor.apps.stock.db.StockConfig" onNew="action-stock-config-record-default" width="large">
	  <panel name="main" >
	    <field name="company" form-view="company-form" colSpan="4" grid-view="company-grid"/>
	  </panel>
	  <panel name="virtualLocationsInformations" title="Virtual locations informations">
	    <field name="customerVirtualLocation" domain="self.typeSelect = 3" colSpan="4" form-view="location-form" grid-view="location-grid"/>
	    <field name="supplierVirtualLocation" domain="self.typeSelect = 3" colSpan="4" form-view="location-form" grid-view="location-grid"/>
	    <field name="inventoryVirtualLocation" domain="self.typeSelect = 3" colSpan="4" form-view="location-form" grid-view="location-grid"/>
		  <field name="productionVirtualLocation" domain="self.typeSelect = 3" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-production" if="__config__.app.isApp('production')"/>
	  </panel>
	  <panel name="stockMoveInformations" title="Stock move informations">
		  <panel colSpan="12">
			  <field name="hasOutSmForStorableProduct"/>
			  <field name="hasOutSmForNonStorableProduct"/>
			  <field name="hasInSmForStorableProduct"/>
			  <field name="hasInSmForNonStorableProduct"/>
		  </panel>
		  <panel colSpan="12">
			  <field name="receiptLocation" domain="self.company = company" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-supplychain" if="__config__.app.isApp('supplychain')"/>
			  <field name="pickupLocation" domain="self.company = company" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-supplychain" if="__config__.app.isApp('supplychain')"/>
			  <field name="wasteLocation" domain="self.company = company" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-production" if="__config__.app.isApp('production')"/>
			  <field name="componentLocation" domain="self.company = company" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-production" if="__config__.app.isApp('production')"/>
			  <field name="finishedProductsLocation" domain="self.company = company" colSpan="4" form-view="location-form" grid-view="location-grid" if-module="axelor-production" if="__config__.app.isApp('production')"/>
		  </panel>
	  </panel>
	  <panel name="customsInformation" title="Customs">
	  	<field name="customsWeightUnit" domain="self.unitTypeSelect = 1"/>
	  </panel>
	</form>
	
	<action-record name="action-stock-config-record-default" model="com.axelor.apps.stock.db.StockConfig">
		<field name="company" expr="eval: _company" if="_company != null"/>
		<field name="company"  expr="eval:__user__.activeCompany" if="_company == null &amp;&amp; __user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="_company == null &amp;&amp; __user__.activeCompany == null &amp;&amp; __repo__(Company).all().fetch().size == 1"/>
	</action-record>
	
	<action-view name="action-company-view-stock-config" title="Stock config (${ name })" model="com.axelor.apps.stock.db.StockConfig">
    	<view type="form" name="stock-config-form"/>
    	<context name="_showRecord" expr="eval: __self__.stockConfig?.id"/>
    	<context name="_company" expr="eval: __this__"/>
    </action-view>
	
</object-views>