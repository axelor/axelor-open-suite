<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.2.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="InvoiceLine">

    <many-to-one name="project" ref="com.axelor.apps.project.db.Project" title="Project"/>
    <many-to-many name="projectTaskSet" ref="com.axelor.apps.project.db.ProjectTask"
      title="Tasks"/>
    <decimal name="previousProgress" title="Previous progress" nullable="true"/>
    <decimal name="newProgress" title="New progress" nullable="true"/>
    <many-to-one name="expenseLine" title="Expense line"
      ref="com.axelor.apps.hr.db.ExpenseLine"/>
    <boolean name="isVentilatedReleasedProjectHoldBackLineInvoiceLine"
      title="Ventilated project hold back line invoice" nullable="false" default="false"/>
    <many-to-one name="projectHoldBackLine"
      ref="com.axelor.apps.project.db.ProjectHoldBackLine" title="Project holdBack line"/>
    <many-to-one name="relatedProjectHoldBackLineInvoiceLine"
      title="Related project hold back line invoice" ref="com.axelor.apps.account.db.InvoiceLine"/>
    <many-to-one name="relatedProjectHoldBackATI" title="Related project hold back ATI"
      ref="com.axelor.apps.businessproject.db.ProjectHoldBackATI"/>

  </entity>

</domain-models>
