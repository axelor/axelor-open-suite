<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid id="business-project-analytic-move-line-distribution-grid"
    name="analytic-move-line-distribution-grid" title="Analytic move lines"
    model="com.axelor.apps.account.db.AnalyticMoveLine" extension="true">
    <extend target="//field[@name='date']">
      <insert position="after">
        <field name="project" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>
  </grid>

  <form id="business-project-analytic-move-line-form" name="analytic-move-line-form"
    title="Analytic Move Line" model="com.axelor.apps.account.db.AnalyticMoveLine" extension="true">

    <extend target="/">
      <attribute name="onNew"
        value="action-analytic-move-line-record-currency,action-analytic-move-line-attrs-title-project"/>
      <attribute name="onLoad" value="action-analytic-move-line-attrs-title-project"/>
    </extend>

    <extend target="//field[@name='currency']">
      <insert position="after">
        <field name="project"
          domain="self.analyticDistributionTemplate != null AND self.isBusinessProject = true"
          if-module="axelor-business-project" form-view="business-project-form"
          grid-view="project-grid" if="__config__.app.isApp('business-project')"
          title="Business project"/>
      </insert>
    </extend>
  </form>

  <form id="business-project-analytic-move-line-distribution-form"
    name="analytic-move-line-distribution-form" title="Analytic move line"
    model="com.axelor.apps.account.db.AnalyticMoveLine" extension="true">

    <extend target="//field[@name='date']">
      <insert position="after">
        <field name="project" grid-view="project-grid" form-view="business-project-form"
          if-module="axelor-business-project" if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>

  </form>

  <action-attrs if-module="axelor-business-project"
    name="action-analytic-move-line-attrs-title-project">
    <attribute name="title" for="project"
      expr="eval: __config__.app.getApp('project')?.getProjectLabel()"
      if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project')?.getProjectLabel())"/>
  </action-attrs>

  <search-filters id="business-project-analytic-move-line-filters"
    name="analytic-move-line-filters" model="com.axelor.apps.account.db.AnalyticMoveLine"
    title="Analytic move line filters">
    <field name="project" hidden="true" if="!__config__.app.isApp('business-project')"/>
    <filter name="analytic-move-line-filters-type-select" title="Real (accounting)">
      <domain>self.typeSelect = 3</domain>
    </filter>
  </search-filters>

</object-views>