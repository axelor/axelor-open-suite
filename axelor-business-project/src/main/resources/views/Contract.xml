<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
              http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="contract-form" id="business-project-contract-form" title="Contract"
    model="com.axelor.apps.contract.db.Contract" extension="true">
    <extend target="//panel[@name='currentVersionEditorPanel']">
      <insert position="inside">
        <panel name="projectSetPanel" colSpan="12">
          <field name="frameworkContractProjectSet" widget="TagSelect" colSpan="12"
            domain="self.isBusinessProject = true"/>
        </panel>
      </insert>
    </extend>
  </form>

  <action-view name="action-view-contract-add-version"
    id="business-rpoject-action-view-contract-add-version" title="New version"
    model="com.axelor.apps.contract.db.ContractVersion">
    <view type="form" name="contract-version-next-form"/>
    <view type="grid" name="contract-version-next-grid"/>
    <view-param name="forceEdit" value="true"/>
    <context name="_xContractId" expr="eval: id"/>
    <context name="_xIsNextVersion" expr="true"/>
    <context name="_xProjectSet"
      expr="eval: currentContractVersion?.frameworkContractProjectSet"/>
  </action-view>
</object-views>
