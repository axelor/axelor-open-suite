<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <!-- time follow up -->
  <action-attrs name="action-project-attrs-set-time-reporting-values">
    <attribute for="$displayProgress" name="value"
      expr="eval: percentageOfProgress + ' %'"/>
    <attribute for="$displayConsumption" name="value"
      expr="eval: percentageOfConsumption + ' %'"/>
    <attribute for="$displayRemaining" name="value"
      expr="eval: remainingAmountToDo + ' ' + projectTimeUnit.name + '(s)'"
      if="remainingAmountToDo &amp;&amp; projectTimeUnit"/>
  </action-attrs>

  <action-view name="action-project-view-percentage-progress-custom"
    title="% of progress">
    <view type="custom" name="project-percentage-progress-custom"/>
  </action-view>

  <action-view name="action-project-view-percentage-consumption-custom"
    title="% of consumption">
    <view type="custom" name="project-percentage-consumption-custom"/>
  </action-view>

  <action-view name="action-project-view-remaining-to-do-custom"
    title="Remaining amount to do">
    <view type="custom" name="project-remaining-to-do-custom"/>
  </action-view>

  <custom title="% of progress" name="project-percentage-progress-custom" css="report-box">
    <dataset type="rpc">com.axelor.apps.businessproject.web.ProjectController:getProjectTimeFollowUpData</dataset>
    <template>
      <![CDATA[
        <i class='report-icon fa fa-line-chart' style='font-size:30px;top:40px;'></i>
        <div style='display:inline-block;'>
          <h1>{{first.progress}}</h1>
        </div>
      ]]>
    </template>
  </custom>

  <custom title="% of consumption" name="project-percentage-consumption-custom"
    css="report-box">
    <dataset type="rpc">com.axelor.apps.businessproject.web.ProjectController:getProjectTimeFollowUpData</dataset>
    <template>
      <![CDATA[
        <i class='report-icon fa fa-hourglass-half' style='font-size:30px;top:40px;'></i>
        <div style='display:inline-block;'>
          <h1>{{first.consumption}}</h1>
        </div>
      ]]>
    </template>
  </custom>

  <custom title="Remaining amount to do" name="project-remaining-to-do-custom"
    css="report-box">
    <dataset type="rpc">com.axelor.apps.businessproject.web.ProjectController:getProjectTimeFollowUpData</dataset>
    <template>
      <![CDATA[
        <i class='report-icon fa fa-tasks' style='font-size:30px;top:40px;'></i>
        <div style='display:inline-block;'>
          <h1>{{first.remaining}}</h1>
        </div>
      ]]>
    </template>
  </custom>
