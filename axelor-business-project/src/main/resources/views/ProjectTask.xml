<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
              
    <grid model="com.axelor.apps.project.db.ProjectTask" title="Tasks" name="business-project-project-task-grid" orderBy="-taskDate">
    	<field name="project"/>
    	<field name="name"/>
    	<field name="taskDate"/>
    	<field name="status"/>
    	<field name="progressSelect" widget="SelectProgress"/>
    	<field name="exTaxTotal"/>
    	<field name="toInvoice" if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
  		<field name="toInvoice" readonly="true" if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
    	<field name="invoiced"/>
    	<button name="updateToInvoiceBtn" title="Update to invoice" if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing" readonlyIf="invoiced" icon="fa-check-circle" onClick="action-project-task-method-update-to-invoice"/>
    </grid>
    
    <grid model="com.axelor.apps.project.db.ProjectTask" title="Tasks" name="project-task-invoicing-project-grid" orderBy="-taskDate" groupBy="project">
    	<field name="project"/>
    	<field name="name"/>
    	<field name="taskDate"/>
    	<field name="status"/>
    	<field name="progressSelect" widget="SelectProgress"/>
    	<field name="exTaxTotal" aggregate="sum"/>
    	<field name="quantity" aggregate="sum"/>
    	<field name="toInvoice" readonly="true" if="!__config__.app.getApp('business-project').automaticInvoicing"/>
  		<field name="toInvoice" if="__config__.app.getApp('business-project').automaticInvoicing"/>
    	<field name="invoiced"/>
    	<button name="updateToInvoiceBtn" title="Update to invoice" if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing" readonlyIf="invoiced" icon="fa-check-circle" onClick="action-team-task-method-update-to-invoice"/>
    </grid>

	<action-method name="action-project-task-method-update-to-invoice">
		<call class="com.axelor.apps.businessproject.web.ProjectTaskController" method="updateToInvoice"/>
	</action-method>
	
	<action-method name="action-project-task-method-update-discount">
		<call class="com.axelor.apps.businessproject.web.ProjectTaskController" method="updateDiscount"/>
	</action-method>
	
	<action-method name="action-project-task-method-compute">
		<call class="com.axelor.apps.businessproject.web.ProjectTaskController" method="compute"/>
	</action-method>
	
	<action-attrs name="action-project-task-attrs-scale-and-precision">
		<attribute name="scale" for="priceDiscounted" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="discountAmount" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
	</action-attrs>
	
</object-views>
