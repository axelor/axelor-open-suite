<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid name="timesheet-line-invoicing-project-grid" title="Log Times"
    model="com.axelor.apps.hr.db.TimesheetLine" orderBy="-date" groupBy="project"
    onNew="action-timesheet-line-method-set-product">
    <field name="employee" form-view="employee-form" grid-view="employee-grid"/>
    <field name="projectTask" form-view="project-task-form" domain="self.imputable IS TRUE"
      grid-view="business-project-task-grid" onChange="action-timesheet-line-method-set-product"/>
    <field name="date"/>
    <field name="product" if="__config__.app.getApp('timesheet')?.enableActivity"
      form-view="product-activity-form" grid-view="product-activity-grid"/>
    <field name="hoursDuration" width="62%" min="0.01" aggregate="sum"/>
    <field name="durationForCustomer" if-module="axelor-business-project"
      if="__config__.app.isApp('business-project')" aggregate="sum"/>
    <field name="toInvoice" readonly="true" if-module="axelor-business-project"
      if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
    <field name="toInvoice" if-module="axelor-business-project"
      if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
    <field name="enableEditor" hidden="true"/>
    <field name="invoiced"/>
    <field name="project" hidden="true"/>
    <button name="updateToInvoiceBtn" title="Update to invoice"
      if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"
      readonlyIf="invoiced" icon="fa-check-circle"
      onClick="action-timesheet-line-method-update-to-invoice"/>
  </grid>

  <grid id="business-project-timesheet-line-project-grid" name="timesheet-line-project-grid"
    title="Log Times" model="com.axelor.apps.hr.db.TimesheetLine" editable="true" extension="true">

    <extend target="/">
      <attribute name="onNew"
        value="business-project-action-timesheet-line-group-project-grid-on-new"/>
    </extend>

    <extend target="//field[@name='hoursDuration']">
      <insert position="after">
        <field name="durationForCustomer" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>

    <extend target="//field[@name='project']">
      <insert position="after">
        <button name="updateToInvoiceBtn" title="Update to invoice"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"
          readonlyIf="invoiced" icon="fa-check-circle"
          onClick="action-timesheet-line-method-update-to-invoice"/>
      </insert>
    </extend>
  </grid>

  <grid id="business-project-timesheet-line-project-task-grid"
    name="timesheet-line-project-task-grid" title="Log Times"
    model="com.axelor.apps.hr.db.TimesheetLine" editable="true" orderBy="-date" extension="true">

    <extend target="/">
      <attribute name="onNew"
        value="business-project-action-timesheet-line-group-project-grid-on-new"/>
    </extend>

    <extend target="//field[@name='hoursDuration']">
      <insert position="after">
        <field name="durationForCustomer" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>

    <extend target="//field[@name='project']">
      <insert position="after">
        <button name="updateToInvoiceBtn" title="Update to invoice"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"
          readonlyIf="invoiced" icon="fa-check-circle"
          onClick="action-timesheet-line-method-update-to-invoice"/>
      </insert>
    </extend>
  </grid>

  <grid id="business-project-timesheet-line-timesheet-grid"
    name="timesheet-line-timesheet-grid" title="Timesheet Lines"
    model="com.axelor.apps.hr.db.TimesheetLine" editable="true" orderBy="date" groupBy="date"
    extension="true">

    <extend target="//field[@name='project']">
      <attribute name="form-view" value="business-project-form"/>
      <attribute name="onChange" value="action-timesheet-line-group-project-onchange"/>
    </extend>

    <extend target="//field[@name='hoursDuration']">
      <insert position="after">
        <field name="toInvoice" width="100" readonly="true"
          if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" width="100" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>

  </grid>

  <grid id="business-project-timesheet-line-grid" name="timesheet-line-grid"
    title="Timesheet Lines" model="com.axelor.apps.hr.db.TimesheetLine" canNew="false"
    extension="true">

    <extend target="//field[@name='durationForCustomer']">
      <insert position="after">
        <field name="toInvoice" width="100" readonly="true"
          if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" width="100" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>

  </grid>

  <grid id="business-project-timesheet-line-timesheet-project-grid"
    name="timesheet-line-timesheet-project-grid" title="Timesheet Lines"
    model="com.axelor.apps.hr.db.TimesheetLine" editable="true" orderBy="date" extension="true">

    <extend target="//field[@name='project']">
      <attribute name="form-view" value="business-project-form"/>
      <attribute name="onChange" value="action-timesheet-line-group-project-onchange"/>
    </extend>

    <extend target="//field[@name='duration']">
      <insert position="after">
        <field name="durationForCustomer" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>

    <extend target="//field[@name='timesheet']">
      <insert position="after">
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>
  </grid>

  <grid id="business-project-timesheet-line-timesheet-readonly-grid"
    name="timesheet-line-timesheet-readonly-grid" title="Timesheet Lines"
    model="com.axelor.apps.hr.db.TimesheetLine" orderBy="date" groupBy="date" extension="true">

    <extend target="//field[@name='project']">
      <attribute name="form-view" value="business-project-form"/>
      <attribute name="onChange" value="action-timesheet-line-group-project-onchange"/>
    </extend>

    <extend target="//field[@name='hoursDuration']">
      <insert position="after">
        <field name="toInvoice" width="88%" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>
  </grid>

  <form id="business-project-timesheet-line-project-form" name="timesheet-line-project-form"
    title="Log Time" model="com.axelor.apps.hr.db.TimesheetLine" extension="true">

    <extend target="/">
      <attribute name="onNew"
        value="business-project-action-timesheet-line-group-project-form-on-new"/>
    </extend>

    <extend target="//label[@name='durationLabel']">
      <insert position="after">
        <field name="durationForCustomer" colSpan="3" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
        <label name="durationLabel" colSpan="1" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>

    <extend target="//field[@name='timesheet']">
      <insert position="after">
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>
  </form>

  <form id="business-project-timesheet-line-timesheet-form"
    name="timesheet-line-timesheet-form" title="Timesheet Line"
    model="com.axelor.apps.hr.db.TimesheetLine" extension="true">

    <extend target="//label[@name='durationLabel']">
      <insert position="after">
        <field name="durationForCustomer" colSpan="3" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
        <label name="durationLabel" colSpan="1" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>

    <extend target="//field[@name='timer']">
      <insert position="after">
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>
  </form>

  <form id="business-project-timesheet-line-timesheet-project-form"
    name="timesheet-line-timesheet-project-form" title="Timesheet Line"
    model="com.axelor.apps.hr.db.TimesheetLine" extension="true">

    <extend target="/">
      <attribute name="onNew"
        value="business-project-action-timesheet-line-group-project-form-on-new"/>
    </extend>

    <extend target="//label[@name='durationLabel']">
      <insert position="after">
        <field name="durationForCustomer" colSpan="3" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
        <label name="durationLabel" colSpan="1" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')"/>
      </insert>
    </extend>

    <extend target="//field[@name='timer']">
      <insert position="after">
        <field name="toInvoice" readonly="true" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').automaticInvoicing"/>
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp; !__config__.app.getApp('business-project').automaticInvoicing"/>
      </insert>
    </extend>
  </form>

  <form name="timesheet-line-timesheet-project-task-form" title="Timesheet Line"
    model="com.axelor.apps.hr.db.TimesheetLine"
    id="business-timesheet-line-timesheet-project-task-form" extension="true">
    <extend target="/">
      <attribute name="onNew"
        value="action-timesheet-line-group-business-project-task-form-on-new"/>
    </extend>

    <extend target="//field[@name='timesheet']">
      <insert position="before">
        <field name="durationForCustomer" colSpan="4" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')" showIf="project.isBusinessProject"/>
        <label name="durationLabel" colSpan="2" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')" showIf="project.isBusinessProject"/>
      </insert>

      <insert position="after">
        <field name="toInvoice" if-module="axelor-business-project"
          if="__config__.app.isApp('business-project')" showIf="project.isBusinessProject"/>
        <field name="project.isBusinessProject" hidden="true"/>
      </insert>
    </extend>
  </form>

  <form id="business-timesheet-line-timesheet-form" name="timesheet-line-timesheet-form"
    title="Timesheet Line" model="com.axelor.apps.hr.db.TimesheetLine" extension="true">

    <extend target="//field[@name='enableEditor']">
      <insert position="after">
        <field name="isExtraHours"/>
        <field name="adjustedOvertimeDuration" showIf="isExtraHours" readonly="true"/>
        <field name="startTime" showIf="isExtraHours" requiredIf="isExtraHours"
          onChange="action-timesheet-line-method-compute-duration-onchange"/>
        <field name="endTime" showIf="isExtraHours" requiredIf="isExtraHours"
          onChange="action-timesheet-line-method-compute-duration-onchange"/>
      </insert>
    </extend>

    <extend target="//field[@name='duration']">
      <attribute name="readonlyIf" value="isExtraHours"/>
    </extend>

  </form>

  <action-group name="action-timesheet-line-group-business-project-task-form-on-new">
    <action name="action-timesheet-line-group-project-task-form-on-new"/>
    <action name="action-timesheet-line-attrs-manage-business-fields"/>
  </action-group>

  <action-method name="action-timesheet-line-method-set-default-to-invoice">
    <call class="com.axelor.apps.businessproject.web.TimesheetLineBusinessController"
      method="setDefaultToInvoice"/>
  </action-method>

  <action-attrs name="action-timesheet-line-attrs-manage-business-fields">
    <attribute name="value" expr="eval: _invoicingType == 1 ? true : false"
      for="toInvoice"/>
  </action-attrs>

  <action-method name="action-timesheet-line-method-compute-duration-onchange">
    <call class="com.axelor.apps.businessproject.web.TimesheetLineBusinessController"
      method="computeDuration"/>
  </action-method>

  <action-group name="action-timesheet-line-group-project-onchange">
    <action name="action-timesheet-line-method-set-default-to-invoice"
      if="__config__.app.isApp('business-project')"/>
  </action-group>

  <action-group name="business-project-action-timesheet-line-group-project-grid-on-new">
    <action name="action-timesheet-line-group-project-grid-on-new"/>
    <action name="action-timesheet-line-record-to-invoice-parent"/>
  </action-group>

  <action-group name="business-project-action-timesheet-line-group-project-form-on-new">
    <action name="action-timesheet-line-group-project-form-on-new"/>
    <action name="action-timesheet-line-record-to-invoice-parent"/>
  </action-group>

  <action-record name="action-timesheet-line-record-to-invoice-parent"
    model="com.axelor.apps.hr.db.TimesheetLine">
    <field name="toInvoice"
      expr="eval: __parent__?.project?.isInvoicingTimesheet || __parent__?.parentProject?.parentProject?.isInvoicingTimesheet"
      if="__config__.app.isApp('business-project')"/>
  </action-record>

</object-views>
