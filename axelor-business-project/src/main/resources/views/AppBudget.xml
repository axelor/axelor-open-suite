<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <form id="business-project-app-budget-config-form" name="app-budget-config-form"
    title="App budget" model="com.axelor.studio.db.AppBudget" extension="true">

    <extend target="/">
      <attribute name="onLoad" value="action-app-budget-method-manage-budget-key"/>
    </extend>

    <extend target="//panel[@name='appBudgetPanel']">
      <insert position="after">
        <panel name="projectPanel" if-module="axelor-project" colSpan="12">
          <field name="enableProject" colSpan="3" readonly="true"/>
          <static name="$projectDisable" colSpan="9" hidden="true">
                        <![CDATA[<span class='label label-warning'>To activate this option, you need to disable budget key first in account configurations of companies.</span>]]></static>
        </panel>
      </insert>
    </extend>
  </form>

  <action-method name="action-app-budget-method-manage-budget-key">
    <call class="com.axelor.apps.businessproject.web.AppBudgetController"
      method="manageBudgetKey"/>
  </action-method>
</object-views>
