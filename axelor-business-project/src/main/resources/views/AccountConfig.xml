<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://axelor.com/xml/ns/object-views"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <form id="business-project-account-config-form" name="account-config-form"
    title="Account configuration" model="com.axelor.apps.account.db.AccountConfig" extension="true">
    <extend target="/">
      <attribute name="onLoad" value="action-business-project-account-config-group-onload"/>
    </extend>

    <extend target="//field[@name='budgetDistributionRoleSet']">
      <insert position="after">
        <static name="$budgetKeyDisable" colSpan="9" hidden="true">
                    <![CDATA[<span class='label label-warning'>To activate this option, you need to disable project management first in budget configuration.</span>]]></static>
      </insert>
    </extend>

    <extend
      target="//panel[@name='printingSettingsPanel']/field[@name='displayPartnerSeqOnPrinting']">
      <insert position="after">
        <field name="displayTimesheetOnPrinting" widget="boolean-switch"
          if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp;  __config__.app.isApp('timesheet')"/>
        <field name="displayExpenseOnPrinting" widget="boolean-switch"
          if-module="axelor-business-project"
          if="__config__.app.isApp('business-project') &amp;&amp;  __config__.app.isApp('expense')"/>
      </insert>
    </extend>
  </form>

  <action-group name="action-business-project-account-config-group-onload">
    <action name="action-account-config-group-onload"/>
    <action name="action-account-config-method-manage-budget-key"
      if="__config__.app.isApp('business-project')"/>
  </action-group>


  <action-method name="action-account-config-method-manage-budget-key">
    <call class="com.axelor.apps.businessproject.web.AccountConfigController"
      method="manageBudgetKey"/>
  </action-method>

</object-views>
