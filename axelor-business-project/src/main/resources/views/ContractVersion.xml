<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="contract-version-next-form" id="business-project-contract-version-next-form"
    title="Version" model="com.axelor.apps.contract.db.ContractVersion" extension="true">
    <extend target="/">
      <attribute name="onNew"
        value="action-business-project-contract-version-group-on-new"/>
    </extend>
    <extend target="//field[@name='supposedEndDate']">
      <insert position="after">
        <field name="frameworkContractProjectSet" widget="TagSelect" colSpan="12"/>
      </insert>
    </extend>
  </form>

  <!-- extend contract-version-next-form onNew action -->
  <action-group name="action-business-project-contract-version-group-on-new">
    <action name="action-contract-version-group-on-new"/>
    <action name="action-contract-version-attrs-set-projects"/>
  </action-group>

  <action-attrs name="action-contract-version-attrs-set-projects">
    <attribute for="frameworkContractProjectSet" name="value" expr="eval: _xProjectSet"/>
  </action-attrs>

</object-views>
