<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form id="business-project-employee-form" name="employee-form" title="Employee"
    model="com.axelor.apps.hr.db.Employee" extension="true">
    <extend target="/">
      <attribute name="onNew"
        value="action-business-project-employee-group-employee-on-new"/>
      <attribute name="onLoad"
        value="action-business-project-employee-group-employee-on-load"/>
    </extend>
    <extend target="//panel[@name='employeeFileListPanel']">
      <insert position="after">
        <panel name="analyticDistributionPanel" title="Analytics"
          if="__config__.app.isApp('business-project') &amp;&amp; __config__.app.isApp('account') &amp;&amp; __config__.app.getApp('account').getManageAnalyticAccounting()"
          colSpan="12">
          <field name="analyticDistributionTemplate"
            grid-view="analytic-distribution-template-grid"
            form-view="analytic-distribution-template-form"
            onChange="action-employee-group-analytic-distribution-template-onchange"/>
          <field name="axis1AnalyticAccount" grid-view="analytic-account-grid"
            form-view="analytic-account-form" readonlyIf="analyticDistributionTemplate"
            onSelect="action-employee-method-set-axis-domain"
            onChange="action-employee-method-axis-create-analytic-line"/>
          <panel name="axisAnalyticAccountPanel" colSpan="12"
            readonlyIf="analyticDistributionTemplate">
            <field name="axis2AnalyticAccount" grid-view="analytic-account-grid"
              form-view="analytic-account-form" readonlyIf="analyticDistributionTemplate"
              onSelect="action-employee-method-set-axis-domain"
              onChange="action-employee-method-axis-create-analytic-line"/>
            <field name="axis3AnalyticAccount" grid-view="analytic-account-grid"
              form-view="analytic-account-form" readonlyIf="analyticDistributionTemplate"
              onSelect="action-employee-method-set-axis-domain"
              onChange="action-employee-method-axis-create-analytic-line"/>
            <field name="axis4AnalyticAccount" grid-view="analytic-account-grid"
              form-view="analytic-account-form" readonlyIf="analyticDistributionTemplate"
              onSelect="action-employee-method-set-axis-domain"
              onChange="action-employee-method-axis-create-analytic-line"/>
            <field name="axis5AnalyticAccount" grid-view="analytic-account-grid"
              form-view="analytic-account-form" readonlyIf="analyticDistributionTemplate"
              onSelect="action-employee-method-set-axis-domain"
              onChange="action-employee-method-axis-create-analytic-line"/>
          </panel>
          <panel-related name="analyticMoveLineListPanel" field="analyticMoveLineList"
            grid-view="analytic-move-line-distribution-simplified-grid"
            form-view="analytic-move-line-distribution-simplified-form" colSpan="12"
            onChange="action-employee-group-analytic-move-line-list-onchange"/>
        </panel>
      </insert>
    </extend>
  </form>

  <!-- ANALYTICS -->
  <action-group name="action-employee-group-analytic-distribution-template-onchange">
    <action name="action-employee-method-create-distribution"/>
    <action name="action-employee-method-print-analytic-account"/>
  </action-group>

  <action-method name="action-employee-method-create-distribution">
    <call class="com.axelor.apps.businessproject.web.EmployeeProjectController"
      method="createAnalyticDistributionWithTemplate"/>
  </action-method>

  <action-method name="action-employee-method-print-analytic-account">
    <call class="com.axelor.apps.businessproject.web.EmployeeProjectController"
      method="printAnalyticAccounts"/>
  </action-method>

  <action-method name="action-employee-method-set-axis-domain">
    <call class="com.axelor.apps.businessproject.web.EmployeeProjectController"
      method="setAxisDomains"/>
  </action-method>

  <action-method name="action-employee-method-axis-create-analytic-line">
    <call class="com.axelor.apps.businessproject.web.EmployeeProjectController"
      method="createAnalyticAccountLines"/>
  </action-method>

  <action-group name="action-employee-group-analytic-move-line-list-onchange">
    <action name="action-employee-method-print-analytic-account"/>
    <action name="action-analytic-move-line-group-analytic-move-line-list-onchange"/>
  </action-group>

  <action-group name="action-employee-group-manage-analytic">
    <action name="action-employee-method-hide-axis-analytic-account"/>
    <action name="action-employee-method-print-analytic-account"/>
  </action-group>

  <action-method name="action-employee-method-hide-axis-analytic-account">
    <call class="com.axelor.apps.businessproject.web.EmployeeProjectController"
      method="manageAxis"/>
  </action-method>

  <action-group name="action-business-project-employee-group-employee-on-load">
    <action name="action-group-employee-on-load"/>
    <action name="action-employee-group-manage-analytic"/>
  </action-group>

  <action-group name="action-business-project-employee-group-employee-on-new">
    <action name="action-group-employee-on-new"/>
    <action name="action-employee-group-manage-analytic"/>
  </action-group>

</object-views>
