<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
	
	<grid name="indicator-generator-grouping-grid" title="Indicators groups" model="com.axelor.apps.base.db.IndicatorGeneratorGrouping">
		<field name="code" x-bind="{{code|unaccent|uppercase}}"/>
		<field name="name"/>
		<field name="path"/>
	</grid>
	
	<form name="indicator-generator-grouping-form" title="Indicators groups" model="com.axelor.apps.base.db.IndicatorGeneratorGrouping">
		<panel name="mainPanel" >
			<field name="code" x-bind="{{code|unaccent|uppercase}}" />
			<field name="name" colSpan="12"/>
		</panel>
		
		<panel-related name="indicatorGeneratorSetPanel" field="indicatorGeneratorSet" colSpan="12" form-view="indicator-generator-form" grid-view="indicator-generator-grid"/>
		
		<panel name="infoPanel">
			<field name="result" colSpan="12"/>
			<field name="log" colSpan="12" />
		</panel>
		
		<panel sidebar="true" name="executionPanel" title="Execution">
			<button name="runBtn" title="Execute" onClick="save,com.axelor.apps.base.web.IndicatorGeneratorGroupingController:run"/>
		</panel>
		
		<panel sidebar="true" name="exportPanel" title="Export">
			<field name="path"/>
			<button name="exportBtn" title="Export indicators"  onClick="save,com.axelor.apps.base.web.IndicatorGeneratorGroupingController:export"/>
		</panel>
	</form>

</object-views>