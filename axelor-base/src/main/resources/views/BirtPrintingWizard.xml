<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="birt-printing-wizard-grid" title="Birt printing wizard"
    model="com.axelor.apps.base.db.BirtPrintingWizard">
    <field name="name"/>
    <field name="metaModel"/>
  </grid>

  <form name="birt-printing-wizard-form" title="Birt printing wizard"
    model="com.axelor.apps.base.db.BirtPrintingWizard" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="metaModel" onChange="action-birt-printing-wizard-method-model-on-change"/>
      <field name="recordValue" widget="EvalRefSelect" title="Select record"
        x-eval-target="record.metaModel.fullName" x-eval-target-name="record.metaModelTargetName"
        x-eval-value="record.recordValue" x-eval-title="record.recordTitle"/>
      <button onClick="save,action-method-print-birt" name="printBtn" title="Print"
        readonlyIf="!metaModel || !recordValue"/>
    </panel>
    <panel name="hiddenPanel" hidden="true">
      <field name="metaModel.fullName"/>
      <field name="metaModelTargetName"/>
      <field name="recordTitle"/>
    </panel>
  </form>

  <action-method name="action-birt-printing-wizard-method-model-on-change">
    <call class="com.axelor.apps.base.web.BirtPrinintingWizardController"
      method="onChangeMetaModel"/>
  </action-method>

</object-views>
