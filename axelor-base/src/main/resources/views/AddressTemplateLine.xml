<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="address-template-line-grid" title="Address template lines"
    model="com.axelor.apps.base.db.AddressTemplateLine">
    <field name="title"/>
    <field name="metaField"/>
  </grid>

  <form name="address-template-line-form" title="Address template lines"
    model="com.axelor.apps.base.db.AddressTemplateLine">
    <panel name="mainPanel" title="Address Template Line">
      <field name="title"/>
      <field name="metaField"
        onSelect="action-address-template-line-method-on-meta-field-domain-address"/>
    </panel>
  </form>

  <action-method
    name="action-address-template-line-method-on-meta-field-domain-address">
    <call class="com.axelor.apps.base.web.AddressTemplateLineController"
      method="setDomainForMetaField"/>
  </action-method>


  <action-attrs name="action-address-template-line-attrs-on-meta-field-domain-address">
    <attribute name="domain" for="metaField"
      expr="eval:&quot;self.metaModel.name = 'Address' AND (self.relationship IS NULL OR self.relationship != 'OneToMany') AND self.typeName != 'byte[]'&quot;"/>
  </action-attrs>


</object-views>