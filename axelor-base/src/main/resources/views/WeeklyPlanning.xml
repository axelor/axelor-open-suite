<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="weekly-planning-grid" title="Weekly Planning"
    model="com.axelor.apps.base.db.WeeklyPlanning">
    <field name="name"/>
  </grid>

  <form name="weekly-planning-form" title="Weekly Planning"
    model="com.axelor.apps.base.db.WeeklyPlanning"
    onNew="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController:initPlanning, action-base-attrs-weekly-planning-type-select"
    onLoad="action-base-attrs-weekly-planning-type-select"
    onSave="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController:checkPlanning">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="typeSelect" if-module="axelor-production"
        if="__config__.app.isApp('production')||__config__.app.isApp('employee') || __config__.app.isApp('business-project')"
        required="true"/>
      <field name="bonusCoef" if-module="axelor-human-resource"
        if="__config__.app.isApp('employee')" hideIf="typeSelect == 2"/>
      <field name="leaveCoef" if-module="axelor-human-resource" hideIf="typeSelect == 2"/>
    </panel>
    <panel-related name="weekDaysPanel" field="weekDays" editable="true"
      grid-view="day-planning-grid" form-view="day-planning-form"/>
  </form>

  <action-attrs name="action-base-attrs-weekly-planning-type-select">
    <attribute
      if=" __config__.app.isApp('employee') &amp;&amp;  !__config__.app.isApp('production')"
      name="selection-in" expr="eval: [1]" for="typeSelect"/>
    <attribute
      if=" __config__.app.isApp('production')  &amp;&amp;  !__config__.app.isApp('employee')"
      name="selection-in" expr="eval: [2]" for="typeSelect"/>
  </action-attrs>
</object-views>