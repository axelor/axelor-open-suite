<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="weekly-planning-grid" title="Weekly Planning"
    model="com.axelor.apps.base.db.WeeklyPlanning">
    <field name="name"/>
  </grid>

  <form name="weekly-planning-form" title="Weekly Planning"
    model="com.axelor.apps.base.db.WeeklyPlanning"
    onNew="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController:initPlanning"
    onLoad="action-weekly-planning-method-set-time-values"
    onSave="save, action-weekly-planning-group-onsave">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="typeSelect" if-module="axelor-production"
        if="__config__.app.isApp('production')" required="true"/>
      <field name="bonusCoef" if-module="axelor-human-resource"
        if="__config__.app.isApp('employee')" hideIf="typeSelect == 2"/>
      <field name="leaveCoef" if-module="axelor-human-resource" hideIf="typeSelect == 2"/>
    </panel>
    <panel-related name="weekDaysPanel" field="weekDays" editable="true"
      grid-view="icalendar-event-week-planning-grid" form-view="icalendar-event-week-planning-form"/>
  </form>

  <action-group name="action-weekly-planning-group-onsave">
    <action name="action-weekly-planning-method-check-planning"/>
    <action name="action-weekly-planning-method-set-event-values"/>
  </action-group>

  <action-method name="action-weekly-planning-method-check-planning">
    <call class="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController"
      method="checkPlanning"/>
  </action-method>

  <action-method name="action-weekly-planning-method-set-event-values">
    <call class="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController"
      method="setICalEventValues"/>
  </action-method>

  <action-method name="action-weekly-planning-method-set-time-values">
    <call class="com.axelor.apps.base.web.weeklyplanning.WeeklyPlanningController"
      method="setTimeValues"/>
  </action-method>

</object-views>