<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">


  <grid name="geographical-area-grid" title="Geographical area"
    model="com.axelor.apps.base.db.GeographicalArea">
    <field name="name"/>
  </grid>

  <form name="geographical-area-form" title="Geographical area"
    model="com.axelor.apps.base.db.GeographicalArea" width="large">
    <panel name="mainPanel">
      <field name="name"/>
    </panel>
    <panel-related name="departmentSetPanel" colSpan="12" field="departmentSet"
      grid-view="department-grid" form-view="department-form"/>
  </form>

</object-views>