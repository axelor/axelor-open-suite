<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
   
    <grid name="product-variant-value-grid" title="Product variant values" model="com.axelor.apps.base.db.ProductVariantValue">
        <field name="name"/>
        <field name="code"/>
        <field name="priceExtra"/>
        <field name="applicationPriceSelect"/>
    </grid>
    
    <form name="product-variant-value-form" title="Product variant value" model="com.axelor.apps.base.db.ProductVariantValue">
    	<panel name="main" >
	        <field name="name"/>
	        <field name="code" x-bind="{{code|uppercase}}"/>
	        <field name="priceExtra"/>
	        <field name="applicationPriceSelect"/>
        </panel>
    </form>   

</object-views>