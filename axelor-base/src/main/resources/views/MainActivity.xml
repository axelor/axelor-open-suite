<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="main-activity-grid" title="Main Activities"
    model="com.axelor.apps.base.db.MainActivity">
    <field name="code"/>
    <field name="shortName"/>
    <field name="fullName"/>
    <field name="parentMainActivity"/>
    <field name="country"/>
  </grid>

  <form name="main-activity-form" title="Main Activity"
    model="com.axelor.apps.base.db.MainActivity">
    <panel name="mainPanel">
      <field name="fullName" colSpan="6"/>
      <field name="code" colSpan="6"/>
      <field name="shortName" colSpan="6"/>
      <field name="longName" colSpan="6"/>
      <field name="parentMainActivity" colSpan="6"/>
      <field name="country" colSpan="6"/>
      <field name="isFinal" colSpan="6"/>
    </panel>
  </form>

</object-views>