<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.2.xsd">

  <grid name="base-hazard-phrase-grid" title="Hazard phrases"
    model="com.axelor.apps.base.db.HazardPhrase">
    <field name="phraseCode"/>
    <field name="phrase"/>
    <field name="clpDesignation"/>
  </grid>

  <form name="base-hazard-phrase-form" title="Hazard phrase"
    model="com.axelor.apps.base.db.HazardPhrase">
    <panel name="mainPanel">
      <field name="phraseCode"/>
      <field name="phrase" colSpan="12"/>
      <field name="clpDesignation" colSpan="12"/>
    </panel>
  </form>

</object-views>