<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">
    
	<grid name="bank-grid" title="Bank Identifier Codes" model="com.axelor.apps.base.db.Bank" edit-icon="true">
		<field name="code"/>
		<field name="bankName"/>
		<field name="businessPartyPrefix"/>
		<field name="country.alpha2Code" title="Country Code"/>
		<field name="businessPartySuffix"/>
		<field name="branchIdentifier"/>
	</grid>
    
	<form name="bank-form" title="Bank Identifier Code" model="com.axelor.apps.base.db.Bank"
	onNew="action-attrs-bank-bank-address-fill-bank">
		<panel name="main">
			<field name="fullName" colSpan="12" showTitle="false" css="label-bold bold large">
				<editor x-show-titles="false">
					<field name="code" colSpan="3" placeholder="BIC" x-bind="{{code|uppercase}}"/>
					<field name="bankName" colSpan="9" placeholder="Bank Name"/>
				</editor>
			</field>

			<field name="bankDetailsTypeSelect"/>
		</panel>
		<panel>
			<field name="bankAddressList">
				<editor x-show-titles="false">
					<field name="code"/>
					<field name="address"/>
					<field name="label"/>
					<field name="bank" hidden="true"/>
				</editor>
			</field>
        </panel>
		<panel title="Details" colSpan="12" readonly="true">
			<field name="businessPartyPrefix" colSpan="3"/>
			<field name="country.alpha2Code" title="Country Code" colSpan="3"/>
			<field name="businessPartySuffix" colSpan="3"/>
			<field name="branchIdentifier" colSpan="3"/>
		</panel>
	</form>

	<action-attrs name="action-attrs-bank-bank-address-fill-bank">
		<attribute for="bankAddressList.bank" name="value" expr="eval: __self__"/>
	</action-attrs>
</object-views>