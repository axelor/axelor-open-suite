<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
    
    <grid name="product-company-grid" title="Product per company" model="com.axelor.apps.base.db.ProductCompany">
	    <field name="company"/>
		<field name="lastPurchasePrice" x-scale="2" width="250px"/>
		<field name="costPrice" x-scale="2"/>
		<field name="avgPrice" x-scale="2"/>
		<field name="company.currency" title="Company currency"/>
		<field name="salePrice" x-scale="2"/>
		<field name="saleCurrency"/>
	</grid>
	
	<form name="product-company-form" title="Product per company" model="com.axelor.apps.base.db.ProductCompany" 
		  onNew="action-product-company-record-init-product,action-product-company-attrs-scale-and-precision,action-product-company-attrs-change-title-based-on-inAti,action-product-company-attrs-company-domain"
		  onLoad="action-product-company-attrs-scale-and-precision,action-product-company-attrs-change-title-based-on-inAti,action-product-company-attrs-company-domain">
		<panel name="mainPanel" colSpan="12">
			<field name="product" readonly="true" form-view="product-form"/>
			<field name="company" required="true"/>
		</panel>
		<panel name="overridePanel" title="Company-specific information">
			<field name="procurementMethodSelect"/>
			<spacer/>	
			<field name="salePrice"/>
			<field name="saleCurrency"/>
			<field name="purchasePrice"/>
			<field name="purchaseCurrency"/>
			<field name="costPrice" readonlyIf="costTypeSelect != 1" onChange="action-product-record-compute-sale-price"/>
			<field name="costTypeSelect" onChange="action-product-group-cost-type-select-onchange"/>
			<field name="managPriceCoef" colSpan="12"/>
			<field name="avgPrice" readonly="true"/>
			<field name="company.currency" title="Company currency" readonly="true"/>
			<field name="autoUpdateSalePrice"/>
			<field name="lastPurchasePrice" readonly="true" colSpan="3"/>
		</panel>
	</form> 
	
	<action-record name="action-product-company-record-init-product" model="com.axelor.apps.base.db.ProductCompany">
		<field name="product" expr="eval: __parent__" if="__parent__?._model == 'com.axelor.apps.base.db.Product'"/>
	</action-record>
	
  <action-attrs name="action-product-company-attrs-change-title-based-on-inAti">
    <attribute name="title" for="salePrice" expr="eval: com.axelor.i18n.I18n.get('Sale price A.T.I.')" if="product?.inAti"/>
    <attribute name="title" for="salePrice" expr="eval: com.axelor.i18n.I18n.get('Sale price W.T.')" if="!product?.inAti"/>
    <attribute name="title" for="purchasePrice" expr="eval: com.axelor.i18n.I18n.get('Purchase price A.T.I.')" if="product?.inAti"/>
    <attribute name="title" for="purchasePrice" expr="eval: com.axelor.i18n.I18n.get('Purchase price W.T.')" if="!product?.inAti"/>
  </action-attrs>
  
  <action-attrs name="action-product-company-attrs-scale-and-precision">
		<attribute name="scale" for="salePrice" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="purchasePrice" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="lastPurchasePrice" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="costPrice" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="avgPrice" expr="eval: __config__.app.getNbDecimalDigitForUnitPrice()"/>
	</action-attrs>
	
	<action-attrs name="action-product-company-attrs-company-domain">
    <attribute name="domain" for="company" expr="eval: null"/>
    <attribute name="domain" for="company" expr="eval: &quot;NOT self.id IN (${__parent__.productCompanyList.findAll{it -> it?.company?.id != company?.id}.collect{it?.company?.id}.join(',')})&quot;" if="__parent__?.productCompanyList &amp;&amp; !__parent__?.productCompanyList.isEmpty() &amp;&amp; __parent__.productCompanyList.findAll{it -> it?.company?.id != company?.id}.size() > 0"/>
	</action-attrs>
	
</object-views>
