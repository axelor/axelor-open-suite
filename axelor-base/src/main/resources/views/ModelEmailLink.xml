<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="model-email-link-grid" title="Model email links"
    model="com.axelor.apps.base.db.ModelEmailLink" editable="true">
    <field name="metaModel" required="true"/>
    <field name="emailField" required="true"/>
    <field name="addressTypeSelect" selection-in="[1,2]"/>
  </grid>

  <grid name="model-manual-email-link-grid" title="Model email links"
    model="com.axelor.apps.base.db.ModelEmailLink" editable="true"
    onNew="action-base-record-manual-model-email-link-onnew">
    <field name="metaModel" required="true"/>
    <field name="filter" required="true"/>
    <field name="addressTypeSelect" hidden="true"/>
  </grid>

  <form name="model-email-link-form" title="Model email link"
    model="com.axelor.apps.base.db.ModelEmailLink">
    <panel name="mainPanel">
      <field name="metaModel" required="true"/>
      <field name="emailField" required="true"/>
      <field name="addressTypeSelect" selection-in="[1,2]"/>
    </panel>
  </form>

  <form name="model-manual-email-link-form" title="Model email link"
    model="com.axelor.apps.base.db.ModelEmailLink"
    onNew="action-base-record-manual-model-email-link-onnew">
    <panel name="mainPanel">
      <field name="metaModel" required="true"/>
      <field name="filter" required="true"/>
      <field name="addressTypeSelect" hidden="true"/>
    </panel>
  </form>

  <action-method name="action-base-method-model-email-link-onsave">
    <call class="com.axelor.apps.base.web.ModelEmailLinkController"
      method="validateModelFields"/>
  </action-method>

  <action-method name="action-base-method-model-manual-email-link-onsave">
    <call class="com.axelor.apps.base.web.ModelEmailLinkController"
      method="validateEmailLinkManualFiler"/>
  </action-method>

  <action-record name="action-base-record-manual-model-email-link-onnew"
    model="com.axelor.apps.base.db.ModelEmailLink">
    <field name="addressTypeSelect" expr="eval: ModelEmailLinkRepository.ADDRESS_TYPE_MANUAL"/>
  </action-record>

</object-views>