<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="global-tracking-log-line-grid" title="Global tracking log lines" model="com.axelor.apps.base.db.GlobalTrackingLogLine" >
		<field name="metaField" />
		<field name="previousValue" />
		<field name="newValue" />
	</grid>
	
	<grid name="global-tracking-log-line-large-grid" title="Global tracking log lines" model="com.axelor.apps.base.db.GlobalTrackingLogLine" orderBy="globalTrackingLog.dateT" >
		<field name="globalTrackingLog.metaModel" />
		<field name="metaField" />
		<field name="globalTrackingLog.relatedId" />
		<field name="globalTrackingLog.user" />
		<field name="globalTrackingLog.dateT"  />
		<field name="previousValue" />
		<field name="newValue" />
		<field name="globalTrackingLog" hidden="true" />
	</grid>

	<form name="global-tracking-log-line-form" title="Global tracking log line" model="com.axelor.apps.base.db.GlobalTrackingLogLine" >
		<panel colSpan="12">
			<field name="globalTrackingLog.metaModel" colSpan="3" />
			<field name="globalTrackingLog.relatedId" colSpan="2" />
			<field name="globalTrackingLog.user" colSpan="4" />
			<field name="globalTrackingLog.dateT" colSpan="3" />
			<field name="globalTrackingLog.typeSelect" hidden="true" />
			<field name="globalTrackingLog" hidden="true" />
		</panel>
		<panel colSpan="12" hidden="true" showIf="globalTrackingLog.typeSelect == 1 || globalTrackingLog.typeSelect == 3">
			<field name="metaField" colSpan="12" />
			<field name="previousValue" colSpan="6" hidden="true" showIf="globalTrackingLog.typeSelect == 3"/>
			<field name="newValue" colSpan="6" />
		</panel>
	</form>

	
</object-views>
	