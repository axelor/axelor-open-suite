   		<domain>self IN (SELECT p FROM User u join u.permissions p WHERE u.id = :userId) OR self IN (SELECT p FROM User u join u.group g join g.permissions p WHERE u.id = :userId) OR self IN(SELECT p FROM User u join u.roles r join r.permissions p WHERE u.id = :userId) OR self IN(SELECT p FROM User u join u.group g join g.roles r join r.permissions p WHERE u.id = :userId)</domain>
