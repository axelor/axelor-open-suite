<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.1.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="ProductVariantConfig" lang="java">

	<many-to-one name="productVariantAttr1" ref="com.axelor.apps.base.db.ProductVariantAttr"/>
	<many-to-one name="productVariantAttr2" ref="com.axelor.apps.base.db.ProductVariantAttr"/>
	<many-to-one name="productVariantAttr3" ref="com.axelor.apps.base.db.ProductVariantAttr"/>
	<many-to-one name="productVariantAttr4" ref="com.axelor.apps.base.db.ProductVariantAttr"/>
	<many-to-many name="productVariantValue1Set" ref="com.axelor.apps.base.db.ProductVariantValue"/>
	<many-to-many name="productVariantValue2Set" ref="com.axelor.apps.base.db.ProductVariantValue"/>
	<many-to-many name="productVariantValue3Set" ref="com.axelor.apps.base.db.ProductVariantValue"/>
	<many-to-many name="productVariantValue4Set" ref="com.axelor.apps.base.db.ProductVariantValue"/>
	
	<string name="name" title="Name">
		<![CDATA[
		String name = "";
		if(productVariantAttr1 != null)  {  name += productVariantAttr1.getName();  }
		if(productVariantAttr2 != null)  { 
			if(!name.equals(""))  {  name += ", ";  }
		 	name += productVariantAttr2.getName();
		}
		if(productVariantAttr3 != null)  { 
			if(!name.equals(""))  {  name += ", ";  }
		 	name += productVariantAttr3.getName();
		}
		if(productVariantAttr4 != null)  { 
			if(!name.equals(""))  {  name += ", ";  }
		 	name += productVariantAttr4.getName();
		}
		return name;
	    ]]>
	
	</string>
	
	
  </entity>

</domain-models>
