<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd">

    <module name="base" package="com.axelor.apps.base.db"/>

    <entity name="PrintTemplateLine">

        <string name="title" title="Title" namecolumn="true" large="true"/>
        <string name="content" title="Content" large="true"/>
        <one-to-many name="templateContextList" title="Context" ref="com.axelor.apps.message.db.TemplateContext" mappedBy="printTemplateLine"/>
        <many-to-one name="printTemplate" title="Print template" ref="com.axelor.apps.base.db.PrintTemplate"/>
        <integer name="sequence" title="Seq."/>        
        <string name="conditions" title="Conditions" large="true"/>
        <boolean name="isEditable" title="Editable"/>        
        <many-to-one name="parent" title="Parent" ref="com.axelor.apps.base.db.PrintTemplateLine"/>
        <one-to-many name="printTemplateLineList" title="Content lines" ref="com.axelor.apps.base.db.PrintTemplateLine" mappedBy="parent" orderBy="sequence"/>
        <boolean name="ignoreTheLine" title="Ignore the line"/>
        <one-to-one name="printTemplateLineTest" ref="com.axelor.apps.base.db.PrintTemplateLineTest" title="Print template line test"/>

    </entity>

</domain-models>
