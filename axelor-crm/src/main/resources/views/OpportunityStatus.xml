<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="opportunity-status-grid" canMove="true" title="Opportunity statuses"
    orderBy="sequence" model="com.axelor.apps.crm.db.OpportunityStatus">
    <field name="name"/>
  </grid>

  <form name="opportunity-status-form" title="Opportunity status"
    model="com.axelor.apps.crm.db.OpportunityStatus"
    onNew="action-opportunity-status-method-set-attrs-on-new"
    onLoad="action-opportunity-status-method-set-attrs-on-new">
    <panel name="mainPanel">
      <label colSpan="12"
        title="These statuses are essential to the operation of the process, they can be renamed but cannot be deleted."
        showIf="typeSelect == 1 || typeSelect == 2" hidden="true" css="label-bold"
        name="opportunityStatusEssentialLabel"/>
      <field name="name"/>
      <field name="sequence"/>
      <field name="typeSelect"/>
    </panel>
  </form>

  <action-method name="action-opportunity-status-method-set-attrs-on-new">
    <call class="com.axelor.apps.crm.web.OpportunityStatusController" method="setAttrs"/>
  </action-method>

</object-views>
