<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
    
    <grid name="target-configuration-grid" title="Target configurations" model="com.axelor.apps.crm.db.TargetConfiguration">
        <field name="name"/>
        <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
        <field name="user" form-view="user-form" grid-view="user-grid" />
       	<field name="team" form-view="team-form" grid-view="team-grid"/>
    </grid>

	<form name="target-configuration-form" title="Target configuration"
		model="com.axelor.apps.crm.db.TargetConfiguration" width="large">
		<panel name="informationPanel">
			<field name="$fullName" showTitle="false" colSpan="12">
				<viewer depends="name,code">
					<![CDATA[
						<h3>
							{{record.code}} - {{record.name}}
						</h3>
					]]>
				</viewer>
				<editor x-show-titles="true">
					<field name="code" x-bind="{{code|unaccent|uppercase}}"
						colSpan="4" css="label-bold bold large" required="true" />
					<field name="name" colSpan="8" css="label-bold bold large"
						required="true" />
				</editor>
			</field>
			<field name="user" colSpan="6" showIf="team == null" canNew="false"
				canView="false" canEdit="false" form-view="user-form" grid-view="user-grid" />
			<field if="__config__.app.getApp('base').getTeamManagement()"
				colSpan="6" name="team" showIf="user == null" canEdit="false"
				form-view="team-form" grid-view="team-grid" />
			<static />
		</panel>

		<panel-tabs name="otherDetailsPanel">
			<panel title="Opportunities">
				<field name="opportunityAmountWon" colSpan="3"/>
				<field name="opportunityCreatedNumber" colSpan="3"/>
				<field name="opportunityCreatedWon" colSpan="3"/>
			</panel>
			<panel name="eventsPanel" title="Events">
				<field name="callEmittedNumber" colSpan="3"/>
				<field name="meetingNumber" colSpan="3"/>
			</panel>
		</panel-tabs>

		<panel sidebar="true" name="characteristicsPanel" title="Characteristics"
			canCollapse="true">
			<field name="periodTypeSelect" />
			<field name="fromDate" colSpan="6" required="true" onChange="action-target-configuration-condition-dates"/>
			<field name="toDate" colSpan="6" required="true" onChange="action-target-configuration-condition-dates"/>
		</panel>
	</form>

	<action-condition name="action-target-configuration-condition-dates">
		<check field="toDate" if="toDate != null &amp;&amp; toDate &lt; fromDate" error="End date cannot be inferior to start date"/>
	</action-condition>
	
	<search-filters name="target-configuration-filters" model="com.axelor.apps.crm.db.Target" title="Targer filters">
    	<field name="team" hidden="true" if="!__config__.app.getApp('base').getTeamManagement()"/>
    </search-filters>
</object-views>
