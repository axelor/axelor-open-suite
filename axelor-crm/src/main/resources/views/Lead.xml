<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    
    <grid name="lead-grid" title="Leads" model="com.axelor.apps.crm.db.Lead" orderBy="-contactDate,statusSelect">
      <!--
      <toolbar>
        <button name="showMap" title="Map" onClick="action-show-leads-on-map-page" />
      </toolbar>
      -->
      <menubar>
        <menu name="leadReportsMenu" title="Reports" icon="fa-files-o">
          <item name="printItem" title="Print" action="action-crm-lead-method-print"/>
        </menu>
        <menu name="leadToolsMenu" title="Tools" icon="fa-wrench">
          <item name="assignToMeItem" title="Assign to me" action="com.axelor.apps.crm.web.EventController:assignToMeLead"/>
          <item name="checkDuplicateItem" title="Check duplicate" action="action-general-check-duplicate-records"/>
          <item name="importLeadsItem" title="Import leads" action="action-crm-method-lead-import-leads"/>
        </menu>
      </menubar>
    	<hilite color="warning" if="statusSelect == 1 &amp;&amp; (user == null || contactDate == null) &amp;&amp; $moment(todayDate).diff(createdOn,'days') &gt;= 15"/>
	    <hilite color="primary" if="statusSelect == 1"/>
	    <hilite color="danger" if="statusSelect == 2 &amp;&amp; $moment(todayDate).diff(updatedOn,'days') &gt;= 15"/>
	    <hilite color="success" if="statusSelect == 3"/>
  	  	<field name="createdOn" hidden="true"/>
    	<field name="updatedOn" hidden="true"/>
        <field name="name"/>
        <field name="firstName"/>
		<field name="enterpriseName"/>
        <field name="fixedPhone"/>
		<field name="emailAddress.address"/>
		<field name="contactDate"/>
		<field name="user" form-view="user-form" grid-view="user-grid"/>
        <field name="statusSelect"/>
        <button name="grabLeadBtn" hideIf="user.id == _internalUserId" icon="fa-suitcase" help="Take charge" onClick="com.axelor.apps.crm.web.EventController:assignToMeLead" />
		<button name="scheduleEventBtn" title="Schedule Event" icon="fa-group" onClick="action-lead-view-schedule-event"/>
		<button name="sendByEmailBtn" title="Send Email" icon="fa-envelope" onClick="action-send-by-email-with-template"/>
    </grid>
    
   	<form name="lead-form" title="Lead" model="com.axelor.apps.crm.db.Lead"
		onLoad="action-group-crm-lead-onload"
		onNew="action-group-crm-lead-onnew"
		onSave="action-crm-lead-method-check-name">

		<menubar>
            <menu name="leadReportsMenu" title="Reports" icon="fa-files-o" showTitle="true">
			  <item name="printItem" title="Print" action="save,action-crm-lead-method-print"/>
			</menu>
			<menu name="leadToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
			  <item name="scheduleEventItem" title="Schedule Event" action="save,action-lead-view-schedule-event"/>
			  <item name="createOpportunityItem" title="Create opportunity" action="save,action-lead-view-create-opportunity"/>
			  <item name="sendEmailItem" title="Send email" readonlyIf="statusSelect == 3" action="save,action-send-by-email-with-template"/>
			</menu>
		</menubar>
		<panel name="mainPanel" >
			<panel name="statusPanel" colSpan="12">
				<field name="statusSelect" colSpan="8" widget="NavSelect" showTitle="false" readonly="true"/>
				<panel name="isRecycledPanel" colSpan="4">
					<field name="isRecycled" showTitle="false" widget="boolean-switch" readonly="true">
						<viewer>
							<![CDATA[
								<h4>
									<span class="label label-default" style="background-color: #0285D8;" ng-show="record.isRecycled" x-translate>Recycled</span>
								<h4>
							]]>
						</viewer>
					</field>
					<field name="industrySector" showTitle="false" showIf="industrySector &amp;&amp; $readonly()">
        				<viewer>
							<![CDATA[
								<h4>
									<span class="label label-default" style="background-color: #0285D8;"> {{ record.name }} </span>
     							</h4>
							]]>
						</viewer>
      				</field>
				</panel>
			</panel>

			<panel name="imagePanel" colSpan="3">
				<field name="picture" showTitle="false" widget="Image" colSpan="12"/>
				<panel name="socialNetworkPanel" colSpan="12" showIf="fullName != null">
					<button name="meetingBtn" help="Create a meeting" icon="fa-pencil-square-o" link="" onClick="save,action-lead-view-meeting-event" colSpan="2"/>
					<button name="callBtn" help="Create a call" icon="fa-phone" link="" onClick="save,action-lead-view-call-event" colSpan="2"/>
					<button name="noteBtn" help="Create a note" icon="fa-sticky-note-o" link="" onClick="save,action-lead-view-note-event" colSpan="2"/>
					<button name="emailBtn" help="Create an email" icon="fa-envelope-o" link="" onClick="save,action-send-by-email-with-template" colSpan="2"/>
				</panel>
			</panel>

			<panel colSpan="9" name="generalInfoPanel" >
				<field name="$firstNameAndName" showTitle="false" colSpan="12" readonlyIf="statusSelect == 3" css="label-bold bold large">
                    <viewer depends="firstName,name">
                        <![CDATA[
                            {{record.firstName}} {{record.name}}
                        ]]>
                    </viewer>
					<editor x-show-titles="false">
						<field name="titleSelect" showTitle="false" placeholder="Civility" colSpan="2"/>
						<field name="name" showTitle="false" css="highlight" placeholder="Name" colSpan="5" onChange="action-crm-lead-method-check-name"/>
						<field name="firstName" showTitle="false" css="highlight" placeholder="First name" colSpan="5" onChange="action-crm-lead-method-check-name"/>
					</editor>
				</field>
				<static name="duplicateLeadText" hidden="true" colSpan="12"><![CDATA[<span class='label label-warning'>There is already a lead with this name.</span>]]></static>
				<field name="fullName" showTitle="false" colSpan="12" readonlyIf="statusSelect == 3">
					<editor x-show-titles="false">
						<field name="enterpriseName" css="label-bold bold large" colSpan="12" showIf="partner == null" placeholder="Enterprise name"/>
						<field name="industrySector" colSpan="6" form-view="industry-sector-form" grid-view="industry-sector-grid" canEdit="false"/>
						<field name="partner" colSpan="12" showIf="statusSelect == 3" domain="self.isContact = false" form-view="partner-form" grid-view="partner-grid"/>
					</editor>
				</field>
				<field name="jobTitleFunction" colSpan="6" placeholder="Function" showTitle="false" canNew="true"/>
				<field name="isNurturing" showIf="statusSelect == 2"/>
			</panel>
		</panel>

		<panel-tabs name="mainPanelTab">
			<panel name="contactPanel" title="Contact" colSpan="12">
				<panel name="contactDetailPanel" title="Contact details" readonlyIf="statusSelect == 3" colSpan="12">
					<field name="isDoNotCall" colSpan="3" hideIf="$readonly()"/>
					<field name="isDoNotSendEmail" colSpan="3" hideIf="$readonly()"/>
					<field name="$viewerCallAndEmail" showIf="$readonly()" colSpan="12" showTitle="false">
						<viewer>
							<![CDATA[
								<h4>
									<span class="label label-default" style="background-color: #0285D8; margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.isDoNotCall" x-translate>Rejection of calls</span>
									<span class="label label-default" style="background-color: #0285D8; margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.isDoNotSendEmail" x-translate>Rejection of e-mails</span>
								</h4>
							]]>
						</viewer>
					</field>
					<field name="mobilePhone" colSpan="4" placeholder="+33100000000" onChange="action-partner-method-normalize-mobilePhone" pattern="^\+?([\s()-.]*\d){7,}$"/>
					<field name="emailAddress" colSpan="4" canSelect="false" form-view="email-address-simple-form" x-show-icons="false">
						<editor x-show-titles="false">
							<field name="address" colSpan="12" placeholder="whatever@example.com" pattern="^[a-z0-9A-ZáàâäãåçéèêëíìîïñóòôöõúùûüýÿæœÁÀÂÄÃÅÇÉÈÊËÍÌÎÏÑÓÒÔÖÕÚÙÛÜÝŸÆŒ!#$%&amp;'*+/=?^_`{|}~-]+(?:\.[a-z0-9A-ZáàâäãåçéèêëíìîïñóòôöõúùûüýÿæœÁÀÂÄÃÅÇÉÈÊËÍÌÎÏÑÓÒÔÖÕÚÙÛÜÝŸÆŒ!#$%&amp;'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[a-z]{2,})$"/>
						</editor>
					</field>
					<field name="fixedPhone" colSpan="4" placeholder="+33100000000" onChange="action-partner-method-normalize-fixedPhone" pattern="^\+?([\s()-.]*\d){7,}$"/>
					<field name="webSite" colSpan="6" placeholder="http://www.url.com" pattern="^(?:http(?:s)?://)?\S+(?:\.\S+)+$"/>
				</panel>
								
				<panel name="addressPanel" title="Primary address" showIf="$readonly()" colSpan="12">
       				<field name="$address"  showTitle="false">
						<viewer depends="primaryAddress,primaryPostalCode,primaryCity,primaryState,primaryCountry">
							<![CDATA[
								{{record.primaryAddress}}<br/>
								{{record.primaryPostalCode}} {{record.primaryCity.name}}<br/>
								{{record.primaryState.name}}<span ng-if="record.primaryState.name &amp;&amp; record.primaryCountry.name"> - </span>{{record.primaryCountry.name}}
							]]>
						</viewer>
					</field>
       			</panel>
				
				<panel name="primaryAddress" title="Primary address" readonlyIf="statusSelect == 3" colSpan="12" hideIf="$readonly()">
					<field name="primaryAddress" colSpan="12"/>
					<field name="primaryPostalCode" colSpan="6"/>
					<field name="primaryCity" colSpan="6" form-view="city-form" grid-view="city-grid" onChange="action-attrs-lead-set-primary-state-country-postal-code" canNew="true"/>
					<field name="primaryState" colSpan="6" form-view="region-form" grid-view="region-grid" canNew="true"/>
					<field name="primaryCountry" colSpan="6" form-view="country-form" grid-view="country-grid"/>
				</panel>

				<panel name="descriptionPanel" title="Description" colSpan="12">
					<field name="description" colSpan="12" showTitle="false" widget="html" height="200"/>
				</panel>
			</panel>

			<panel name="activitiesPanel" title="Activities" itemSpan="12">
				<panel-related name="opportunitiesListPanel" canNew="false" colSpan="12" field="opportunitiesList" form-view="opportunity-form" grid-view="opportunity-dashlet-grid" readonlyIf="statusSelect == 3"/>
				<panel-dashlet name="leadEmailsPanel" action="action-lead-view-emails"/>
				<panel-dashlet name="leadMarketingCampaignPanel" if="__config__.app.isApp('marketing')" if-module="axelor-marketing" action="action-lead-view-marketing-campaigns"/>
			</panel>
			<panel name="eventPanel" title="Events">
				<panel-dashlet action="action-lead-view-events" title="Events" colSpan="12" height="1000"/>
			</panel>
		</panel-tabs>

		<panel name="actionsPanel" sidebar="true">
			<button name="grabLeadBtn" title="Assign to me" hideIf="user.id == _internalUserId || statusSelect == 3" icon="fa-suitcase" onClick="save,com.axelor.apps.crm.web.EventController:assignToMeLead"/>
			<button name="convertBtn" title="Convert" hideIf="statusSelect > 2 || !id" icon="fa-exchange" onClick="save,action-lead-view-convert-lead"/>
			<button name="recycleBtn" title="Recycle" hideIf="statusSelect != 3" icon="fa-recycle" onClick="save,action-lead-record-status-recycle,save"/>
			<button name="loseBtn" title="Lose" hideIf="statusSelect == 3" icon="fa-times" onClick="save,action-lead-view-lose,save" css="btn-danger"/>
			<button name="canceledBtn" title="Cancel" hideIf="statusSelect == 3" icon="fa-ban" onClick="save,action-lead-record-status-canceled,save"/>
			<button name="showPartnerBtn" title="Show Partner" showIf="partner" colSpan="6" onClick="action-lead-view-show-partner"/>
		</panel>
	
		<panel sidebar="true" name="followUpPanel" title="Follow-up" colSpan="12">
			<field name="user" canNew="false" canEdit="false" canView="false" colSpan="6" form-view="user-form" grid-view="user-grid" readonlyIf="statusSelect == 3"/>
			<field name="team" canEdit="false" colSpan="6" form-view="team-form" grid-view="team-grid" if="__config__.app.getApp('base').getTeamManagement()" readonlyIf="statusSelect == 3"/>
			<field name="contactDate" colSpan="6" readonlyIf="statusSelect == 3"/>
			<field name="closedReason" readonlyIf="statusSelect == 3" showIf="statusSelect == 3"/>
			<field name="lostReason" readonlyIf="statusSelect == 3" showIf="statusSelect == 3"/>
		</panel>
		
		<panel sidebar="true" name="marketingPanel" title="Marketing" readonlyIf="statusSelect == 3" colSpan="12">
			<field name="source" canEdit="false" colSpan="6" form-view="source-form" grid-view="source-grid" canNew="true"/>
			<field name="referredBy" colSpan="6"/>
			<field name="estimatedBudget" colSpan="6"/>
		</panel>
 		
 		<panel-mail name="mailPanel">
		  <mail-messages limit="4" />
		  <mail-followers />
	  	</panel-mail>

	</form>

    <form name="lead-lose-wizard-form" model="com.axelor.apps.crm.db.Lead" title="Loss confirmation" >
		<panel name="mainPanel">
			<field name="lostReason" colOffset="4" colSpan="4" widget="SuggestBox" canNew="false" canEdit="false"/>
			<field name="lostReasonStr" colOffset="4" colSpan="4" hideIf="!lostReason.freeText"/>
			<button name="lostReasonConfirmBtn" title="Confirm lost reason" onClick="action-lead-lost-reason-check,action-lead-method-confirm-lost-reason" colOffset="4" colSpan="4"/>
			<field name="lostReason.freeText" hidden="true"/>
		</panel>
    </form>

	<grid name="event-lead-grid" title="Leads" model="com.axelor.apps.crm.db.Lead" orderBy="enterpriseName">
        <field name="name"/>
        <field name="firstName"/>
		<field name="enterpriseName"/>
        <field name="fixedPhone"/>
		<field name="emailAddress.address"/>
		<field name="contactDate"/>
		<field name="user" form-view="user-form" grid-view="user-grid"/>
        <field name="statusSelect"/>
		<button name="addBtn" title="Add" icon="fa-plus" onClick="action-lead-event-add-attendee"/>
    </grid>
	
	<grid name="my-lead-grid" title="My Leads" model="com.axelor.apps.crm.db.Lead" orderBy="-contactDate,statusSelect">
		<hilite color="warning" if="statusSelect == 1 &amp;&amp; (user == null || contactDate == null) &amp;&amp; $moment(todayDate).diff(createdOn,'days') &gt;= 15"/>
	    <hilite color="primary" if="statusSelect == 1"/>
	    <hilite color="danger" if="statusSelect == 2 &amp;&amp; $moment(todayDate).diff(updatedOn,'days') &gt;= 15"/>
	    <hilite color="success" if="statusSelect == 3"/>
		<field name="createdOn" hidden="true"/>
		<field name="updatedOn" hidden="true"/>
		<field name="name"/>
		<field name="firstName"/>
		<field name="enterpriseName"/>
		<field name="fixedPhone"/>
		<field name="mobilePhone"/>
		<field name="emailAddress.address"/>
		<field name="statusSelect"/>
		<button name="scheduleEventBtn" title="Schedule Event" icon="fa-group" onClick="action-lead-view-schedule-event"/>
		<button name="sendByEmailBtn" title="Send Email" icon="fa-envelope" onClick="action-send-by-email-with-template"/>
	</grid>

	<action-condition name="action-lead-lost-reason-check">
		<check error="A lost reason must be selected" field="lostReason" if="lostReason == null || lostReason == 0"/>
	</action-condition>

	<action-method name="action-lead-method-confirm-lost-reason">
		<call class="com.axelor.apps.crm.web.LeadController" method="loseLead"/>
	</action-method>

	<action-group name="action-group-crm-lead-onnew">
		<action name="action-account-record-new"/>
		<action name="action-lead-default-record-new"/>
	</action-group>
	
	<action-group name="action-group-crm-lead-onload">
        <action name="action-crm-lead-method-check-name"/>
	</action-group>

	<action-method name="action-lead-event-add-attendee">
		<call class="com.axelor.apps.crm.web.EventController" method="addLeadAttendee"/>
	</action-method>
	
	<action-method name="action-crm-lead-method-print">
		<call method="print" class="com.axelor.apps.crm.web.LeadController"/>
	</action-method>

	<action-method name="action-crm-lead-method-check-name">
		<call class="com.axelor.apps.crm.web.LeadController" method="checkLeadName"/>
	</action-method>

    <action-record name="action-lead-default-record-new" model="com.axelor.apps.crm.db.Lead">
    	<field name="statusSelect" expr="1"/>
    	<field name="contactDate" expr="eval:__config__.app.getTodayDate(__user__.activeCompany)" if="contactDate == null"/>
    	<field name="user"  expr="eval:__user__"/>
    	<field name="team"  expr="call:com.axelor.apps.base.service.user.UserService:getUserActiveTeam()"/>
    </action-record>

	<action-record name="action-lead-record-status-start" model="com.axelor.apps.crm.db.Lead">
    	<field name="statusSelect" expr="2"/>
    </action-record>
    
   	<action-record name="action-lead-record-status-recycle" model="com.axelor.apps.crm.db.Lead">
    	<field name="statusSelect" expr="2"/>
    	<field name="isRecycled" expr="true"/>
    </action-record>
    
    <action-record name="action-lead-record-status-canceled" model="com.axelor.apps.crm.db.Lead">
    	<field name="statusSelect" expr="3"/>
    	<field name="closedReason" expr="1"/>
    </action-record>
    
    <action-attrs name="action-attrs-lead-set-primary-state-country-postal-code">
    	<attribute if="eval: primaryCity?.department?.region" name="value" expr="eval: primaryCity.department.region" for="primaryState"/>
 		<attribute if="eval: primaryCity?.country" name="value" expr="eval: primaryCity.country" for="primaryCountry"/>
 		<attribute name="readonly" expr="eval: primaryCity?.department?.region ? true: false" for="primaryState"/>
 		<attribute name="readonly" expr="eval: primaryCity?.country ? true: false" for="primaryCountry"/>
 		<attribute name="value" for="primaryPostalCode" expr="eval: primaryCity?.zip"/>
    </action-attrs>

    <action-view name="action-lead-view-lose" model="com.axelor.apps.crm.db.Lead" title="Lose">
	  	<view type="form" name="lead-lose-wizard-form"/>
	  	<view-param name="popup" value="reload"/>
	  	<view-param name="show-toolbar" value="false"/>
	  	<view-param name="show-confirm" value="false" />
  	  	<view-param name="popup-save" value="false"/>
	  	<view-param name="forceEdit" value="true" />
	  	<context name="_showRecord" expr="eval: __this__.id" />
	</action-view>

   	<action-view name="action-lead-view-convert-lead" title="Convert lead (${ fullName })" model="com.axelor.apps.base.db.Wizard">
		<view type="form" name="convert-lead-wizard-form"/>
		<context name="_lead" expr="eval: __self__"/>
		<context name="_primaryAddress" expr="eval: primaryAddress"/>
	</action-view>

	<action-view name="action-lead-view-show-partner" title="Partner" model="com.axelor.apps.base.db.Partner">
		<view type="form" name="partner-form"/>
		<context name="_showRecord" expr="eval: partner.id"/>
	</action-view>
    
    <!--     CREATE CRM OBJECT FROM LEAD -->
    
    <action-view name="action-lead-view-schedule-event" title="Schedule Event(${ fullName})" model="com.axelor.apps.crm.db.Event">
    	<view type="form" name="event-form"/>
    	<view type="grid" name="event-grid"/>
    	<context name="_lead" expr="eval: __this__"/>
    </action-view>
    
    <action-view name="action-lead-view-create-opportunity" title="Create opportunity (${ fullName })" model="com.axelor.apps.crm.db.Opportunity">
    	<view type="form" name="opportunity-form"/>
    	<context name="_lead" expr="eval: __self__"/>
    </action-view>
    
    <action-view name="action-lead-view-meeting-event" title="Meeting Event(${ fullName})" model="com.axelor.apps.crm.db.Event">
    	<view type="form" name="event-form"/>
    	<view type="grid" name="event-grid"/>
    	<context name="_lead" expr="eval: __this__"/>
    	<context name="_meeting" expr="eval: true"/>
    </action-view>
    
    <action-view name="action-lead-view-call-event" title="Call Event(${ fullName})" model="com.axelor.apps.crm.db.Event">
    	<view type="form" name="event-form"/>
    	<view type="grid" name="event-grid"/>
    	<context name="_lead" expr="eval: __this__"/>
    	<context name="_call" expr="eval: true"/>
    </action-view>
    
    <action-view name="action-lead-view-note-event" title="Call Event(${ fullName})" model="com.axelor.apps.crm.db.Event">
    	<view type="form" name="event-form"/>
    	<view type="grid" name="event-grid"/>
    	<context name="_lead" expr="eval: __this__"/>
    	<context name="_note" expr="eval: true"/>
    </action-view>
   	
<!--    	PORTLET -->

	<action-view name="action-lead-view-emails" title="Emails" model="com.axelor.apps.message.db.Message">
		<view type="grid" name="message-grid"/>
		<view type="form" name="message-form"/>
		<domain>self.mediaTypeSelect = 2 AND ((self.relatedTo1Select = 'com.axelor.apps.crm.db.Lead' AND self.relatedTo1SelectId = :id)
					OR (self.relatedTo2Select = 'com.axelor.apps.crm.db.Lead' AND self.relatedTo2SelectId = :id)
					OR (self.fromEmailAddress.id = :idEmail))</domain>
		<context name="id" expr="eval: id"/>
		<context name="idEmail" expr="eval: emailAddress?.id"/>
	</action-view>

	<action-view name="action-lead-view-events" title="Events" model="com.axelor.apps.crm.db.Event">
		<view type="cards" name="event-cards"/>
		<view type="grid" name="list-event-grid"/>
		<view type="form" name="event-form"/>
		<domain>self.lead.id = :_id</domain>
	</action-view>

	<action-method name="action-show-leads-on-map-page">
	  <call method="showLeadsOnMap" class="com.axelor.apps.crm.web.LeadController"/>
	</action-method>	
	
	<action-method name="action-crm-method-lead-import-leads">
	    <call class="com.axelor.apps.crm.web.LeadController" method="getLeadImportConfig" />
	</action-method>
	
   	<search-filters name="lead-filters" model="com.axelor.apps.crm.db.Lead" title="Lead filters">
   		<field name="team" hidden="true" if="!__config__.app.getApp('base').getTeamManagement()"/>
		<filter title="My Leads" name="my-leads-filter">
			<domain>self.user = :__user__</domain>
		</filter>
		<filter title="Unassigned Leads" name="unassigned-leads-filter">
			<domain>self.user IS NULL</domain>
		</filter>
		<filter title="My Team Leads" name="my-team-leads-filter">
			<domain>self.team = :_myActiveTeam</domain>
		</filter>
		<filter title="Active Leads" name="active-team-leads-filter">
			<domain>self.statusSelect = :_statusNewLead OR self.statusSelect = :_statusInProgressLead</domain>
		</filter>
	</search-filters>

</object-views>
