<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="contract-batch-grid" title="Contract batches"
    model="com.axelor.apps.contract.db.ContractBatch">
    <field name="code"/>
    <field name="actionSelect"/>
    <field name="company" if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="description"/>
  </grid>

  <form name="contract-batch-form" title="Contract batch"
    model="com.axelor.apps.contract.db.ContractBatch"
    onNew="action-contract-batch-record-default-onnew" onLoad="action-contract-batch-group-onload">
    <panel name="mainPanel">
      <field name="actionSelect" onChange="action-contract-batch-group-action-select-onchange"/>
      <field name="code"/>
      <field name="company" canEdit="false" widget="SuggestBox" form-view="company-form"
        grid-view="company-grid"/>
    </panel>
    <panel-tabs name="mainPanelTab">
      <panel name="invoicingPanel" title="Invoicing" showIf="actionSelect == 1">
        <field name="targetTypeSelect"/>
        <field name="invoicingDate" requiredIf="actionSelect == 1"/>
        <button name="showContractBtn" onClick="save,action-contract-method-show-contracts"
          title="Display the concerned contracts" colSpan="4"/>
      </panel>
      <panel name="informationPanel" title="Information">
        <field name="createdOn" title="Created on"/>
        <field name="createdBy" title="Created by" form-view="user-form" grid-view="user-grid"/>
        <field name="description" colSpan="12"/>
        <panel-related name="batchListPanel" field="batchList" colSpan="12"
          form-view="batch-form" grid-view="batch-grid" readonly="true"/>
      </panel>
    </panel-tabs>
    <panel name="actionsPanel" sidebar="true" title="Actions">
      <button name="batchBtn" title="Run batch"
        onClick="save,action-contract-method-run-batch" colSpan="12"/>

    </panel>
    <panel name="revaluatePanel" sidebar="true" hidden="true" showIf="actionSelect == 5">
      <field name="$contractsToRevaluate" showTitle="false" readonly="true">
        <viewer depends="$contractsToRevaluate">
        <![CDATA[
        <div style="padding-top: 2%; font-weight: 600" x-translate>Number of contracts to revaluate</div>
        <div style="padding: 2% 0 5% 0; font-size: 22px; font-weight: 600; border-bottom: 1px solid #eee;">{{record.$contractsToRevaluate}}</div>
        ]]>
        </viewer>
      </field>

    </panel>
  </form>

  <action-method name="action-contract-method-run-batch">
    <call class="com.axelor.apps.contract.web.ContractBatchController" method="runBatch"/>
  </action-method>

  <action-method name="action-contract-method-show-contracts">
    <call class="com.axelor.apps.contract.web.ContractBatchController" method="showContracts"/>
  </action-method>

  <search-filters name="contract-batch-filters"
    model="com.axelor.apps.contract.db.ContractBatch" title="Contract batch filters">
    <field name="company" hidden="true"
      if="!__config__.app.getApp('base')?.getEnableMultiCompany()"/>
  </search-filters>

  <action-record name="action-contract-batch-record-default-onnew"
    model="com.axelor.apps.contract.db.ContractBatch">
    <field name="invoicingDate"
      expr="eval:__config__.app.getTodayDate(__user__.activeCompany)"/>
  </action-record>

  <action-method name="action-contract-batch-method-count-contract-to-revaluate">
    <call class="com.axelor.apps.contract.web.ContractBatchController"
      method="countContractsToRevaluate"/>
  </action-method>

  <action-group name="action-contract-batch-group-action-select-onchange">
    <action name="action-contract-batch-method-count-contract-to-revaluate"
      if="actionSelect == __repo__(ContractBatch).REVALUATE_CONTRACTS"/>
  </action-group>

  <action-group name="action-contract-batch-group-onload">
    <action name="action-contract-batch-method-count-contract-to-revaluate"
      if="actionSelect == __repo__(ContractBatch).REVALUATE_CONTRACTS"/>
  </action-group>
</object-views>
