    <action-attrs name="action-contract-attrs-set-payment-mode-domain">
    	<attribute name="domain" for="paymentMode" expr="self.inOutSelect = 1" if="__parent__?.targetTypeSelect == 1"/>
    	<attribute name="domain" for="paymentMode" expr="self.inOutSelect = 2" if="__parent__?.targetTypeSelect == 2"/>
    </action-attrs>
    
