<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <action-group id="contract-action-group-crm-event-onnew"
    name="action-group-crm-event-onnew">
    <action name="action-icalendar-event-default-record"/>
    <action name="action-event-new-record"/>
    <action name="action-event-record-set-related-to-select"/>
    <action name="action-event-record-current-user"/>
  </action-group>

  <action-record name="action-event-record-set-related-to-select"
    model="com.axelor.apps.crm.db.Event">
    <field name="relatedToSelect" expr="eval:_relatedToSelect" if="_relatedToSelect!=null"/>
    <field name="relatedToSelectId" expr="eval:_relatedToSelectId"
      if="_relatedToSelectId!=null"/>
  </action-record>

</object-views>
