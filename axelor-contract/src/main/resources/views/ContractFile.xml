<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="contract-file-grid" title="Files"
    model="com.axelor.apps.contract.db.ContractFile">
    <toolbar>
      <button name="newLineBtn" title="New File" icon="fa-plus"
        onClick="action-contract-file-view-add-file"/>
      <button name="removeLineBtn" title="Remove lines" icon="fa-trash"
        onClick="action-contract-file-validate-confirm-remove, action-contract-file-method-remove"/>
    </toolbar>
    <field name="fileType"/>
    <field name="metaFile"/>
    <field name="recordDate"/>
    <field name="expirationDate"/>
    <field name="fileDescription"/>
  </grid>

  <form name="contract-file-form" title="File" model="com.axelor.apps.contract.db.ContractFile"
    onNew="action-contract-file-record-set-contract-version"
    onLoad="action-contract-file-group-file-onload">
    <panel name="mainPanel">
      <field name="fileType" colSpan="3"
        onChange="action-contract-file-record-set-expiration-date"/>
      <field name="metaFile" widget="binary-link" colSpan="3"
        onChange="action-contract-file-group-file-onchange"/>
      <field name="recordDate" colSpan="3" readonly="true"/>
      <field name="expirationDate" showIf="fileType.hasExpirationDate" colSpan="3"/>
      <field name="fileType.hasExpirationDate" hidden="true"/>
      <field name="fileDescription" colSpan="12" widget="html"/>
    </panel>

    <panel name="filePanel" title="File" height="500" showIf="$inlineUrl &amp;&amp; metaFile"
      hidden="true">
      <field name="$inlineUrl" hidden="true"/>
      <field name="$pdf" showTitle="false" readonly="true" colSpan="12">
        <viewer depends="$inlineUrl">
          <![CDATA[
              <>
                  <Box as="iframe" height="900" border="0" src={$inlineUrl}></Box>
              </>
            ]]>
        </viewer>
      </field>
    </panel>
  </form>

  <action-view name="action-contract-file-view-add-file" title="New File"
    model="com.axelor.apps.contract.db.ContractFile">
    <view type="form" name="contract-file-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="forceTitle" value="true"/>
    <context name="_contractVersion" expr="eval: __parent__?.currentContractVersion"/>
  </action-view>

  <action-validate name="action-contract-file-validate-confirm-remove">
    <alert message="Are you sure you want to remove the selected lines?"/>
  </action-validate>

  <action-record name="action-contract-file-record-set-record-date"
    model="com.axelor.apps.contract.db.ContractFile">
    <field name="recordDate" expr="eval: metaFile?__config__.date:null"/>
  </action-record>

  <action-record name="action-contract-file-record-set-expiration-date"
    model="com.axelor.apps.contract.db.ContractFile">
    <field name="expirationDate" expr="eval: null" if="!fileType?.hasExpirationDate"/>
  </action-record>

  <action-record name="action-contract-file-record-set-contract-version"
    model="com.axelor.apps.contract.db.ContractFile">
    <field name="contractVersion" expr="eval: _contractVersion"/>
  </action-record>

  <action-method name="action-contract-file-method-set-dms-file">
    <call class="com.axelor.apps.contract.web.ContractFileController" method="setDMSFile"/>
  </action-method>

  <action-method name="action-contract-file-method-set-inline-url">
    <call class="com.axelor.apps.contract.web.ContractFileController" method="setInlineUrl"/>
  </action-method>

  <action-method name="action-contract-file-method-remove">
    <call class="com.axelor.apps.contract.web.ContractFileController" method="remove"/>
  </action-method>

  <action-group name="action-contract-file-group-file-onchange">
    <action name="action-contract-file-record-set-record-date"/>
    <action name="save"/>
    <action name="action-contract-file-method-set-dms-file"/>
    <action name="action-contract-file-method-set-inline-url"/>
  </action-group>

  <action-group name="action-contract-file-group-file-onload">
    <action name="action-contract-file-method-set-dms-file"
      if="metaFile &amp;&amp; dmsFile == null"/>
    <action name="action-contract-file-method-set-inline-url"/>
  </action-group>

</object-views>
