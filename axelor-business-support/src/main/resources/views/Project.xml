<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <form name="project-form" id="business-support-project-form" title="Project"
    model="com.axelor.apps.project.db.Project" extension="true">
    <extend target="//panel[@name='logTimesPanel']">
      <insert position="after">
        <panel-include view="incl-project-announcement-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>
      </insert>
    </extend>
  </form>

  <form name="business-project-form" title="Business project"
    id="business-support-business-project-form" extension="true"
    model="com.axelor.apps.project.db.Project">
    <extend target="//panel[@name='logTimesPanel']">
      <insert position="after">
        <panel-include view="incl-project-announcement-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>
      </insert>
    </extend>
  </form>

  <form name="incl-project-announcement-panel-form" title="Project"
    model="com.axelor.apps.project.db.Project">
    <panel name="announcementPanel" title="Announcement">
      <panel-related name="announcementListPanel" field="announcementList"
        colSpan="12" form-view="project-announcement-form">
        <field name="title"/>
        <field name="date"/>
        <field name="content"/>
      </panel-related>
    </panel>
  </form>

  <search-filters id="business-support-project-filters" name="project-filters"
    title="Project filters" model="com.axelor.apps.project.db.Project">
    <field if="!__config__.app.getApp('base')?.getEnableMultiCompany()" name="company"
      hidden="true"/>
    <field if="!__config__.app.getApp('project')?.resourceManagement"
      name="resourceBookingList" hidden="true"/>
    <field
      if="!(__config__.app.isApp('business-project') &amp;&amp; __config__.app.getApp('business-project').getShowProductionOrderRelatedToProject())"
      name="productionOrderList" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="clientPartner" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="currency" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="priceList" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="contactPartner" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="customerAddress" hidden="true"/>
    <field if="!__config__.app.isApp('employee')" name="totalPlannedHrs" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="toInvoice" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="isInvoicingTimesheet"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="isInvoicingExpenses"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="isInvoicingPurchases"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="invoicingSequenceSelect"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="consolidatePhaseWhenInvoicing"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="invoicingComment"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="manualElementList"
      hidden="true"/>
    <field if="!__config__.app.isApp('business-support')" name="roadmapSet" hidden="true"/>
    <field if="!__config__.app.isApp('business-support')" name="announcementList"
      hidden="true"/>
    <field if="!__config__.app.isApp('employee')" name="productSet" hidden="true"/>
    <field if="!__config__.app.isApp('business-project')" name="isBusinessProject"
      hidden="true"/>
  </search-filters>


</object-views>
