<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <form name="project-form" id="business-support-project-form" title="Project"
    model="com.axelor.apps.project.db.Project" extension="true">
    <extend target="//panel-include[@view='incl-log-times-panel-form']">
      <insert position="after">
        <panel-include view="incl-project-announcement-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>
        <panel-include view="incl-project-roadmap-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>

      </insert>
    </extend>
  </form>

  <form name="business-project-form" title="Business project"
    id="business-support-business-project-form" extension="true"
    model="com.axelor.apps.project.db.Project">
    <extend target="//panel-include[@view='incl-log-times-panel-form']">
      <insert position="after">
        <panel-include view="incl-project-announcement-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>
        <panel-include view="incl-project-roadmap-panel-form"
          if-module="axelor-business-support" if="__config__.app.isApp('business-support')"/>

      </insert>
    </extend>
  </form>

  <form name="incl-project-announcement-panel-form" title="Project"
    model="com.axelor.apps.project.db.Project">
    <panel name="announcementPanel" title="Announcement">
      <panel-related name="announcementListPanel" field="announcementList"
        colSpan="12" form-view="project-announcement-form">
        <field name="title"/>
        <field name="date"/>
        <field name="content"/>
      </panel-related>
    </panel>
  </form>

  <form name="incl-project-roadmap-panel-form" title="Project"
    model="com.axelor.apps.project.db.Project">
    <panel title="Roadmap" name="roadmapPanel">
      <panel-related name="roadmapSetPanel" field="roadmapSet" colSpan="12"
        form-view="project-version-form">
        <field name="title"/>
        <field name="projectStatus"/>
        <field name="testingServerDate"/>
        <field name="productionServerDate"/>
      </panel-related>
    </panel>
  </form>
</object-views>
