<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="ticket-status-grid" title="Ticket statuses"
    model="com.axelor.apps.helpdesk.db.TicketStatus" orderBy="priority" canMove="true">
    <field name="name"/>
  </grid>
  <form name="ticket-status-form" title="Ticket status"
    model="com.axelor.apps.helpdesk.db.TicketStatus">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="priority"/>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
      <mail-followers/>
    </panel-mail>
  </form>

</object-views>
