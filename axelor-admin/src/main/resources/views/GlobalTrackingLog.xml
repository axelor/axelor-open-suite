<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="global-tracking-log-grid" title="Global tracking logs" model="com.axelor.apps.admin.db.GlobalTrackingLog" orderBy="dateT" >
		<field name="metaModel" />
		<field name="relatedId" />
		<field name="typeSelect" />
		<field name="user" />
		<field name="dateT" />
	</grid>
	
	

	<form name="global-tracking-log-form" title="Global tracking log" model="com.axelor.apps.admin.db.GlobalTrackingLog" >
		<panel colSpan="12">
			<field name="metaModel" />
			<field name="relatedId" colSpan="3" />
			<field name="typeSelect" colSpan="3" />
			<field name="user" />
			<field name="dateT" />
			
		</panel>
		<panel-related field="globalTrackingLogLineList" title="Global tracking log lines" form-view="global-tracking-log-line-form" grid-view="global-tracking-log-line-grid" colSpan="12" />
	</form>
	

	<form name="global-tracking-log-view-wizard-form" title="View global tracking logs" model="com.axelor.apps.base.db.Wizard" canSave="false" canNew="false" canDelete="false" canArchive="false" canCopy="false" canAttach="false" width="large" >
		<panel>
			<field name="$metaModel" title="Model" type="many-to-one" target="com.axelor.meta.db.MetaModel" colSpan="5" onChange="action-record-global-tracking-log-meta-model-on-change" />
			<field name="$metaField" title="Field" type="many-to-one" target="com.axelor.meta.db.MetaField" colSpan="5" hidden="true" showIf="$metaModel != null" domain="self.metaModel = :metaModel"/>
			<field name="$relatedId" title="Id" type="integer" colSpan="2" hidden="true" showIf="$metaModel != null" />
			<field name="$typeSelect" title="Type" selection="global.tracking.log.type.select" colSpan="2" />
			<field name="$user" title="User" type="many-to-one" target="com.axelor.auth.db.User" colSpan="4" />
			<field name="$fromDateT" title="From" type="datetime" colSpan="3" />
			<field name="$toDateT" title="To" type="datetime" colSpan="3" />
			<spacer colSpan="3"/>
			<button name="searchBtn" title="Search" onClick="action-method-show-global-tracking-logs-in-wizard"/>
		</panel>
		<panel-dashlet name="globalTrackingLogDashlet" action="action-view-global-tracking-log" colSpan="12" hidden="true" />
		<panel-dashlet name="globalTrackingLogLineDashlet" action="action-view-global-tracking-log-line" colSpan="12" hidden="true" />
	</form>
	
	<action-record name="action-record-global-tracking-log-meta-model-on-change" model="com.axelor.apps.base.db.Wizard">
		<field name="$metaField" expr="eval: null"/>
	</action-record>
	
	
	<action-view name="action-view-global-tracking-log" title="Global tracking logs" model="com.axelor.apps.admin.db.GlobalTrackingLog">
		<view type="grid" name="global-tracking-log-grid"/>
		<view type="form" name="global-tracking-log-form"/>
		<domain>  (:metaModel is null OR self.metaModel = :metaModel)
			AND (:typeSelect is null OR self.typeSelect = :typeSelect)
			AND (:relatedId is null OR self.relatedId = :relatedId)
			AND (self.dateT BETWEEN :fromDateT AND :toDateT)
			AND (:user is null OR self.user = :user)
		</domain>
		<context name="metaModel" expr="eval: metaModel"/>
		<context name="typeSelect" expr="eval: typeSelect"/>
		<context name="relatedId" expr="eval: relatedId"/>
		<context name="fromDateT" expr="eval: !fromDateT ? LocalDateTime.of(0,1,1,0,0) : LocalDateTime.parse(fromDateT, java.time.format.DateTimeFormatter.ISO_DATE_TIME).atZone(java.time.ZoneOffset.UTC).withZoneSameInstant(java.time.ZoneId.systemDefault()).toLocalDateTime()"/>
  		<context name="toDateT" expr="eval: !toDateT ? __datetime__ : LocalDateTime.parse(toDateT, java.time.format.DateTimeFormatter.ISO_DATE_TIME).atZone(java.time.ZoneOffset.UTC).withZoneSameInstant(java.time.ZoneId.systemDefault()).toLocalDateTime() "/>
		<context name="user" expr="eval: user"/>
	</action-view>
	
	
	<action-view name="action-view-global-tracking-log-line" title="Global tracking log lines" model="com.axelor.apps.admin.db.GlobalTrackingLogLine">
		<view type="grid" name="global-tracking-log-line-large-grid"/>
		<view type="form" name="global-tracking-log-line-form"/>
		<domain> (:metaModel is null OR self.globalTrackingLog.metaModel = :metaModel)
			AND (:metaField is null OR self.metaField = :metaField)
			AND (:typeSelect is null OR self.globalTrackingLog.typeSelect = :typeSelect)
			AND (:relatedId is null OR self.globalTrackingLog.relatedId = :relatedId)
			AND (self.globalTrackingLog.dateT BETWEEN :fromDateT AND :toDateT)
			AND (:user is null OR self.globalTrackingLog.user = :user)
		</domain>
		<context name="metaModel" expr="eval: metaModel"/>
		<context name="metaField" expr="eval: metaField"/>
		<context name="typeSelect" expr="eval: typeSelect"/>
		<context name="relatedId" expr="eval: relatedId"/>
		<context name="fromDateT" expr="eval: !fromDateT ? LocalDateTime.of(0,1,1,0,0) : LocalDateTime.parse(fromDateT, java.time.format.DateTimeFormatter.ISO_DATE_TIME).atZone(java.time.ZoneOffset.UTC).withZoneSameInstant(java.time.ZoneId.systemDefault()).toLocalDateTime()"/>
  		<context name="toDateT" expr="eval: !toDateT ? __datetime__ : LocalDateTime.parse(toDateT, java.time.format.DateTimeFormatter.ISO_DATE_TIME).atZone(java.time.ZoneOffset.UTC).withZoneSameInstant(java.time.ZoneId.systemDefault()).toLocalDateTime() "/>
		<context name="user" expr="eval: user"/>
	</action-view>
	
	<action-method name="action-method-show-global-tracking-logs-in-wizard">
		<call class="com.axelor.apps.admin.web.GlobalTrackingLogController" method="showGlobalTrackingLogsInWizard"/>
	</action-method>
	
	
</object-views>
	