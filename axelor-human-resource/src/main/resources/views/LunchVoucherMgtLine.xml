<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">
    
    <grid name="lunch-voucher-mgt-line-grid" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" editable="true" orderBy="employee">
        <hilite if="statusSelect==2" color="danger"/>
        <field name="employee"/>
        <field name="canteenEntries" aggregate="sum" title="Canteen"
               readonlyIf="$get('lunchVoucherMgt.statusSelect') == 4"/>
        <field name="daysOverseas" aggregate="sum" title="Overseas"
               readonlyIf="$get('lunchVoucherMgt.statusSelect') == 4"/>
        <field name="invitation" aggregate="sum" title="Invitation"
               readonlyIf="$get('lunchVoucherMgt.statusSelect') == 4"/>
        <field name="inAdvanceNbr" aggregate="sum" title="Advance"/>
        <field name="lunchVoucherNumber" aggregate="sum" title="Nbr lunch vouchers"/>
        <field name="givenToEmployee" title="Given"/>
        <field name="employee.lunchVoucherFormatSelect"/>
        <field name="statusSelect"/>
        <field name="lunchVoucherMgt.statusSelect" hidden="true"/>
        <field name="daysWorkedNbr" hidden="true"/>
    </grid>
    
    <grid name="lunch-voucher-mgt-line-employee-grid" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" orderBy="-lunchVoucherMgt.payPeriod.fromDate">
        <field name="lunchVoucherMgt.payPeriod.fromDate"/>
        <field name="lunchVoucherMgt.payPeriod.toDate"/>
        <field name="canteenEntries" aggregate="sum" title="Canteen"/>
        <field name="daysOverseas" aggregate="sum" title="Overseas"/>
        <field name="invitation" aggregate="sum" title="Invitation"/>
        <field name="inAdvanceNbr" aggregate="sum" title="Advance"/>
        <field name="lunchVoucherNumber" aggregate="sum" title="Nbr lunch vouchers"/>
        <field name="givenToEmployee" title="Given"/>
        <field name="lunchVoucherMgt.statusSelect"/>
    </grid>
    
    <grid name="lunch-voucher-mgt-line-payroll-grid" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" orderBy="-lunchVoucherMgt.payPeriod.fromDate">
        <field name="lunchVoucherMgt.payPeriod.fromDate"/>
        <field name="lunchVoucherMgt.payPeriod.toDate"/>
        <field name="canteenEntries" aggregate="sum" title="Canteen"/>
        <field name="daysOverseas" aggregate="sum" title="Overseas"/>
        <field name="invitation" aggregate="sum" title="Invitation"/>
        <field name="inAdvanceNbr" aggregate="sum" title="Advance"/>
        <field name="lunchVoucherNumber" aggregate="sum" title="Nbr lunch vouchers"/>
        <field name="givenToEmployee" title="Given"/>
        <field name="lunchVoucherMgt" hidden="true" />
    </grid>

	<form name="lunch-voucher-mgt-line-form" title="Lunch Voucher Line" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" width="large">
		<panel name="overview" title="Overview">
			<field name="employee" colSpan="6" form-view="employee-form" grid-view="employee-grid"/>
			<field name="lunchVoucherNumber" css="label-bold bold" colSpan="12" />
		</panel>
		<panel name="details" title="Details">
			<field name="canteenEntries" colSpan="6"
                   onChange="action-lunch-voucher-mgt-line-compute"
                   readonlyIf="lunchVoucherMgt.statusSelect == 4"/>
			<field name="daysOverseas" colSpan="6"
                   onChange="action-lunch-voucher-mgt-line-compute"
                   readonlyIf="lunchVoucherMgt.statusSelect == 4"/>
			 <field name="invitation" colSpan="6"
                    onChange="action-lunch-voucher-mgt-line-compute"
                    readonlyIf="lunchVoucherMgt.statusSelect == 4"/>
			 <field name="inAdvanceNbr" colSpan="6"/>
			<field name="givenToEmployee" colSpan="6"/>
            <field name="daysWorkedNbr" hidden="true"/>
            <field name="lunchVoucherMgt.statusSelect" hidden="true"/>
		</panel>
		<panel name="comment" title="Comments">
			<field name="comments" colSpan="12" showTitle="false" widget="Text"/>
		</panel>
        <panel title="Payroll preparation" sidebar="true" readonly="true" showIf="payrollPreparation">
            <field name="payrollPreparation" showTitle="false" />
            <field name="payrollPreparation.exported" />
        </panel>
	</form>
	
	<action-method name="action-lunch-voucher-mgt-line-compute">
		<call class="com.axelor.apps.hr.web.lunch.voucher.LunchVoucherMgtLineController" method="compute"/>
	</action-method>
	
</object-views>