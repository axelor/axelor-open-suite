<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid name="employee-bonus-type-grid" title="Employee bonus type" model="com.axelor.apps.hr.db.EmployeeBonusType" >
		<field name="code" x-bind="{{code|unaccent|uppercase}}" />
		<field name="label" />
		<field name="applicationCondition" />
		<field name="formula" />
    </grid>

    <form name="employee-bonus-type-form" title="Employee bonus type" model="com.axelor.apps.hr.db.EmployeeBonusType">
    	<panel name="mainPanel">
	    	<field name="code" x-bind="{{code|unaccent|uppercase}}" />
			<field name="label" />
			<field name="applicationCondition" colSpan="12" />
			<field name="formula" colSpan="12"/>
        </panel>
        <panel name="exportPanel">
        	<field name="payrollPreparationExport" />
	    	<field name="exportCode" />
        </panel>
    </form>

</object-views>