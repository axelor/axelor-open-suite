<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

	<grid name="other-costs-employee-grid" title="Employees' other costs" model="com.axelor.apps.hr.db.OtherCostsEmployee" canNew="false">
		<field name="amount" aggregate="sum"/>
		<field name="description"/>
	</grid>

	<form name="other-costs-employee-form" title="Employee's other costs" model="com.axelor.apps.hr.db.OtherCostsEmployee" cols="12" width="large">
		<panel name="mainPanel">
			<field name="amount" required="true"/>
			<field name="description" required="true"/>
		</panel>
	</form>

</object-views>