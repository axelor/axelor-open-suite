  <cards name="employee-card" title="Employee" model="com.axelor.apps.hr.db.Employee"
    css="rect-image" orderBy="contactPartner.simpleFullName">
    <toolbar>
      <button name="printEmployeePhoneBookBtn" title="Employee PhoneBook" icon="fa-print"
        onClick="action-print-employee-phonebook"/>
    </toolbar>
    <field name="contactPartner.picture"/>
    <field name="contactPartner.firstName"/>
    <field name="contactPartner.name"/>
    <field name="contactPartner.fixedPhone"/>
    <field name="contactPartner.mobilePhone"/>
    <field name="mainEmploymentContract.payCompany"/>
    <field name="mainEmploymentContract.companyDepartment"/>
    <field name="hrManager"/>
    <field name="external"/>
    <field name="$employeeStatus"/>
    <template><![CDATA[
		<>
			<Box style={{ height: 180, margin: "-1rem", ...(hrManager && { borderStyle: "inset" }), ...(external && { backgroundColor: "#7dc2ff" }), ...($employeeStatus == "former" && { backgroundColor: "#c9c9c9" }) }}>
			    <Box d="grid" gridTemplateColumns="35% 65%" style={{ height: 150 }}>
			        <Box d="flex" flexDirection="column" alignItems="center" justifyContent="center">
			            <Image src={$image('contactPartner.picture', 'content')} style={{ width: 128, height: 64 }}></Image>
			            <Box as="strong" mt={2} style={{ ...((external || $employeeStatus == "former") && { color: "black" }) }}>{contactPartner.firstName} {contactPartner.name}</Box>
			        </Box>
			        <Box position="absolute" ps={4} style={{ width: "60%", height: "100%", left: "35%", top: 0 }}>
			            <Box d="flex" alignItems="center" borderStart borderWidth={2} w={100} h={100} style={{ transform: "skew(-20deg, 0deg)" }}>
			                <Box style={{ height: "60%", width: "2rem", boxShadow: "rgb(0 0 0 / 25%) 3px 3px 8px", backgroundColor: "#ddd", ...($employeeStatus == "new" && { backgroundColor: "#20BCB5" }), ...(external && { backgroundColor: "#2b9cff" }), ...(hrManager && { backgroundColor: "#84429f" }) }} />

			                <Box d="flex" alignItems="center" w={100} style={{ position: "absolute", top: "20%", left: "0.25rem", minHeight: "60%" }}>
			                    <Box as="ul" m={0} p={0} w={100} style={{ listStyle: "none" }}>
			                        {(() => {
			                            const renderItem = (icon, value, title) => {
			                                return value && String(value).trim() && (
			                                    <Box as="li" d="flex" gap={24} style={{ transform: "skew(20deg, 0deg)" }}>
			                                        <Icon icon={icon} color={(hrManager || $employeeStatus == "new") ? "white" : "black"}/>
			                                        <Box as="span" style={{ ...((external || $employeeStatus == "former") && { color: "black" }) }}>{title && <strong>{title} : </strong>} {value}</Box>
			                                    </Box>
			                                );
			                            };
			                            return (
			                                <>
			                                    {renderItem("telephone", contactPartner.fixedPhone)}
			                                    {renderItem("phone", contactPartner.mobilePhone)}
			                                    {renderItem("house-fill", mainEmploymentContract.payCompany.name, "Company")}
			                                    {renderItem("house-fill", mainEmploymentContract.companyDepartment.name, "Department")}
			                                </>
			                            );
			                        })()}
			                    </Box>
			                </Box>
			            </Box>
			        </Box>
			    </Box>
			    <Box d="flex" justifyContent="flex-end" gap="4" alignItems="center" me={1}>
			        {hrManager && <Badge style={{ backgroundColor: "#84429f" }}>{_t('HR manager')}</Badge>}
			        {external && <Badge style={{ backgroundColor: "#2b9cff" }}>{_t('External')}</Badge>}
                    {$employeeStatus == "new" && <Badge style={{ backgroundColor: "#20BCB5" }}>{_t('New employee')}</Badge>}
			        {$employeeStatus == "former" && <Badge style={{ backgroundColor: "#707070" }}>{_t('Former employee')}</Badge>}
			    </Box>
			</Box>
		</>
		]]>
    </template>
  </cards>

