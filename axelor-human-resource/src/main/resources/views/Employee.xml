    <view type="grid" name="employee-bonus-mgt-line-employee-grid"/>
    <view type="form" name="employee-bonus-mgt-line-employee-form"/>
    <domain>self.employee.id = :employeeId</domain>
    <context name="employeeId" expr="eval: id"/>
