<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="employee-grid" title="Employee" model="com.axelor.apps.hr.db.Employee"
    orderBy="contactPartner.simpleFullName">
    <toolbar>
      <button name="printEmployeePhoneBookBtn" title="Employee PhoneBook" icon="fa-print"
        onClick="action-print-employee-phonebook"/>
    </toolbar>
    <field name="contactPartner.partnerSeq" width="120"/>
    <field name="contactPartner.simpleFullName"/>
    <field name="contactPartner.fixedPhone" widget="phone"
      x-placeholder-number-type="FIXED_LINE"/>
    <field name="contactPartner.mobilePhone" widget="phone"/>
    <field name="managerUser" form-view="user-form" grid-view="user-grid"/>
    <field name="mainEmploymentContract.companyDepartment" form-view="company-department-form"
      grid-view="company-department-grid"/>
    <field name="mainEmploymentContract.payCompany"/>
    <field name="archived" hidden="true"/>
  </grid>

  <grid name="employee-lite-grid" title="Employee" model="com.axelor.apps.hr.db.Employee">
    <field name="contactPartner" grid-view="partner-contact-grid"
      form-view="partner-contact-form"/>
    <field name="managerUser" form-view="user-form" grid-view="user-grid"/>
    <field name="$employeeStatus" title="Employee status"
      selection="hr.employee.employee.status.select" type="string"/>
    <field name="mainEmploymentContract.companyDepartment" form-view="company-department-form"
      grid-view="company-department-grid"/>
  </grid>

  <form name="employee-form" title="Employee" model="com.axelor.apps.hr.db.Employee"
    width="large" onLoad="action-group-employee-on-load" onNew="action-group-employee-on-new">

    <toolbar>
      <button name="annualReportBtn" title="Show expenses annual report" showIf="id"
        onClick="action-employee-view-annual-report-wizard"/>
      <button name="employeeReportBtn" title="Print" showIf="id"
        onClick="save,action-method-print-birt"/>
    </toolbar>

    <!-- New employee wizard -->
    <panel name="stepByStepControlsPanel" showIf="stepByStepSelect &lt; 5" colSpan="12">
      <button name="previousSBSBtn" colSpan="1" icon="fa-caret-left"
        readonlyIf="stepByStepSelect &lt; 2"
        onClick="validate,action-employee-record-previous-step,save"/>
      <field name="stepByStepSelect" colSpan="8" css="text-center" readonly="true"
        showTitle="false" widget="NavSelect" selection-in="[1, 2, 3, 4]"/>
      <button name="nextSBSBtn" colSpan="1" icon="fa-caret-right"
        readonlyIf="(user &amp;&amp; stepByStepSelect &gt;= 3) || (user == null &amp;&amp; stepByStepSelect &gt; 3) "
        onClick="validate,action-employee-record-next-step,save"/>
      <button name="finishBtn" colSpan="2" title="Finish"
        onClick="validate,action-employee-record-finish-sbs,save"
        showIf="stepByStepSelect == 4 || (user &amp;&amp; stepByStepSelect == 3)"/>
    </panel>

    <panel name="contactSBSPanel" colSpan="12" showIf="stepByStepSelect &lt; 5" sidebar="true">
      <field name="contactPartner" colSpan="12"
        domain="self.employee = null AND (self.partnerTypeSelect = 2 OR self.isContact = true)"
        form-view="partner-contact-form" grid-view="partner-contact-grid" showTitle="false"
        onChange="action-employee-attrs-fill-user">
        <editor x-viewer="true">
          <panel name="imagePanel" colSpan="12">
            <field name="picture" colSpan="12" css="center" showTitle="false" widget="Image"/>
          </panel>
          <panel name="contactDetailsPanel" colSpan="12" itemSpan="12">
            <field name="titleSelect" colSpan="2" showIf="!$readonly()"/>
            <field name="firstName"
              onChange="action-partner-record-simple-and-full-name,action-employee-contact-method-set-social-network-url"
              colSpan="5" showIf="!$readonly()"/>
            <field name="name" title="Name"
              onChange="action-partner-record-simple-and-full-name,action-employee-contact-method-set-social-network-url"
              colSpan="5" showIf="!$readonly()"/>

            <field name="emailAddress" canNew="true" form-view="email-address-simple-form"
              canSelect="false"/>
            <field name="webSite" placeholder="http://www.url.com" widget="url"
              pattern="^(?:http(?:s)?://)?\S+(?:\.\S+)+$"/>

            <field name="fixedPhone" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
            <field name="mobilePhone" widget="phone"/>
          </panel>
        </editor>
      </field>
    </panel>

    <!-- Basic info -->
    <panel name="phoneProSBSPanel" title="Work phones" showIf="stepByStepSelect == 1">
      <field name="fixedProPhone" widget="phone" colSpan="4"
        x-placeholder-number-type="FIXED_LINE"/>
      <field name="mobileProPhone" widget="phone" colSpan="4"/>
      <field name="phoneAtCustomer" widget="phone" colSpan="4"/>
    </panel>

    <panel name="personalInfoSBSPanel" title="Personal information"
      showIf="stepByStepSelect == 1">
      <field name="birthDate" colSpan="4"/>
      <field name="maritalStatus" colSpan="4"/>
      <field name="sexSelect" colSpan="4"/>
      <field name="countryOfBirth" colSpan="4"
        onChange="action-employee-attrs-country-of-birth-on-change"/>
      <field name="departmentOfBirth" colSpan="4" grid-view="hr-department-grid"
        onChange="action-employee-attrs-department-of-birth-on-change"
        onSelect="action-employee-attrs-department-of-birth-on-select"/>
      <field name="cityOfBirth" colSpan="4"
        onSelect="action-employee-attrs-city-of-birth-on-select"/>
      <field name="citizenship" colSpan="4"/>
      <field name="maritalName" colSpan="4"/>
      <field name="dependentChildren" colSpan="4"/>
      <field name="maidenName" colSpan="4" hideIf="sexSelect!='F'"/>
      <field name="socialSecurityNumber" colSpan="4" max="15" min="12"/>
    </panel>

    <panel name="emergencyContactSBSPanel" title="Contact in case of emergency"
      showIf="stepByStepSelect == 1">
      <field name="emergencyContact" colSpan="4"/>
      <field name="emergencyNumber" widget="phone" colSpan="4"/>
      <field name="emergencyContactRelationship" colSpan="4" title="Relationship"/>
    </panel>

    <panel name="rhInfoSBSPanel" title="HR information" showIf="stepByStepSelect == 1">
      <panel colSpan="12">
        <field name="managerUser" canEdit="false" canNew="false" canView="false" colSpan="4"
          form-view="user-form" grid-view="user-grid"/>
        <field name="exportCode" colSpan="4"/>
        <field name="bankDetails" colSpan="4" form-view="bank-details-form"
          grid-view="bank-details-grid" if="__config__.app.getApp('base')?.getManageMultiBanks()"
          if-module="axelor-cash-management" widget="SuggestBox"
          onSelect="action-employee-attrs-bank-details-on-select"/>
      </panel>

      <panel colSpan="12">
        <field name="weeklyPlanning" title="Weekly planning" canNew="true" colSpan="4"
          form-view="weekly-planning-form" grid-view="weekly-planning-grid"
          domain="self.typeSelect = 1"/>
        <field name="publicHolidayEventsPlanning" canEdit="false" colSpan="4"
          form-view="events-planning-form" grid-view="events-planning-grid"/>
        <field name="imposedDayEventsPlanning" canEdit="false" colSpan="4"
          form-view="events-planning-form" grid-view="events-planning-grid"/>
      </panel>

      <panel colSpan="12">
        <field name="hrManager" colSpan="4" widget="InlineCheckbox"/>
        <field name="external" colSpan="4" widget="InlineCheckbox"/>
      </panel>
    </panel>
    <!-- END OF Basic info -->

    <!-- Employment contract -->
    <panel name="contractualInfoSBSPanel" title="Contractual information"
      showIf="stepByStepSelect == 2">
      <field name="hireDate" colSpan="3" onChange="action-employee-attrs-set-seniority-date"/>
      <field name="seniorityDate" colSpan="3"/>
      <field name="bonusCoef" colSpan="3"/>
      <field name="profitSharingBeneficiary" colSpan="3"/>

      <field name="weeklyWorkHours" colSpan="3"/>
      <field name="dailyWorkHours" colSpan="3"/>
      <field name="hourlyRate" colSpan="3"/>
      <field name="$dailySalaryCost" title="Daily cost" colSpan="3" readonly="true"
        x-bind="{{hourlyRate * dailyWorkHours}}"/>
    </panel>

    <panel name="mainEmploymentContractSBSPanel" title="Main employment contract"
      showIf="stepByStepSelect == 2">
      <field name="mainEmploymentContract" colSpan="12" domain="self.employee.id = :id"
        showTitle="false">
        <editor x-viewer="true">
          <field name="payCompany" colSpan="3"/>
          <field name="executiveStatusSelect" colSpan="3"/>
          <field name="employment" colSpan="3"/>
          <field name="companyDepartment" colSpan="3" form-view="company-department-form"
            grid-view="company-department-grid"/>
        </editor>
      </field>
    </panel>

    <panel-related name="employmentContractsSBSPanel" field="employmentContractList"
      form-view="employment-contract-form" grid-view="employment-contract-employee-grid"
      showIf="stepByStepSelect == 2"/>
    <!-- END OF Employment contract -->

    <!-- Leaves and timesheets -->
    <panel name="leaveListSBSPanel" title="Leave List" if="__config__.app.isApp('leave')"
      showIf="stepByStepSelect == 3">
      <field name="leaveLineList" colSpan="12" form-view="leave-line-form"
        grid-view="leave-line-grid"/>
      <field name="negativeValueLeave" widget="InlineCheckbox"/>
    </panel>

    <panel name="timesheetsSBSPanel" title="Timesheets" if="__config__.app.isApp('timesheet')"
      showIf="stepByStepSelect == 3">
      <field name="timeLoggingPreferenceSelect" colSpan="3"
        validIf="(timesheetImputationSelect == 2 &amp;&amp; timeLoggingPreferenceSelect != 'days') || timesheetImputationSelect != 2"/>
      <field name="product" canEdit="false" colSpan="3"
        domain="self.isActivity = true AND self.dtype = 'Product'" form-view="product-form"
        grid-view="product-grid"/>
      <field name="timesheetReminder" colSpan="3"/>
      <field name="timesheetImputationSelect" colSpan="3"
        if="__config__.app.getApp('production')?.getEnableTimesheetOnManufOrder()"
        if-module="axelor-business-production"
        onChange="action-employee-attrs-timesheet-imputation-select-selection-in"/>
    </panel>
    <!-- END OF Leaves and timesheets -->

    <!-- User creation -->
    <panel name="userPanel" title="User" showIf="stepByStepSelect == 4">
      <field name="user" title="Attach to" onSelect="action-employee-attrs-change-domain"/>
      <button name="createUserBtn" title="Create new user"
        onClick="save,action-employee-view-open-user-creation-form" hideIf="user != null"
        hidden="true"/>
    </panel>
    <!-- END OF User creation -->
    <!-- END OF New employee wizard -->
    <panel name="contactPanel" showIf="stepByStepSelect == 5 &amp;&amp; $readonly()"
      sidebar="true">
      <field name="$viewerTags" showTitle="false" readonly="true" showIf="$readonly()"
        colSpan="12">
        <viewer>
          <![CDATA[
            <h4 style="text-align: center;">
                <span class="label label-important" style="background-color: #84429f;" margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.hrManager" x-translate>HR manager</span>
                <span class="label label-default" style="background-color: #2b9cff; margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.external" x-translate>External</span>
                <span class="label label-default" style="background-color: #20BCB5; margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.leavingDate == null && $moment(record.hireDate) > $moment().subtract(30, 'days')" x-translate>New employee</span>
                <span class="label label-default" style="background-color: #a1a1a1; margin: 5px 0 !important; display: inline-table; line-height: initial;" ng-show="record.leavingDate != null && $moment(record.leavingDate) < $moment()" x-translate>Former employee</span>
            </h4>
	        ]]>
        </viewer>
      </field>

      <field name="contactPartner.picture" widget="Image" showTitle="false">
        <viewer depends="contactPartner.picture">
          <![CDATA[
              <div style="text-align: center;">
                <img ng-show="record.contactPartner.picture" ng-src="{{$image('contactPartner.picture', 'content')}}"/>
                <img ng-show="!record.contactPartner.picture" src="img/partner-default.png" />
              </div>
          ]]>
        </viewer>
      </field>

      <field name="contactPartner.fullName" showTitle="false">
        <viewer depends="contactPartner.fullName">
          <![CDATA[
              <div style="text-align: center; font-weight: bold;">{{record.contactPartner.fullName}}</div>
          ]]>
        </viewer>
      </field>

      <panel name="hrPanel" showIf="managerUser || exportCode" title="Employee information"
        colSpan="12" itemSpan="12">
        <field name="managerUser" showIf="managerUser" colSpan="6"/>
        <field name="exportCode" showIf="exportCode" colSpan="6"/>
      </panel>

      <panel name="contactInformationPanel" title="Contact details" itemSpan="12"
        showIf="$readonly() &amp;&amp; (contactPartner.emailAddress.address || contactPartner.mobilePhone || contactPartner.fixedPhone || fixedProPhone || mobileProPhone || phoneAtCustomer)">
        <field name="$contactDetails" showIf="$readonly()" showTitle="false">
          <viewer
            depends="contactPartner.emailAddress.address, contactPartner.mobilePhone, contactPartner.fixedPhone, fixedProPhone, mobileProPhone, phoneAtCustomer">
            <![CDATA[
            <div ng-show="record.contactPartner.emailAddress.address"><i class="fa fa-envelope"></i> <a href="mailto:{{record.contactPartner.emailAddress.address}}">{{record.contactPartner.emailAddress.address}}</a></div>
            <div ng-show="record.contactPartner.mobilePhone"><i class="fa fa-phone"></i> <a href="tel:{{record.contactPartner.mobilePhone}}">{{record.contactPartner.mobilePhone}}</a></div>
            <div ng-show="record.contactPartner.fixedPhone"><i class="fa fa-phone"></i> <a href="tel:{{record.contactPartner.fixedPhone}}">{{record.contactPartner.fixedPhone}}</a></div>
            <div ng-show="record.fixedProPhone"><i class="fa fa-phone"></i> <a href="tel:{{record.fixedProPhone}}">{{record.fixedProPhone}}</a></div>
            <div ng-show="record.mobileProPhone"><i class="fa fa-phone"></i> <a href="tel:{{record.mobileProPhone}}">{{record.mobileProPhone}}</a></div>
            <div ng-show="record.phoneAtCustomer"><i class="fa fa-phone"></i> <a href="tel:{{record.phoneAtCustomer}}">{{record.phoneAtCustomer}}</a></div>
          ]]>
          </viewer>
        </field>
        <field name="contactPartner.emailAddress.address" hidden="true"/>
      </panel>

      <panel name="medicalVisitDatePanel" title="Medical visit" showIf="$readonly()"
        colSpan="12"
        if="__config__.app.isApp('employee') &amp;&amp; __config__.app.getApp('employee')?.getIsMedicalVisitEnabled()">
        <field name="lastMedicalVisitDate" hidden="true"/>
        <field name="nextMedicalVisitDate" hidden="true"/>
        <field name="$medicalVisitDates" showTitle="false" colSpan="12">
          <viewer depends="lastMedicalVisitDate, nextMedicalVisitDate">
            <![CDATA[
              <div style="font-weight: bold;" ng-show="!record.lastMedicalVisitDate" x-translate>Last medical visit : XX/XX/XXXX</div>
              <div style="font-weight: bold;" ng-show="record.lastMedicalVisitDate" x-translate>Last medical visit :</div>
              <div style="font-weight: bold;" ng-show="record.lastMedicalVisitDate">{{record.lastMedicalVisitDate}}</div>
              </br>
              <div style="font-weight: bold;" ng-show="record.nextMedicalVisitDate" x-translate>Next medical visit :</div>
              <div style="font-weight: bold;" ng-show="record.nextMedicalVisitDate">{{record.nextMedicalVisitDate}}</div>
            ]]>
          </viewer>
        </field>
      </panel>
    </panel>
    <panel name="editContactPanel" showIf="stepByStepSelect == 5 &amp;&amp; !$readonly()"
      sidebar="true" colSpan="12">
      <panel name="booleanPanel" colSpan="12">
        <field name="hrManager" colSpan="6" widget="InlineCheckbox"/>
        <field name="external" colSpan="6" widget="InlineCheckbox"/>
        <field name="managerUser" canEdit="false" canNew="false" canView="false" colSpan="6"
          form-view="user-form" grid-view="user-grid"/>
        <field name="exportCode" colSpan="6"/>
      </panel>
      <field name="contactPartner" colSpan="12"
        domain="self.employee = null AND (self.partnerTypeSelect = 2 OR self.isContact = true)"
        form-view="partner-contact-form" grid-view="partner-contact-grid" showTitle="false"
        onChange="action-employee-attrs-fill-user">
        <editor x-viewer="true">
          <panel name="imagePanel" colSpan="12">
            <field name="picture" colSpan="12" css="center" showTitle="false" widget="Image"/>
          </panel>
          <panel name="contactDetailsPanel" colSpan="12" itemSpan="12">
            <field name="titleSelect" colSpan="2" showIf="!$readonly()"/>
            <field name="firstName"
              onChange="action-partner-record-simple-and-full-name,action-employee-contact-method-set-social-network-url"
              colSpan="5" showIf="!$readonly()"/>
            <field name="name" title="Name"
              onChange="action-partner-record-simple-and-full-name,action-employee-contact-method-set-social-network-url"
              colSpan="5" showIf="!$readonly()"/>

            <field name="emailAddress" canNew="true" form-view="email-address-simple-form"
              canSelect="false"/>
            <field name="webSite" placeholder="http://www.url.com" widget="url"
              pattern="^(?:http(?:s)?://)?\S+(?:\.\S+)+$"/>

            <field name="fixedPhone" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
            <field name="mobilePhone" widget="phone"/>
          </panel>
        </editor>
      </field>
      <panel name="phoneProPanel" title="Work phones" colSpan="12" itemSpan="12"
        canCollapse="true" collapseIf="true">
        <field name="fixedProPhone" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
        <field name="mobileProPhone" widget="phone"/>
        <field name="phoneAtCustomer" widget="phone"/>
      </panel>
    </panel>

    <panel name="personalInfoPanel" title="Personal information" colSpan="12"
      showIf="stepByStepSelect == 5" canCollapse="true" collapseIf="true">
      <field name="birthDate" colSpan="4"/>
      <field name="maritalStatus" colSpan="4"/>
      <field name="sexSelect" colSpan="4"/>
      <field name="countryOfBirth" colSpan="4"
        onChange="action-employee-attrs-country-of-birth-on-change"/>
      <field name="departmentOfBirth" colSpan="4" grid-view="hr-department-grid"
        onChange="action-employee-attrs-department-of-birth-on-change"
        onSelect="action-employee-attrs-department-of-birth-on-select"/>
      <field name="cityOfBirth" colSpan="4"
        onSelect="action-employee-attrs-city-of-birth-on-select"/>
      <field name="citizenship" colSpan="4"/>
      <field name="maritalName" colSpan="4"/>
      <field name="dependentChildren" colSpan="4"/>
      <field name="maidenName" colSpan="4" hideIf="sexSelect!='F'"/>
      <field name="socialSecurityNumber" colSpan="4" max="15" min="12"/>
      <field name="bankDetails" colSpan="4" form-view="bank-details-form"
        grid-view="bank-details-grid" if="__config__.app.getApp('base')?.getManageMultiBanks()"
        if-module="axelor-cash-management" widget="SuggestBox"
        onSelect="action-employee-attrs-bank-details-on-select"/>

      <panel name="emergencyContactPanel" title="Contact in case of emergency" colSpan="12">
        <field name="emergencyContact" colSpan="4"/>
        <field name="emergencyNumber" widget="phone" colSpan="4"/>
        <field name="emergencyContactRelationship" colSpan="4" title="Relationship"/>
      </panel>
    </panel>


    <panel-tabs name="mainPanelTab" showIf="stepByStepSelect == 5">
      <panel name="employmentContractsPanel" title="Employment contracts">
        <panel name="contractualInfoPanel" title="Contractual information" colSpan="12"
          canCollapse="true" collapseIf="true">
          <field name="hireDate" colSpan="4"
            onChange="action-employee-attrs-set-seniority-date"/>
          <field name="seniorityDate" colSpan="4"/>
          <field name="leavingDate" colSpan="4"/>
          <field name="bonusCoef" colSpan="6"/>
          <field name="profitSharingBeneficiary" colSpan="6"/>

          <field name="weeklyWorkHours" colSpan="3"/>
          <field name="dailyWorkHours" colSpan="3"/>
          <field name="hourlyRate" colSpan="3"/>
          <field name="$dailySalaryCost" title="Daily cost" colSpan="3" readonly="true"
            x-bind="{{hourlyRate * dailyWorkHours}}"/>

          <panel name="planningPanel" title="Plannings" colSpan="12" canCollapse="true"
            collapseIf="true">
            <field name="weeklyPlanning" title="Weekly planning" canNew="true" colSpan="4"
              form-view="weekly-planning-form" grid-view="weekly-planning-grid"
              domain="self.typeSelect = 1"/>
            <field name="publicHolidayEventsPlanning" canEdit="false" colSpan="4"
              form-view="events-planning-form" grid-view="events-planning-grid"/>
            <field name="imposedDayEventsPlanning" canEdit="false" colSpan="4"
              form-view="events-planning-form" grid-view="events-planning-grid"/>
          </panel>

          <panel name="mainEmploymentContractPanel" title="Main employment contract"
            colSpan="12" canCollapse="true" collapseIf="true">
            <field name="mainEmploymentContract" colSpan="12" domain="self.employee.id = :id"
              showTitle="false">
              <editor x-viewer="true">
                <field name="payCompany" colSpan="3"/>
                <field name="executiveStatusSelect" colSpan="3"/>
                <field name="employment" colSpan="3"/>
                <field name="companyDepartment" colSpan="3"
                  form-view="company-department-form" grid-view="company-department-grid"/>
              </editor>
            </field>
          </panel>
        </panel>

        <field name="employmentContractList" colSpan="12" form-view="employment-contract-form"
          grid-view="employment-contract-employee-grid"/>
      </panel>

      <panel name="leaveListPanel" title="Leave List" if="__config__.app.isApp('leave')">
        <field name="leaveLineList" colSpan="12" form-view="leave-line-form"
          grid-view="leave-line-grid"/>
        <field name="negativeValueLeave" widget="InlineCheckbox"/>
      </panel>

      <panel name="timesheetsPanel" title="Timesheets" if="__config__.app.isApp('timesheet')">
        <field name="timeLoggingPreferenceSelect" colSpan="3"
          validIf="(timesheetImputationSelect == 2 &amp;&amp; timeLoggingPreferenceSelect != 'days') || timesheetImputationSelect != 2"/>
        <field name="product" canEdit="false" colSpan="3"
          domain="self.isActivity = true AND self.dtype = 'Product'" form-view="product-form"
          grid-view="product-grid"/>
        <field name="timesheetReminder" colSpan="3"/>
        <field name="timesheetImputationSelect" colSpan="3"
          if="__config__.app.getApp('production')?.getEnableTimesheetOnManufOrder()"
          if-module="axelor-business-production"
          onChange="action-employee-attrs-timesheet-imputation-select-selection-in"/>

        <panel-dashlet name="employeeUserTimesheetsPanel"
          action="action-employee-view-user-timesheets" colSpan="12"/>
      </panel>

      <panel name="benefitsPanel" title="Benefits and expenses" colSpan="12" itemSpan="12">
        <panel name="lunchVoucherPanel" title="Lunch vouchers"
          if="__config__.app.isApp('employee') &amp;&amp; __config__.app.getApp('employee')?.getLunchVoucher()"
          canCollapse="true" collapseIf="true">
          <field name="lunchVoucherFormatSelect" colSpan="3"/>
          <field name="lunchVoucherDistribution" showIf="lunchVoucherFormatSelect == 3"
            colSpan="3"/>

          <panel-dashlet name="lunchVouchersDashletPanel" title="Lunch vouchers"
            action="action-employee-view-show-lunch-voucher" colSpan="12"/>

          <panel-related name="lunchVoucherAdvanceListPanel"
            field="lunchVoucherAdvanceList" canEdit="false" canNew="false" canRemove="true"
            colSpan="12" form-view="lunch-voucher-advance-form"
            grid-view="lunch-voucher-advance-grid"/>
          <button name="addLunchVoucherAdvanceBtn" title="Add an advance" colSpan="3"
            icon="fa-ticket" onClick="save,action-lunch-voucher-advance-new"/>
        </panel>

        <panel name="expensesPanel" title="Expenses" canCollapse="true" collapseIf="true">
          <field name="companyCbSelect" onChange="action-hr-record-reset-company-cb-details"
            colSpan="3"/>
          <field name="companyCbDetails" colSpan="3" hidden="true"
            showIf="companyCbSelect > 1"/>
          <field name="analyticDistributionTemplate"
            grid-view="analytic-distribution-template-grid"
            form-view="analytic-distribution-template-form"
            if="__config__.app.isApp('account') &amp;&amp; __config__.app.getApp('account')?.getManageAnalyticAccounting()"/>
          <panel-related name="expenseLimitListPanel" title="Expense limits"
            field="expenseLimitList" colSpan="12" form-view="expense-limit-form"
            grid-view="expense-limit-grid"/>
          <panel-related name="employeeAdvanceListPanel" title="Employee advances"
