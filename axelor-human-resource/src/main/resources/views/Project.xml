<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.2.xsd">

  <form id="hr-sprint-project-form" model="com.axelor.apps.project.db.Project" title="Sprint"
    name="sprint-project-form" extension="true">

    <extend target="//button[@name='attachTasksToSprintBtn']">
      <insert position="before">
        <field name="sprint" domain="self.project.id = :id"
          onChange="action-project-attrs-update-allocation-period-set,action-project-attrs-refresh-allocation-lines"
          x-dirty="false" colSpan="4"/>
        <field name="allocationPeriodSet" type="many-to-many"
          target="com.axelor.apps.project.db.AllocationPeriod" title="Allocation periods"
          onSelect="action-project-attrs-set-periods-domain" widget="tag-select"
          onChange="action-project-attrs-refresh-allocation-lines" canNew="false" canEdit="false"
          x-dirty="false" colSpan="4"/>
        <button onClick="save,action-project-view-generate-allocations"
          name="generateAllocations" title="Generate allocations" colSpan="2"/>
      </insert>
    </extend>

    <extend target="//panel-dashlet[@name='tasksPerSprintPanel']">
      <insert position="before">
        <panel-dashlet action="action-project-method-view-allocation-lines"
          name="allocationLinePanel" colSpan="12"/>
        <panel-dashlet action="action-project-view-sprints-summary"
          name="sprintSummaryPanel" readonly="true" colSpan="12"/>
      </insert>
    </extend>

  </form>

  <form id="hr-attach-tasks-to-sprint-wizard-form" model="com.axelor.utils.db.Wizard"
    title="Attach tasks to sprint" name="attach-tasks-to-sprint-wizard-form" extension="true">

    <extend target="//button[@name='attachTasksToSprintBtn']">
      <attribute name="onClick"
        value="action-project-validate-upadte-project-plannings,action-project-method-attach-tasks-to-sprint-with-project-plannings"/>
    </extend>

  </form>

  <form model="com.axelor.utils.db.Wizard" title="Generate allocations"
    name="generate-allocations-wizard-form" onNew="action-generate-allocations-attrs-on-new">

    <panel name="mainPanel">
      <field name="allocationPeriodSet" type="many-to-many"
        target="com.axelor.apps.project.db.AllocationPeriod" title="Allocation periods"
        widget="tag-select" canNew="false" canEdit="false" x-dirty="false"/>
      <button onClick="action-project-method-generate-allocations" name="generateAllocations"
        title="Generate allocations"/>
    </panel>

  </form>

  <action-method name="action-project-method-view-allocation-lines">
    <call class="com.axelor.apps.hr.web.project.ProjectMenuController"
      method="viewAllocationLines"/>
  </action-method>

  <action-method
    name="action-project-method-attach-tasks-to-sprint-with-project-plannings">
    <call class="com.axelor.apps.hr.web.project.ProjectController"
      method="attachTasksToSprintWithProjectPlannings"/>
  </action-method>

  <action-method name="action-project-method-generate-allocations">
    <call class="com.axelor.apps.hr.web.project.ProjectController" method="generateAllocations"/>
  </action-method>

  <action-attrs name="action-project-attrs-refresh-allocation-lines">
    <attribute name="refresh" for="allocationLinePanel" expr="eval: true"/>
  </action-attrs>

  <action-attrs name="action-project-attrs-set-periods-domain">
    <attribute name="domain" for="allocationPeriodSet"
      expr="eval: sprint ? &quot;self.id in (${(sprint?.allocationPeriodSet?.collect{it.id})?.join(',')})&quot; : &quot;self.company.id = ${company?.id}&quot;"/>
  </action-attrs>

  <action-attrs name="action-project-attrs-update-allocation-period-set">
    <attribute name="value" for="allocationPeriodSet"
      expr="eval: __repo__(AllocationPeriod).all().filter('self.id in (?)',sprint?.allocationPeriodSet?.collect{it.id}).fetch().toSet()"
      if="sprint"/>
  </action-attrs>

  <action-attrs name="action-project-attrs-default-allocation-periods">
    <attribute name="value" for="allocationPeriodSet"
      expr="eval: sprint?.allocationPeriodSet"/>
  </action-attrs>

  <action-attrs name="action-generate-allocations-attrs-on-new">
    <attribute name="value" for="allocationPeriodSet" expr="eval: _allocationPeriodSet"/>
    <attribute name="domain" for="allocationPeriodSet"
      expr="eval: _allocationPeriodDomain"/>
  </action-attrs>

  <action-validate name="action-project-validate-upadte-project-plannings">
    <alert message="Do you want to create/update project planning lines?"
      confirm-btn-title="Yes" cancel-btn-title="No"
      action="action-project-method-attach-tasks-to-sprint"/>
  </action-validate>

  <action-view name="action-project-view-sprints-summary" title="Sprints summary"
    model="com.axelor.apps.project.db.Sprint">
    <view type="grid" name="sprint-summary-grid"/>
    <view type="form" name="sprint-form"/>
    <domain>self.project.id = :id</domain>
  </action-view>

  <action-view name="action-project-view-generate-allocations"
    title="Generate allocations" model="com.axelor.utils.db.Wizard">
    <view type="form" name="generate-allocations-wizard-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="popup-save" value="false"/>
    <context name="_allocationPeriodSet" expr="eval: allocationPeriodSet"/>
    <context name="_allocationPeriodDomain"
      expr="eval: sprint ? &quot;self.id in (${(sprint?.allocationPeriodSet?.collect{it.id})?.join(',')})&quot; : &quot;self.company.id = ${company?.id}&quot;"/>
    <context name="_projectId" expr="eval: id"/>
  </action-view>

</object-views>
