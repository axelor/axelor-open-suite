		<action name="action-timesheet-line-method-set-default-to-invoice" if="__config__.app.isApp('business-project')"/>
<!-- 		<action name="action-hr-timesheet-line-record-empty-product"/> -->
	</action-group>
	
	<action-group name="action-timesheet-line-group-onload">
		<action name="action-timesheet-line-attrs-set-duration-label"/>
		<action name="action-timesheet-line-attrs-set-visible-duration-title"/>
		<action name="action-timesheet-line-attrs-title-project"/>
		<action name="action-timesheet-line-atts-overview-readonly"/>
	</action-group>
	
	<action-attrs name="action-team-task-attrs-default-timesheet-line">
		<attribute name="value" expr="#{__date__}" for="date"/>
		<attribute name="value" for="teamTask" expr="eval: _teamTask" if="_teamTask != null"/>
		<attribute name="value" for="project" expr="eval: _project" if="_project != null"/>
		<attribute name="value" for="user" expr="eval: _user" if="_user != null"/>
		<attribute name="value" for="product" expr="eval:__user__.employee?.product"/>
		<attribute name="value" for="toInvoice" expr="eval: false" if="_teamTaskInvoicing == false"/>
		<attribute name="value" for="toInvoice" expr="eval: true" if="_teamTaskInvoicing == true &amp;&amp; _invoicingType == 1"/>
		<attribute name="value" for="toInvoice" expr="eval: false" if="_teamTaskInvoicing == true &amp;&amp; _invoicingType == 2"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-atts-overview-readonly">
		<attribute name="readonly" for="overviewPanel" expr="_projectIds != null"/>
	</action-attrs>
	
	<action-attrs name="action-hr-timesheet-line-attrs-domain-product">
		<attribute name="domain" for="product" expr="eval:project == null || project?.productSet.empty ? &quot;self.isActivity = true&quot; : &quot;self.isActivity = true AND EXISTS(SELECT p FROM Project p WHERE p = :project AND self MEMBER OF p.productSet)&quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-domain-project">
		<attribute name="domain" for="project" expr="eval: &quot; ${__user__.id} MEMBER OF self.membersUserSet OR self.assignedTo.id = ${__user__.id} &quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-domain-user">
		<attribute name="domain" expr="eval: (project?.membersUserSet != null &amp;&amp; project?.membersUserSet?.size() &gt; 0) ? &quot;self.id IN(${project?.membersUserSet?.collect{it.id}?.join(',')})&quot; : &quot;self.id IN (null)&quot;" for="user"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-domain-team-task">
		<attribute name="domain" for="teamTask" expr="eval: &quot; self.project.id = ${project?.id} &quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-title-project">
		<attribute name="title" for="project" expr="eval: __config__.app.getApp('project').getProjectLabel()" if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project').getProjectLabel())"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-set-duration-label">
	    <attribute name="title" for="durationLabel" expr="eval: __parent__?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : __parent__?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-set-visible-duration-title">
	    <attribute name="title" for="durationLabel" expr="eval: __parent__?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : __parent__?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')" />
	</action-attrs>
	
	<action-record name="action-hr-default-timesheet-line-project" model="com.axelor.apps.hr.db.TimesheetLine">
	    <field name="user" expr="eval:__user__" />
	    <field name="product" expr="eval:__user__.employee?.product" />
	</action-record>
	
	<action-record name="action-hr-default-timesheet-line-timesheet" model="com.axelor.apps.hr.db.TimesheetLine">
	    <field name="user" expr="eval:__parent__.user" />
	    <field name="product" expr="call:com.axelor.apps.hr.service.user.UserHrService:getTimesheetProduct(__repo__(User).find(__parent__.user.id))" if="__parent__.user != null"/>
	</action-record>
	
    <action-record name="action-timesheet-line-record-to-invoice-parent" model="com.axelor.apps.hr.db.TimesheetLine">
        <field name="toInvoice" 
        	expr="eval: _parent?.project?.isInvoicingTimesheet || _parent?.parentProject?.parentProject?.isInvoicingTimesheet"
            if="__config__.app.isApp('business-project')"/>
    </action-record>
	
	<action-record name="action-hr-timesheet-line-record-empty-product" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="product" expr="eval:null" if="!project?.productSet?.contains(product)"/>
	</action-record>

	<action-record name="action-timesheet-line-editor-record-get-default" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="product" expr="call:com.axelor.apps.hr.service.user.UserHrService:getTimesheetProduct(user)"/>
	</action-record>
	
	<action-validate name="action-timesheet-line-validate-date">
		<error message="This date is invalid. It must be included in the timesheet's period." if="date != null &amp;&amp; (date &lt; __parent__.fromDate || ( __parent__.toDate != null &amp;&amp; date &gt; __parent__.toDate))" action="action-timesheet-line-null-date"/>
	</action-validate>
	
	<action-validate name="action-team-task-validate-check-timesheet-line-date">
		<alert message="Line will be attached to a subsequent timesheet" if="date &lt; timesheet.fromDate"/>
	</action-validate>
	
	<action-record name="action-timesheet-line-null-date" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="date" expr="eval: null"/>
	</action-record>
	
	<action-record name="action-timesheet-line-default-project" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="project" expr="eval: __parent__"/>
	</action-record>
	
	<action-method name="action-timesheet-line-method-set-timesheet">
		<call class="com.axelor.apps.hr.web.timesheet.TimesheetLineController" method="setTimesheet"/>
	</action-method>
	
	<action-method name="action-timesheet-line-method-update-to-invoice">
		<call class="com.axelor.apps.hr.web.timesheet.TimesheetLineController" method="updateToInvoice"/>
	</action-method>

	<action-method name="action-timesheet-line-method-set-stored-duration" model="com.axelor.apps.hr.db.TimesheetLine">
        <call class="com.axelor.apps.hr.web.timesheet.TimesheetLineController" method="setStoredDuration"/>
	</action-method>
	
	<action-method name="action-timesheet-line-method-set-duration" model="com.axelor.apps.hr.db.TimesheetLine">
        <call class="com.axelor.apps.hr.web.timesheet.TimesheetLineController" method="setDuration"/>
	</action-method>
	
	<action-view name="action-team-task-view-time-spent" model="com.axelor.apps.hr.db.TimesheetLine" title="Timesheet Line Form">
  		<view name="timesheet-line-timesheet-teamtask-form" type="form"/>
  		<view-param name="popup" value="reload"/>
  		<view-param name="show-toolbar" value="false"/>
  		<view-param name="forceEdit" value="true"/>
  		<view-param name="forceTitle" value="true"/>
  		<context name="_teamTask" expr="eval: __self__"/>
  		<context name="_project" expr="eval: project"/>
  		<context name="_user" expr="eval: assignedTo"/>
  		<context name="_company" expr="eval: project.company"/>
  		<context name="_teamTaskInvoicing" expr="eval: teamTaskInvoicing"/>
		<context name="_invoicingType" expr="eval: invoicingType"/>
	</action-view>
	
	<action-view name="action-project-dashlet-validated-timeshet-lines" model="com.axelor.apps.hr.db.TimesheetLine" title="Validated Timesheet lines">
		<view type="grid" name="timesheet-line-project-grid"/>
		<view type="form" name="timesheet-line-timesheet-project-form"/>
		<view-param name="popup" value="true"/>
		<domain>self.timesheet.statusSelect = 3 and self.project.id in (:_projectIds)</domain>
