<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="timesheet-line-project-grid" title="Log Times" model="com.axelor.apps.hr.db.TimesheetLine" editable="true"
	onNew="action-hr-default-timesheet-line-project,action-timesheet-line-record-to-invoice-parent,action-timesheet-line-default-project" orderBy="-date">
		<field name="user" form-view="user-form" grid-view="user-grid"/>
		<field name="date" />
		<field name="product" requiredIf="toInvoice" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
		<field name="hoursDuration" width="62%" min="0.01"/>
		<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
		<field name="toInvoice" if-module="axelor-business-project"  if="__config__.app.isApp('business-project')" />
		<field name="enableEditor" hidden="true" />
		<field name="comments" />
		<field name="project" hidden="true" />
	</grid>
	
	<grid name="timesheet-line-timesheet-grid" title="Timesheet Lines" model="com.axelor.apps.hr.db.TimesheetLine" editable="true" 
	onNew="action-hr-default-timesheet-line-timesheet" orderBy="date" >
		<field name="project" width="200" onChange="action-timesheet-line-group-project-onchange" requiredIf="toInvoice" onSelect="action-timesheet-line-attrs-domain-project" form-view="project-form" grid-view="project-grid"/>
		<field name="date" width="100" onChange="action-timesheet-line-validate-date"/>
		<field name="product" requiredIf="toInvoice" width="200" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
		<field name="duration" width="100" onChange="action-timesheet-line-method-set-stored-duration" aggregate="sum" min="0.01"/>
		<field name="hoursDuration" hidden="true" />
		<field name="toInvoice" width="100" if-module="axelor-business-project"  if="__config__.app.isApp('business-project')" />
		<field name="enableEditor" hidden="true" />
		<field name="comments" width="400"/>
		<field name="user" form-view="user-form" grid-view="user-grid" hidden="true"/>
	</grid>

	<grid name="timesheet-line-grid" title="Timesheet Lines" model="com.axelor.apps.hr.db.TimesheetLine" canNew="false">
		<field name="timesheet.company"/>
		<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
		<field name="timesheet.user"/>
		<field name="project"/>
		<field name="date"/>
		<field name="product"/>
		<field name="duration"/>
		<field name="hoursDuration"/>
		<field name="toInvoice"/>
		<field name="enableEditor"/>
		<field name="comments" />
		<field name="timesheet.statusSelect"/>
	</grid>

	<grid name="timesheet-line-timesheet-project-grid" title="Timesheet Lines" model="com.axelor.apps.hr.db.TimesheetLine" editable="true" 
	onNew="action-hr-default-timesheet-line-timesheet" orderBy="date" >
		<field name="user" form-view="user-form" grid-view="user-grid"/>
		<field name="project" onChange="action-timesheet-line-group-project-onchange" requiredIf="toInvoice" onSelect="action-timesheet-line-attrs-domain-project" form-view="project-form" grid-view="project-grid"/>
		<field name="date" onChange="action-timesheet-line-validate-date"/>
		<field name="product" requiredIf="toInvoice" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
		<field name="duration" width="62%" onChange="action-timesheet-line-method-set-stored-duration" aggregate="sum" min="0.01"/>
		<field name="hoursDuration" hidden="true" />
		<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
		<field name="toInvoice" if-module="axelor-business-project"  if="__config__.app.isApp('business-project')" />
		<field name="enableEditor" hidden="true" />
		<field name="comments" />
	</grid>

	<grid name="timesheet-line-timesheet-readonly-grid" title="Timesheet Lines" model="com.axelor.apps.hr.db.TimesheetLine" 
	onNew="action-hr-default-timesheet-line-timesheet" orderBy="date">
		<field name="project" onChange="action-timesheet-line-group-project-onchange" requiredIf="toInvoice" onSelect="action-timesheet-line-attrs-domain-project" form-view="project-form" grid-view="project-grid"/>
		<field name="date" width="85%" onChange="action-timesheet-line-validate-date"/>
		<field name="product" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
		<field name="duration" width="62%" onChange="action-timesheet-line-method-set-stored-duration" aggregate="sum" min="0.01"/>
		<field name="hoursDuration" hidden="true" />
		<field name="toInvoice" width="88%" if-module="axelor-business-project" if="__config__.app.isApp('business-project')" />
		<field name="comments" />
		<field name="enableEditor" hidden="true" />
		<field name="user" form-view="user-form" grid-view="user-grid" hidden="true"/>
	</grid>

	<form name="timesheet-line-project-form" title="Log Time" model="com.axelor.apps.hr.db.TimesheetLine" 
	onNew="action-hr-default-timesheet-line-project,action-timesheet-line-attrs-set-duration-label,action-timesheet-line-record-to-invoice-parent"
	onLoad="action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-set-visible-duration-title" width="large">
		<panel name="overview" title="Overview">
			<field name="user" form-view="user-form" grid-view="user-grid" canNew="false" canEdit="false" canView="false"/>
			<field name="date" />
			<field name="product" requiredIf="toInvoice" canEdit="false" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
			<field name="duration" width="62%" colSpan="3" onChange="action-timesheet-line-method-set-stored-duration" min="0.01"/>
			<label name="durationLabel" colSpan="1"/>
			<field name="hoursDuration" hidden="true" />
			<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
			<field name="toInvoice" if-module="axelor-business-project" if="__config__.app.isApp('business-project')" />
			<field name="enableEditor" />
			<field name="comments" />
		</panel>
	</form>
	
	<form name="timesheet-line-timesheet-form" title="Timesheet Line" model="com.axelor.apps.hr.db.TimesheetLine" 
	onNew="action-hr-default-timesheet-line-timesheet,action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-title-project"
	onLoad="action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-set-visible-duration-title,action-timesheet-line-attrs-title-project" width="large">
		<panel name="overview" title="Overview">
			<field name="project" onChange="action-timesheet-line-group-project-onchange" onSelect="action-timesheet-line-attrs-domain-project" form-view="project-form" grid-view="project-grid"/>
			<field name="date" />
			<field name="product" requiredIf="toInvoice" canEdit="false" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
			<field name="duration" width="62%" colSpan="3" onChange="action-timesheet-line-method-set-stored-duration" min="0.01"/>
			<label name="durationLabel" colSpan="1"/>
			<field name="hoursDuration" hidden="true" />
			<field name="toInvoice" if-module="axelor-business-project" if="__config__.app.isApp('business-project')" />
			<field name="enableEditor" />
			<field name="comments" />
			<field name="user" form-view="user-form" grid-view="user-grid" hidden="true" canNew="false" canEdit="false" canView="false"/>
		</panel>
	</form>

	<form name="timesheet-line-form" title="Timesheet Line" model="com.axelor.apps.hr.db.TimesheetLine" canNew="false"
	onLoad="action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-set-visible-duration-title,action-timesheet-line-attrs-title-project">
		<panel>
			<field name="timesheet.company"/>
			<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
			<field name="timesheet.user"/>
			<field name="timesheet.statusSelect"/>
		</panel>
		<panel-include view="timesheet-line-timesheet-form"/>
	</form>

	<form name="timesheet-line-timesheet-project-form" title="Timesheet Line" model="com.axelor.apps.hr.db.TimesheetLine" 
	onNew="action-hr-default-timesheet-line-timesheet,action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-title-project"
	onLoad="action-timesheet-line-attrs-set-duration-label,action-timesheet-line-attrs-set-visible-duration-title,action-timesheet-line-attrs-title-project" width="large">
		<panel name="overview" title="Overview">
			<field name="project" onChange="action-timesheet-line-group-project-onchange" onSelect="action-timesheet-line-attrs-domain-project" form-view="project-form" grid-view="project-grid"/>
			<field name="date" />
			<field name="product" canEdit="false" requiredIf="toInvoice" onSelect="action-hr-timesheet-line-attrs-domain-product" widget="SuggestBox" form-view="product-activity-form" grid-view="product-activity-grid"/>
			<field name="hoursDuration" width="62%" colSpan="2" min="0.01"/>
			<label name="durationLabel" colSpan="1"/>
			<field name="timesheet" grid-view="timesheet-grid" form-view="timesheet-form"/>
			<field name="hoursDuration" hidden="true" />
			<field name="toInvoice" if-module="axelor-business-project" if="__config__.app.isApp('business-project')" />
			<field name="comments" />
			<field name="enableEditor" />
			<field name="user"  form-view="user-form" grid-view="user-grid" hidden="true" canNew="false" canEdit="false" canView="false"/>
		</panel>
	</form>

	<action-group name="action-timesheet-line-group-project-onchange">
		<action name="action-timesheet-line-record-to-invoice"/>
<!-- 		<action name="action-hr-timesheet-line-record-empty-product"/> -->
	</action-group>
	
	<action-attrs name="action-hr-timesheet-line-attrs-domain-product">
		<attribute name="domain" for="product" expr="eval:project == null || project?.productSet.empty ? &quot;self.isActivity = true&quot; : &quot;self.isActivity = true AND EXISTS(SELECT p FROM Project p WHERE p = :project AND self MEMBER OF p.productSet)&quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-domain-project">
		<attribute name="domain" for="project" expr="eval: &quot; ${__user__.id} MEMBER OF self.membersUserSet OR self.assignedTo.id = ${__user__.id} &quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-title-project">
		<attribute name="title" for="project" expr="eval: __config__.app.getApp('project').getProjectLabel()" if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project').getProjectLabel())"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-set-duration-label">
	    <attribute name="title" for="durationLabel" expr="eval: __parent__?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : __parent__?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-line-attrs-set-visible-duration-title">
	    <attribute name="title" for="durationLabel" expr="eval: __parent__?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : __parent__?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')" />
	</action-attrs>
	
	<action-record name="action-hr-default-timesheet-line-project" model="com.axelor.apps.hr.db.TimesheetLine">
	    <field name="user" expr="eval:__user__" />
	    <field name="product" expr="eval:__user__.employee?.product" />
	</action-record>
	
	<action-record name="action-hr-default-timesheet-line-timesheet" model="com.axelor.apps.hr.db.TimesheetLine">
	    <field name="user" expr="eval:__parent__.user" />
	    <field name="product" expr="call:com.axelor.apps.hr.service.user.UserHrService:getTimesheetProduct(__repo__(User).find(__parent__.user.id))" if="__parent__.user != null"/>
	</action-record>

    <action-record name="action-timesheet-line-record-to-invoice"
        model="com.axelor.apps.hr.db.TimesheetLine">
        <field name="toInvoice"
            expr="eval: project?.projInvTypeSelect == 2 || project?.parentProject?.projInvTypeSelect == 2"
            if="__config__.app.isApp('business-project')"/>
    </action-record>
	
    <action-record name="action-timesheet-line-record-to-invoice-parent"
        model="com.axelor.apps.hr.db.TimesheetLine">
        <field name="toInvoice"
            expr="eval: _parent?.project?.projInvTypeSelect == 2 || _parent?.parentProject?.parentProject?.projInvTypeSelect == 2"
            if="__config__.app.isApp('business-project')"/>
    </action-record>
	
	<action-record name="action-hr-timesheet-line-record-empty-product" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="product" expr="eval:null" if="!project?.productSet?.contains(product)"/>
	</action-record>

	<action-record name="action-timesheet-line-editor-record-get-default" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="product" expr="call:com.axelor.apps.hr.service.user.UserHrService:getTimesheetProduct(user)"/>
	</action-record>
	
	<action-validate name="action-timesheet-line-validate-date">
		<error message="This date is invalid. It must be included in the timesheet's period." if="date != null &amp;&amp; (date &lt; __parent__.fromDate || ( __parent__.toDate != null &amp;&amp; date &gt; __parent__.toDate))" action="action-timesheet-line-null-date"/>
	</action-validate>
	
	<action-record name="action-timesheet-line-null-date" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="date" expr="eval: null"/>
	</action-record>
	
	<action-record name="action-timesheet-line-default-project" model="com.axelor.apps.hr.db.TimesheetLine">
		<field name="project" expr="eval: __parent__"/>
	</action-record>

	<action-method name="action-timesheet-line-method-set-stored-duration" model="com.axelor.apps.hr.db.TimesheetLine">
        <call class="com.axelor.apps.hr.web.timesheet.TimesheetLineController" method="setStoredDuration"/>
	</action-method>

</object-views>
