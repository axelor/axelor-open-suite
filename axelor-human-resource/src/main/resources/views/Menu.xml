	<action-view name="expense.all" model="com.axelor.apps.hr.db.Expense"
		title="My Expenses">
		<view name="expense-grid" type="grid" />
		<view name="expense-form" type="form" />
		<domain>self.user = :user_id</domain>
		<context name="user_id" expr="eval:__user__" />
