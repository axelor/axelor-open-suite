<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="extra-hours-type-grid" title="Extra hours type" model="com.axelor.apps.hr.db.ExtraHoursType">
		<field name="name"/>
		<field name="increase"/>
		<field name="payrollPreprationExport"/>
		<field name="exportCode"></field>
	</grid>

	<form name="extra-hours-type-form" title="Extra hours type" model="com.axelor.apps.hr.db.ExtraHoursType">
		<panel name="mainPanel">
			<field name="name" />
			<field name="increase" />
			<field name="payrollPreprationExport"/>
			<field name="exportCode" requiredIf="payrollPreprationExport" hideIf="!payrollPreprationExport"/>
		</panel>
	</form>

</object-views>
