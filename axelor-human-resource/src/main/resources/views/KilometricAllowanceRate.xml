<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="kilometric-allowance-rate-grid" title="Kilometric allowance rates" model="com.axelor.apps.hr.db.KilometricAllowanceRate" orderBy="kilometricAllowParam.code">
	    <field name="kilometricAllowParam.name" />
		<field name="kilometricAllowParam.code" />
        <field name="kilometricAllowParam" hidden="true" />
    </grid>

    <form name="kilometric-allowance-rate-form" title="Kilometric allowance rate" model="com.axelor.apps.hr.db.KilometricAllowanceRate">
    	<panel name="mainPanel">
		    <field name="kilometricAllowParam" />
        </panel>
        <panel-related name="kilometricAllowanceRuleListPanel" field="kilometricAllowanceRuleList" form-view="kilometric-allowance-rule-form" grid-view="kilometric-allowance-rule-grid"/>
    </form>

</object-views>