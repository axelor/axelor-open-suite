<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="sprint-summary-grid" title="Sprints summary"
    model="com.axelor.apps.project.db.Sprint">

    <field name="name"/>
    <field name="$totalAllocatedTime" title="Total allocated time" type="decimal"/>
    <field name="$totalEstimatedTime" title="Total estimated time" type="decimal"/>
    <field name="$totalRemainingTime" title="Total remaining time" type="decimal"/>

  </grid>

  <form id="hr-sprint-form" name="sprint-form" title="Sprint"
    model="com.axelor.apps.project.db.Sprint" extension="true">

    <extend target="//field[@name='projectTaskList']">
      <insert position="after">
        <panel-dashlet action="action-sprint-view-allocation-lines" showIf="id"
          colSpan="12"/>
      </insert>
    </extend>

    <extend target="//panel[@name='mainPanel']">
      <insert position="after">
        <panel name="totalsPanel" showIf="id" colSpan="12">
          <field name="$totalAllocatedTime" title="Total allocated time" type="decimal"
            readonly="true" colSpan="4"/>
          <field name="$totalEstimatedTime" title="Total estimated time" type="decimal"
            readonly="true" colSpan="4"/>
          <field name="$totalRemainingTime" title="Total remaining time" type="decimal"
            readonly="true" colSpan="4"/>
        </panel>
      </insert>
    </extend>

    <extend target="/">
      <attribute name="onSave" value="action-sprint-group-on-save"/>
    </extend>

  </form>

  <action-view name="action-sprint-view-allocation-lines" title="Allocation lines"
    model="com.axelor.apps.project.db.AllocationLine">
    <view type="grid" name="allocation-line-project-grid"/>
    <view type="form" name="allocation-line-form"/>
    <domain>self.project = :project and self.allocationPeriod in :allocationPeriodSet</domain>
  </action-view>

</object-views>
