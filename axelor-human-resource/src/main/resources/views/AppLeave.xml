<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<form name="app-leave-config-form" title="App Leave" model="com.axelor.apps.base.db.AppLeave" canDelete="false" canNew="false" width="large">
		<panel name="mainPanel">
			<field name="allowNegativeLeaveEmployees" widget="boolean-switch" />
			<field name="overtimeManagement" widget="boolean-switch" />
		</panel>
				
		<panel-mail name="mailPanel">
			<mail-messages limit="4"/>
			<mail-followers/>
		</panel-mail>
		
	</form>
	
	
</object-views>
