  <action-method name="action-timesheet-method-timesheet-line-historic">
    <call class="com.axelor.apps.hr.web.timesheet.TimesheetController"
      method="historicTimesheetLine"/>
  </action-method>

  <action-attrs name="action-hr-attrs-set-employee-domain">
    <attribute for="$configDate" name="value" expr="eval: __config__.date"/>
    <attribute for="employee" name="domain"
      if="company &amp;&amp; __user__?.employee?.hrManager"
      expr="eval: &quot; (self.leavingDate is NULL OR self.leavingDate &gt; :$configDate) AND self.id IN (${(__repo__(EmploymentContract).all().filter('self.payCompany.id = :companyId AND self.status != 3').bind('companyId', company.id).fetch().collect{it -> it?.employee?.id ?: 0}+[0]).join(',')}) &quot;"/>
    <attribute for="employee" name="domain"
      if="company &amp;&amp; !__user__?.employee?.hrManager"
      expr="eval: &quot; (self.leavingDate is NULL OR self.leavingDate &gt; :$configDate) AND self.id IN (${(__repo__(EmploymentContract).all().filter('self.payCompany.id = :companyId').bind('companyId', company.id).fetch().collect{it -> it.employee}.findAll{it -> it?.managerUser?.id == __user__.id || it?.id == __user__?.employee?.id}.collect{it -> it.id}+[0]).join(',')}) &quot;"/>
    <attribute for="employee" name="domain" if="!company"
      expr="eval: &quot; self.id IN (0) &quot;"/>
  </action-attrs>

  <action-condition name="action-hr-condition-automatic-from-generation-date">
    <check
      if="eval: fromGenerationDate != null &amp;&amp; ((toDate == null &amp;&amp; fromGenerationDate &lt; fromDate.toString()) ||
			(toDate != null &amp;&amp; (fromGenerationDate &lt; fromDate.toString() || fromGenerationDate == toDate.toString() || fromGenerationDate &gt; toDate.toString())) ||
			(toGenerationDate != null &amp;&amp; fromGenerationDate > toGenerationDate))"
      field="$fromGenerationDate"
      error="Automatic generation dates must be included in the timesheet period"/>
  </action-condition>

  <action-condition name="action-hr-condition-automatic-to-generation-date">
    <check
      if="eval: toGenerationDate != null &amp;&amp; ((toDate != null &amp;&amp; (toGenerationDate &gt; toDate.toString() || toGenerationDate == fromDate.toString() || toGenerationDate &lt; fromDate.toString())) ||
			(fromGenerationDate != null &amp;&amp; fromGenerationDate > toGenerationDate))"
      field="$toGenerationDate"
      error="Automatic generation dates must be included in the timesheet period"/>
  </action-condition>

  <search-filters name="timesheet-filters" model="com.axelor.apps.hr.db.Timesheet"
    title="Timesheet filters">
    <field name="company" hidden="true"
      if="!__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="showEditor" hidden="true"
      if="!(__config__.app.isApp('timesheet') &amp;&amp; __config__.app.getApp('timesheet')?.getTimesheetEditor())"/>
    <field name="employee.timesheetImputationSelect" hidden="true"
      if="!(__config__.app.isApp('production') &amp;&amp; __config__.app.getApp('production')?.getManageBusinessProduction())"/>
    <field name="timesheetLineList" hidden="true"
      if="!(__config__.app.isApp('production') &amp;&amp; __config__.app.getApp('production')?.getManageBusinessProduction())"/>
  </search-filters>

