<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="timesheet-grid" title="Timesheet" model="com.axelor.apps.hr.db.Timesheet"
    canNew="false" groupBy="employee" orderBy="employee,-fromDate">
    <menubar>
      <menu name="timesheetToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
        <item name="seeTimesheetLinesItem"
          action="action-timesheet-method-timesheet-line-historic" title="See timesheet lines"/>
      </menu>
    </menubar>
    <hilite color="danger" if="statusSelect == 4"/>
    <hilite color="success" if="statusSelect == 3"/>
    <hilite color="warning" if="statusSelect == 2"/>
    <field name="company" form-view="company-form" grid-view="company-grid"
      if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="sentDateTime"/>
    <field name="statusSelect" if="__config__.app.getApp('timesheet')?.needValidation"/>
    <field name="employee" form-view="employee-form" grid-view="employee-grid"/>
  </grid>

  <grid name="all-timesheet-grid" title="All timesheets"
    model="com.axelor.apps.hr.db.Timesheet" canNew="false" groupBy="employee"
    orderBy="employee,-fromDate">
    <menubar>
      <menu name="timesheetToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
        <item name="seeTimesheetLinesItem" action="action-timesheet-method-all-timesheet-line"
          title="See timesheet lines"/>
      </menu>
    </menubar>
    <hilite color="danger" if="statusSelect == 4"/>
    <hilite color="success" if="statusSelect == 3"/>
    <hilite color="warning" if="statusSelect == 2"/>
    <field name="company" form-view="company-form" grid-view="company-grid"
      if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="sentDateTime"/>
    <field name="statusSelect" if="__config__.app.getApp('timesheet')?.needValidation"/>
    <field name="employee" form-view="employee-form" grid-view="employee-grid"/>
  </grid>

  <grid name="my-timesheets-grid" title="My Timesheets" model="com.axelor.apps.hr.db.Timesheet"
    canNew="false" orderBy="-fromDate">
    <menubar>
      <menu name="timesheetToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
        <item name="seeTimesheetLinesItem" action="action-timesheet-see-timesheet-lines"
          title="See timesheet lines"/>
      </menu>
    </menubar>
    <hilite color="danger" if="statusSelect == 4"/>
    <hilite color="success" if="statusSelect == 3"/>
    <hilite color="warning" if="statusSelect == 2"/>
    <field name="company" form-view="company-form" grid-view="company-grid"
      if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="sentDateTime"/>
    <field name="statusSelect" if="__config__.app.getApp('timesheet')?.needValidation"/>
  </grid>

  <grid name="timesheet-validate-grid" title="Timesheet"
    model="com.axelor.apps.hr.db.Timesheet" canNew="false" orderBy="employee,-fromDate">
    <menubar>
      <menu name="timesheetToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
        <item name="timesheetValidatedBySubordinatesItem"
          action="com.axelor.apps.hr.web.timesheet.TimesheetController:showSubordinateTimesheets"
          title="Show timesheets to be validated by my subordinates"/>
        <item name="seeTimesheetLinesItem"
          action="action-timesheet-method-timesheet-line-validate" title="See timesheet lines"/>
      </menu>
    </menubar>
    <hilite background="danger" if="$moment(fromDate).diff(todayDate,'days') &lt;= 0"/>
    <hilite background="warning"
      if="$moment(todayDate).diff(sentDateTime,'days') &gt;= 7 || $moment(todayDate).diff(fromDate,'days') &gt;= 15"/>
    <field name="company" form-view="company-form" grid-view="company-grid"
      if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="sentDateTime"/>
    <field name="periodTotal"/>
    <field name="statusSelect" if="__config__.app.getApp('timesheet')?.needValidation"/>
    <field name="employee" form-view="employee-form" grid-view="employee-grid"/>
  </grid>

  <form name="timesheet-form" title="Timesheet" model="com.axelor.apps.hr.db.Timesheet"
    width="large" onNew="action-group-timesheet-onnew" onLoad="action-timesheet-group-onload"
    canNew="false" onSave="action-timesheet-group-onsave" canCopy="false">
    <menubar>
      <menu name="timesheetToolsMenu" title="Reports" icon="fa-files-o">
        <item name="printTimesheetItem" title="Print" action="save,action-print-timesheet"/>
      </menu>
      <menu title="Tools" icon="fa-wrench">
        <item title="Lines Generation Wizard" showIf="statusSelect == 1"
          action="action-timesheet-record-default-generation-date,action-timesheet-attrs-set-log-time-title,action-timesheet-attrs-generate-lines-panel-hidden-false"/>
        <item title="Generate Lines From Expected Planning" showIf="statusSelect == 1"
          action="save,action-timesheet-method-generate-lines-from-expected-planning"/>
      </menu>
    </menubar>
    <panel name="mainPanel" colSpan="12">
      <panel name="detailsPanel" colSpan="9">
        <panel name="headPanel" colSpan="12">
          <field name="statusSelect" colSpan="10" widget="NavSelect" showTitle="false"
            if="__config__.app.getApp('timesheet')?.needValidation"/>
          <field name="showEditor" colSpan="2" title="Editor" widget="boolean-switch"
            onChange="action-timesheet-attrs-refresh-editor"
            if="__config__.app.getApp('timesheet')?.getTimesheetEditor()"/>
        </panel>
        <field name="company" colSpan="5" form-view="company-form" grid-view="company-grid"
          onChange="action-hr-record-empty-user"/>
        <field name="employee" colSpan="5" form-view="employee-form"
          onChange="action-timesheet-group-employee-onchange"
          onSelect="action-hr-attrs-set-employee-domain" grid-view="employee-grid" canNew="false"
          canEdit="false" canView="false"/>
        <field name="timeLoggingPreferenceSelect" readonly="true" hidden="true"/>
        <field name="employee" hidden="true"/>
        <field if-module="axelor-business-production"
          if=" __config__.app.getApp('production')?.getManageBusinessProduction()"
          name="employee.timesheetImputationSelect" hidden="true"/>
        <field name="fromDate"
          onChange="action-timesheet-validate-fromDate,action-timesheet-record-to-date" colSpan="5"/>
        <field name="toDate" onChange="action-timesheet-group-to-date-onchange" colSpan="5"/>
        <button name="createBtn" title="Create" colSpan="2" hideIf="id"
          if="__config__.app.getApp('timesheet')?.getTimesheetEditor()"
          onClick="save,action-timesheet-set-show-editor,action-timesheet-attrs-refresh-editor,action-timesheet-attrs-panels,save"/>
        <field name="isCompleted" if="!__config__.app.getApp('timesheet')?.needValidation"
          readonly="true"/>
        <field name="employee.user" hidden="true"/>
        <field name="employee.user.code" hidden="true"/>
      </panel>

      <panel name="actionsPanel" colSpan="3" itemSpan="12">
        <button name="confirmBtn" onClick="action-timesheet-group-confirm" title="Confirm"
          hideIf="statusSelect &gt; 1" icon="fa-check-square-o"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="continueBtn" onClick="action-timesheet-group-continue,close"
          title="Continue"
          showIf="statusSelect == 2 &amp;&amp; employee != null &amp;&amp; employee.user != null &amp;&amp; employee.user.code == $user"
          icon="fa-arrow-right" if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="confirmContinueBtn"
          onClick="action-timesheet-group-confirm-continue,close" title="Confirm &amp; Continue"
          hideIf="statusSelect &gt; 1" icon="fa-check-square-o"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="validateBtn" hidden="true" onClick="action-timesheet-group-validate"
          title="Validate" icon="fa-check" css="btn-success"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="refuseBtn" hidden="true" onClick="action-timesheet-group-refuse"
          title="Refuse" icon="fa-times" css="btn-danger"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="cancelBtn" hidden="true"
          onClick="save,action-timesheet-method-cancel,action-timesheet-group-buttons"
          title="Cancel" icon="fa-times-circle" css="btn-danger"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="draftBtn"
          onClick="save,action-timesheet-method-draft,action-timesheet-group-buttons"
          title="Return to draft status" showIf="statusSelect &gt; 3"
          if="__config__.app.getApp('timesheet')?.needValidation"/>
        <button name="startStopFormBtn" title="Start&amp;Stop Timer"
          onClick="action-timesheet-method-timesheet-timer" hideIf="statusSelect != 1"
          if="__config__.app.isApp('timesheet') &amp;&amp; __config__.app.getApp('timesheet')?.getEnableTimer()"/>
        <button name="completeBtn" onClick="save,action-timesheet-method-complete"
          title="Complete" if="!__config__.app.getApp('timesheet')?.needValidation"
          icon="fa-arrow-right"/>
      </panel>
    </panel>

    <panel name="generateLinesPanel" title="Generate Lines automatically" hidden="true">
      <field name="$fromGenerationDate" title="From generation date" widget="Date"
        onChange="action-hr-condition-automatic-from-generation-date"/>
      <field name="$toGenerationDate" title="To generation date" widget="Date"
        onChange="action-hr-condition-automatic-to-generation-date"/>
      <field name="$project" title="Project" target="com.axelor.apps.project.db.Project"
        type="many-to-one" form-view="project-form" grid-view="project-grid"
        onSelect="action-hr-timesheet-attrs-domain-project"
        onChange="action-hr-timesheet-record-empty-product"/>
      <field name="$product" title="Activity" type="many-to-one"
        target="com.axelor.apps.base.db.Product" Select="action-hr-timesheet-attrs-domain-product"
        onSelect="action-hr-timesheet-attrs-domain-product" widget="SuggestBox"
        form-view="product-form" grid-view="product-grid"/>
      <field name="$logTime" type="decimal"/>
      <button name="generateLinesBtn" title="Generate lines"
        onClick="com.axelor.apps.hr.web.timesheet.TimesheetController:generateLines,action-timesheet-attrs-generate-lines-panel-hidden-true,save,action-timesheet-attrs-refresh-editor"/>
    </panel>
    <panel name="linesPanel">
      <panel-dashlet name="timesheetLineEditorPanel" colSpan="12"
        action="action-timesheet-show-timesheet-line-editor" showIf="showEditor" height="365"/>
      <panel-related name="timesheetLineListPanel" field="timesheetLineList"
        canMove="true" orderBy="sequence" colSpan="12" height="20"
        grid-view="timesheet-line-timesheet-grid" editable="true"
        form-view="timesheet-line-timesheet-form" hidden="true"
        showIf="!showEditor &amp;&amp; !$readonly() &amp;&amp; !($enableTimesheetManufOrder &amp;&amp; employee.timesheetImputationSelect == 2)"
        x-can-copy="true"/>
      <panel-related name="timesheetLineListPanel" field="timesheetLineList"
        colSpan="12" height="20" grid-view="timesheet-line-timesheet-manuf-order-grid"
        editable="true" form-view="timesheet-line-timesheet-manuf-order-form" hidden="true"
        showIf="!showEditor &amp;&amp; !$readonly() &amp;&amp; $enableTimesheetManufOrder &amp;&amp; employee.timesheetImputationSelect == 2"
        x-can-copy="true" if-module="axelor-business-production"
        if=" __config__.app.getApp('production')?.getManageBusinessProduction()"/>
      <panel-related name="timesheetLineListPanel" field="timesheetLineList"
        canMove="true" orderBy="sequence" colSpan="12" height="20"
        grid-view="timesheet-line-timesheet-readonly-grid" form-view="timesheet-line-timesheet-form"
        hidden="true"
        showIf="!showEditor &amp;&amp; $readonly() &amp;&amp; !($enableTimesheetManufOrder &amp;&amp; employee.timesheetImputationSelect == 2)"
        x-can-copy="true"/>
      <panel-related name="timesheetLineListPanel" field="timesheetLineList"
        colSpan="12" height="20" grid-view="timesheet-line-timesheet-readonly-manuf-order-grid"
        form-view="timesheet-line-timesheet-manuf-order-form" hidden="true"
        showIf="!showEditor &amp;&amp; $readonly() &amp;&amp; $enableTimesheetManufOrder &amp;&amp; employee.timesheetImputationSelect == 2"
        x-can-copy="true" if-module="axelor-business-production"
        if=" __config__.app.getApp('production')?.getManageBusinessProduction()"/>
      <button name="fullScreenEditorBtn" colSpan="3" title="Fullscreen Editor"
        showIf="id != null &amp;&amp; showEditor"
        if="__config__.app.getApp('timesheet')?.getTimesheetEditor()"
        onClick="save,action-timesheet-method-open-timesheet-editor"/>
      <field name="$showActivity" hidden="true" type="boolean"/>
      <field name="$enableTimesheetManufOrder" hidden="true" type="boolean"/>
    </panel>
    <panel name="totalsPanel" title="Totals on period">
      <field name="periodTotal" readonly="true"/>
      <field name="$periodTotalConvert" type="decimal" readonly="true" hidden="true"/>
    </panel>
    <panel-dashlet name="totalHoursPerDayPanel" title="Total Hours per Day"
      hidden="true" showIf="id &amp;&amp; employee.timesheetImputationSelect != 2"
      action="action-timesheet-view-total-hours-per-day"/>
    <panel name="validationInfoPanel" showIf="sentDateTime != null"
      if="__config__.app.getApp('timesheet')?.needValidation">
      <field name="sentDateTime"/>
      <field name="validatedBy" canEdit="false" form-view="user-form" grid-view="user-grid"
        showIf="validatedBy != null"/>
      <field name="refusedBy" canEdit="false" form-view="user-form" grid-view="user-grid"
        showIf="refusedBy != null"/>
      <field name="validationDateTime" showIf="validationDateTime != null"/>
      <field name="refusalDateTime" showIf="refusalDateTime != null"/>
      <field name="groundForRefusal" showIf="statusSelect == 4" colSpan="12"/>
    </panel>
    <panel name="attrsPanel">
      <field name="attrs" colSpan="12"/>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
      <mail-followers/>
    </panel-mail>
  </form>

  <form name="popup-timesheet-refusal-form" title="Ground for refusal"
    model="com.axelor.apps.hr.db.Timesheet">
    <panel name="mainPanel">
      <field name="groundForRefusal" showTitle="false"/>
    </panel>
  </form>

  <form name="popup-timesheet-form" title="Select the timesheet you want to edit"
    model="com.axelor.utils.db.Wizard" onNew="action-timesheet-attrs-domain-timesheet-select">
    <panel name="mainPanel">
      <field name="$timesheetSelect" title="Select Timesheet" type="many-to-one"
        target="com.axelor.apps.hr.db.Timesheet" widget="SuggestBox"/>
      <button name="editTimesheetSelectedBtn" title="Edit Timesheet Selected"
        onClick="action-timesheet-validate-timesheet-selected,action-timesheet-method-edit-timesheet-selected,close"/>
    </panel>
  </form>

  <action-group name="action-timesheet-group-employee-onchange">
    <action name="action-timesheet-method-update-time-logging-preference"/>
    <action name="action-timesheet-attrs-set-visible-duration-title"/>
  </action-group>

  <action-group name="action-timesheet-group-onsave">
    <action name="action-timesheet-validate-toDate"/>
    <action name="action-timesheet-method-timesheet-compute-period-total"/>
    <action name="action-timesheet-method-update-operation-order"
      if="__config__.app.getApp('production')?.getManageBusinessProduction()"/>
  </action-group>

  <action-group name="action-timesheet-group-onload">
    <action name="action-timesheet-method-set-show-activity"/>
    <action name="action-timesheet-attrs-enable-timesheet-manuforder"
      if="__config__.app.getApp('production')?.getManageBusinessProduction()"/>
    <action name="action-timesheet-group-buttons"/>
    <action name="action-timesheet-attrs-set-visible-duration-title"/>
    <action name="action-timesheet-attrs-title-project"/>
    <action name="action-timesheet-attrs-from-date"/>
    <action name="action-timesheet-attrs-panels"/>
    <action name="action-timesheet-attrs-refresh-editor"/>
    <action name="action-timesheet-method-timesheet-compute-period-total"/>
  </action-group>

  <action-attrs name="action-hr-timesheet-attrs-domain-product">
    <attribute name="domain"
      expr="eval:$project == null || __repo__(Project).find($project.id).productSet?.empty ? &quot;self.isActivity = true AND self.dtype = 'Product'&quot; : &quot;self.isActivity = true AND EXISTS(SELECT p FROM Project p WHERE p = :$project AND self MEMBER OF p.productSet) AND self.dtype = 'Product'&quot;"
      for="$product"/>
  </action-attrs>

  <action-group name="action-timesheet-group-confirm">
    <action name="save"/>
    <action name="action-timesheet-method-confirm"/>
    <action name="action-timesheet-group-buttons"/>
  </action-group>

  <action-group name="action-timesheet-group-continue">
    <action name="save"/>
    <action name="action-timesheet-method-continue"/>
    <action name="action-timesheet-group-buttons"/>
  </action-group>

  <action-group name="action-timesheet-group-confirm-continue">
    <action name="save"/>
    <action name="action-timesheet-method-confirm-continue"/>
    <action name="action-timesheet-group-buttons"/>
  </action-group>

  <action-group name="action-timesheet-group-validate">
    <action name="save"/>
    <action name="action-timesheet-method-valid"/>
    <action name="action-timesheet-group-buttons"/>
  </action-group>

  <action-group name="action-timesheet-group-refuse">
    <action name="save"/>
    <action name="action-timesheet-method-refuse"/>
    <action name="action-timesheet-refusal-popup-form"/>
    <action name="action-timesheet-group-buttons"/>
  </action-group>

  <action-group name="action-group-timesheet-onnew">
    <action name="action-timesheet-record-default"/>
    <action name="action-timesheet-method-set-show-activity"/>
    <action name="action-timesheet-attrs-enable-timesheet-manuforder"
      if="__config__.app.getApp('production')?.getManageBusinessProduction()"/>
    <action name="action-timesheet-group-buttons"/>
    <action name="action-timesheet-attrs-set-visible-duration-title"/>
    <action name="action-timesheet-record-from-period-date"/>
    <action name="action-timesheet-record-to-date" if="fromDate != null"/>
    <action name="action-timesheet-prefill-lines"
      if="toDate != null &amp;&amp; (__config__.app.getApp('timesheet')?.getCreateLinesForLeaves() || __config__.app.getApp('timesheet')?.getCreateLinesForHolidays())"/>
    <action name="action-timesheet-attrs-title-project"/>
    <action name="action-timesheet-attrs-from-date-on-new"/>
    <action name="action-timesheet-attrs-panels"/>
  </action-group>

  <action-group name="action-timesheet-group-to-date-onchange">
    <action name="action-timesheet-validate-toDate"/>
    <action name="action-timesheet-method-remove-after-to-date-timesheetlines"
      if="id &amp;&amp; toDate != null"/>
    <action name="action-timesheet-prefill-lines"
      if="toDate != null &amp;&amp; (__config__.app.getApp('timesheet')?.getCreateLinesForLeaves() || __config__.app.getApp('timesheet')?.getCreateLinesForHolidays())"/>
    <action name="action-timesheet-attrs-refresh-editor" if="showEditor"/>
  </action-group>

  <action-method name="action-timesheet-prefill-lines">
    <call class="com.axelor.apps.hr.web.timesheet.TimesheetController" method="prefillLines"/>
  </action-method>

  <action-method name="action-timesheet-method-timesheet-compute-period-total">
    <call class="com.axelor.apps.hr.web.timesheet.TimesheetController"
      method="timesheetPeriodTotalController"/>
  </action-method>

  <action-method name="action-timesheet-method-update-time-logging-preference"
    model="com.axelor.apps.hr.db.Timesheet">
    <call class="com.axelor.apps.hr.web.timesheet.TimesheetController"
      method="updateTimeLoggingPreference"/>
  </action-method>

  <action-method name="action-timesheet-method-generate-lines-from-expected-planning">
    <call class="com.axelor.apps.hr.web.timesheet.TimesheetController"
      method="generateLinesFromExpectedPlanning"/>
  </action-method>

  <action-record name="action-timesheet-record-default"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="employee" expr="eval:__user__.employee"/>
    <field name="timeLoggingPreferenceSelect"
      expr="eval: __user__?.employee?.timeLoggingPreferenceSelect"/>
    <field name="company"
      expr="eval: __user__.employee?.mainEmploymentContract?.payCompany ?: __user__.activeCompany"/>
  </action-record>

  <action-record name="action-hr-timesheet-record-empty-product"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="$product" expr="eval:null" if="!$project?.productSet?.contains(product)"/>
  </action-record>

  <action-record name="action-timesheet-record-default-generation-date"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="$fromGenerationDate" expr="eval:fromDate"/>
    <field name="$toGenerationDate" expr="eval:toDate" if="toDate != null"/>
  </action-record>

  <action-record name="action-timesheet-record-to-date"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="toDate" expr="eval:fromDate.with(java.time.DayOfWeek.FRIDAY)"
      if="toDate == null &amp;&amp; fromDate != null &amp;&amp;  __config__.app.getApp('timesheet')?.getDefaultEndFormat() == 1"/>
    <field name="toDate" expr="eval:fromDate.withDayOfMonth(fromDate.lengthOfMonth())"
      if="toDate == null &amp;&amp; fromDate != null &amp;&amp;  __config__.app.getApp('timesheet')?.getDefaultEndFormat() == 2"/>
  </action-record>

  <action-validate name="action-timesheet-validate-timesheet-selected">
    <error message="You have to choose at least one timesheet" if="timesheetSelect == null"/>
  </action-validate>

  <action-validate name="action-timesheet-validate-toDate">
    <error message="Invalid date" if="toDate != null &amp;&amp; toDate &lt; fromDate"
      action="action-timesheet-null-toDate"/>
  </action-validate>

  <action-validate name="action-timesheet-validate-fromDate">
    <error message="Invalid date, it can't be in the future"
      if="fromDate.isAfter(__config__.date)" action="action-timesheet-null-fromDate"/>
  </action-validate>

  <action-attrs name="action-hr-timesheet-attrs-domain-project">
    <attribute name="domain" for="$project"
      expr="eval: &quot; (${employee?.user?.id} MEMBER OF self.membersUserSet OR self.assignedTo.id = ${employee?.user?.id}) AND self.isShowTimeSpent = true &quot;"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-title-project">
    <attribute name="title" for="$project"
      expr="eval: __config__.app.getApp('project')?.getProjectLabel()"
      if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project')?.getProjectLabel())"/>
    <attribute name="title" for="timesheetLineList.project"
      expr="eval: __config__.app.getApp('project')?.getProjectLabel()"
      if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project')?.getProjectLabel())"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-domain-timesheet-select">
    <attribute name="domain" for="$timesheetSelect"
      expr="eval: &quot; self.statusSelect = 1 AND self.employee.user.id = ${__user__.id} &quot;"/>
  </action-attrs>

  <action-group name="action-timesheet-group-buttons">
    <action name="action-timesheet-attrs-buttons"
      if="__config__.app.getApp('timesheet')?.needValidation"/>
    <action name="action-timesheet-attrs-need-validation-false"
      if="!__config__.app.getApp('timesheet')?.needValidation"/>
    <action name="action-timesheet-attrs-product-visibility"/>
  </action-group>

  <action-attrs name="action-timesheet-attrs-buttons">
    <attribute name="hidden" for="validateBtn"
      expr="eval: !(statusSelect == 2 &amp;&amp; (__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null) || __user__.employee?.hrManager))"/>
    <attribute name="hidden" for="cancelBtn"
      expr="eval: !(statusSelect == 1) &amp;&amp; !((statusSelect == 2 || statusSelect == 3) &amp;&amp; (__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null) || __user__.employee?.hrManager))"/>
    <attribute name="hidden" for="refuseBtn"
      expr="eval: !(statusSelect == 2 &amp;&amp; (__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null) || __user__.employee?.hrManager))"/>
    <attribute name="readonly" for="headPanel"
      expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
    <attribute name="readonly" for="timesheetLineList"
      expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
    <attribute name="readonly" for="company" expr="eval: true"
      if="!__user__.employee?.hrManager"/>
    <attribute name="readonly" for="company" expr="eval: statusSelect &gt; 2"
      if="__user__.employee?.hrManager"/>
    <attribute name="readonly" for="employee" expr="eval: true"
      if="!__user__.employee?.hrManager"/>
    <attribute name="readonly" for="employee" expr="eval: statusSelect &gt; 2"
      if="__user__.employee?.hrManager"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-need-validation-false">
    <attribute name="hidden" for="completeBtn"
      expr="eval: !(__user__ == employee?.managerUser || (__user__ == employee?.user &amp;&amp; employee?.managerUser == null) || __user__.employee?.hrManager) || isCompleted"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-product-visibility">
    <attribute name="hidden" for="timesheetLineList.product" expr="eval: !showActivity"/>
    <attribute name="hidden" for="$product" expr="eval: !showActivity"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-set-visible-duration-title">
    <attribute name="title" for="timesheetLineList.duration"
      expr="eval: timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')"/>
    <attribute name="title" for="totalHoursPerDayPanel"
      expr="eval: timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Total Days in the period') : timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Total Minutes per Day') : com.axelor.i18n.I18n.get('Total Hours per Day')"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-set-log-time-title">
    <attribute name="title" for="$logTime"
      expr="eval: timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Duration(in day per day)') : timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Duration(minutes by day)') : com.axelor.i18n.I18n.get('Duration(hours by day)')"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-generate-lines-panel-hidden-true">
    <attribute name="hidden" for="generateLinesPanel" expr="true"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-generate-lines-panel-hidden-false">
    <attribute name="hidden" for="generateLinesPanel" expr="false"/>
    <attribute name="value" for="$product" expr="eval:user?.employee?.product"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-from-date-on-new">
    <attribute name="readonly" for="fromDate"
      expr="eval: __repo__(Timesheet).all().filter('self.employee.user.id = ?1 AND self.statusSelect != ?2 ORDER BY self.toDate DESC', __user__.id, TimesheetRepository.STATUS_CANCELED).fetchOne() != null"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-from-date">
    <attribute name="readonly" for="fromDate" expr="eval: fromDate != null"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-refresh-editor">
    <attribute name="refresh" for="timesheetLineEditorPanel" expr="eval:true"
      if="showEditor"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-panels">
    <attribute name="hidden" for="actionsPanel" expr="eval:id == null"
      if="__config__.app.getApp('timesheet')?.getTimesheetEditor()"/>
    <attribute name="hidden" for="linesPanel" expr="eval:id == null"
      if="__config__.app.getApp('timesheet')?.getTimesheetEditor()"/>
  </action-attrs>

  <action-attrs name="action-timesheet-set-show-editor">
    <attribute name="value" for="showEditor" expr="eval:true"/>
  </action-attrs>

  <action-attrs name="action-timesheet-attrs-enable-timesheet-manuforder">
    <attribute for="$enableTimesheetManufOrder" name="value"
      expr="eval: __config__.app.getApp('production')?.getEnableTimesheetOnManufOrder()"/>
  </action-attrs>

  <action-record name="action-timesheet-record-from-period-date"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="fromDate"
      expr="eval: __repo__(Timesheet).all().filter('self.employee.user.id = ?1 AND self.statusSelect != ?2 ORDER BY self.toDate DESC', __user__.id, TimesheetRepository.STATUS_CANCELED).fetchOne()?.toDate?.plusDays(1)"/>
  </action-record>

  <action-record name="action-timesheet-null-fromDate"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="fromDate" expr="eval: null"/>
  </action-record>

  <action-record name="action-timesheet-null-toDate"
    model="com.axelor.apps.hr.db.Timesheet">
    <field name="toDate" expr="eval: null"/>
  </action-record>

  <action-method name="action-timesheet-method-confirm">
