    <view name="chart.total.hours.per.day" type="chart"/>
  </action-view>

  <action-view name="action-timesheet-refusal-popup-form" title="Ground for refusal"
    model="com.axelor.apps.hr.db.Timesheet">
    <view type="form" name="popup-timesheet-refusal-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="show-confirm" value="true"/>
    <view-param name="popup-save" value="true"/>
    <view-param name="forceEdit" value="true"/>
    <context name="_showRecord" expr="eval: id"/>
  </action-view>

  <action-view name="action-timesheet-show-timesheet-line-editor"
    title="Timesheet lines">
    <view type="html"
      name="hr/timesheet/?timesheetId={{id}}&amp;showActivity={{$showActivity}}"/>
  </action-view>

  <action-view name="action-timesheet-see-timesheet-lines" title="See timesheet lines"
    model="com.axelor.apps.hr.db.TimesheetLine">
    <view type="grid" name="timesheet-line-grid"/>
    <view type="form" name="timesheet-line-form"/>
    <domain>self.timesheet.employee.user.id = :user_id AND self.timesheet.company = :company_id</domain>
    <context name="user_id" expr="eval: user_id"/>
    <context name="company_id" expr="eval: company_id"/>
  </action-view>

