<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="hold-back-grid" title="HoldBacks" model="com.axelor.apps.project.db.HoldBack">
    <field name="name" onChange="action-hold-back-line-record-update-result-product-name"/>
    <field name="defaultPercentage"/>
    <field name="holdBackProduct"/>
  </grid>

  <form name="hold-back-form" title="HoldBack" model="com.axelor.apps.project.db.HoldBack">
    <panel name="mainPanel">
      <field name="name" onChange="action-hold-back-record-update-result-product-name"/>
      <field name="defaultPercentage">
        <viewer>
          <![CDATA[{{record.defaultPercentage}}%]]>
        </viewer>
        <editor>
          <field name="defaultPercentage" showTitle="false" colSpan="3"/>
          <label title="%" colSpan="3"/>
        </editor>
      </field>
      <field name="holdBackProduct"/>
      <panel-related field="productsHeldBackSet" form-view="product-form" colSpan="12"
        grid-view="product-hold-back-grid"/>
    </panel>
  </form>


</object-views>
