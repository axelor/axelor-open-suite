<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="task-status-grid" title="Task status"
    model="com.axelor.apps.project.db.TaskStatus" orderBy="sequence">
    <field name="sequence"/>
    <field name="name"/>
    <field name="isCompleted"/>
    <field name="isDefaultCompleted"/>
  </grid>

  <form name="task-status-form" title="Task status"
    model="com.axelor.apps.project.db.TaskStatus">
    <panel name="mainPanel">
      <field name="sequence"/>
      <field name="name"/>
      <field name="isCompleted"/>
      <field name="isDefaultCompleted" showIf="isCompleted"/>
    </panel>
  </form>

</object-views>