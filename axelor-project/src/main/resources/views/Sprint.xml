<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="sprint-grid" title="Sprints" model="com.axelor.apps.project.db.Sprint">

    <field name="name"/>
    <field name="project"/>
    <field name="sprintPeriod"/>
    <field name="description"/>
    <field name="isBacklog"/>

  </grid>

  <grid name="sprint-summary-grid" title="Sprints summary"
    model="com.axelor.apps.project.db.Sprint">

    <field name="name"/>
    <field name="$totalAllocatedTime" title="Total allocated time"/>
    <field name="$totalEstimatedTime" title="Total estimated time"/>
    <field name="$totalPlannedTime" title="Total planned time"/>
    <field name="$totalRemainingTime" title="Total remaining time"/>

  </grid>

  <form name="sprint-form" title="Sprint" model="com.axelor.apps.project.db.Sprint"
    width="large">

    <panel name="mainPanel">
      <field name="name" required="true"/>
      <field name="project" required="true"/>
      <field name="isBacklog" widget="boolean-switch" colSpan="1"/>
      <field name="sprintPeriod" requiredIf="!isBacklog" colSpan="5"/>
      <field name="description" colSpan="12"/>
      <field name="projectTaskList" canSelect="true" canNew="false" canEdit="false"
        domain="self.project=:project" showIf="id" colSpan="12"/>
      <field name="sprintAllocationLineList" grid-view="sprint-allocation-line-sprint-grid"
        form-view="sprint-allocation-line-form" showIf="id" colSpan="12"/>
    </panel>

  </form>

  <form model="com.axelor.utils.db.Wizard" title="Sprint generator"
    name="sprint-generator-wizard-form" width="large">

    <panel name="mainPanel">
      <field name="projects" title="Projects" target="com.axelor.apps.project.db.Project"
        type="many-to-many" widget="TagSelect" required="true" x-dirty="false" colSpan="12"/>
      <field name="sprintPeriods" title="Sprint periods"
        target="com.axelor.apps.project.db.SprintPeriod" type="many-to-many"
        onSelect="action-sprint-method-set-period-domain" widget="TagSelect" required="true"
        x-dirty="false" colSpan="12"/>
      <button onClick="action-sprint-method-generate" name="generate" title="Generate"/>
    </panel>

  </form>

  <action-method name="action-sprint-method-set-period-domain">
    <call class="com.axelor.apps.project.web.SprintController" method="sprintPeriodDomain"/>
  </action-method>

  <action-method name="action-sprint-method-generate">
    <call class="com.axelor.apps.project.web.SprintController" method="generateSprints"/>
  </action-method>

</object-views>
