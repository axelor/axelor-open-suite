<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="sprint-grid" title="Sprints" model="com.axelor.apps.project.db.Sprint">

    <field name="name"/>
    <field name="project"/>
    <field name="allocationPeriodSet" widget="tag-select"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="description"/>
    <field name="isBacklog"/>

  </grid>

  <form name="sprint-form" title="Sprint" model="com.axelor.apps.project.db.Sprint"
    width="large">

    <panel name="mainPanel">
      <field name="name" required="true"/>
      <field name="project" required="true"/>
      <field name="fromDate"/>
      <field name="toDate"/>
      <field name="isBacklog" widget="boolean-switch"/>
      <field name="allocationPeriodSet"
        onSelect="action-sprint-attrs-allocation-period-domain"
        onChange="action-sprint-method-compute-dates" canNew="false" canEdit="false" colSpan="12"/>
      <field name="description" colSpan="12"/>
      <field name="projectTaskList" canSelect="true" canNew="false" canEdit="false"
        domain="self.project=:project" showIf="id" colSpan="12"/>
    </panel>

  </form>

  <action-attrs name="action-sprint-attrs-allocation-period-domain">
    <attribute name="domain" for="allocationPeriodSet"
      expr="eval: &quot;self.company = ${project?.company?.id}&quot;"/>
  </action-attrs>

  <action-method name="action-sprint-method-compute-dates">
    <call class="com.axelor.apps.project.web.SprintController" method="computeDates"/>
  </action-method>

</object-views>
