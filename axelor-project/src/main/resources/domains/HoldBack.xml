<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="project" package="com.axelor.apps.project.db"/>

  <entity name="ProjectHoldBack">
    <string name="name" required="true" unique="true" namecolumn="true"/>
    <decimal name="defaultPercentage" min="0" max="100" title="Default percentage"
      default="0"/>
    <integer name="holdBackTypeSelect" title="Hold back type" required="true"
      selection="project.hold.back.type.select"/>
    <many-to-one name="projectHoldBackProduct" ref="com.axelor.apps.base.db.Product"
      title="HoldBack product" required="true"/>
    <many-to-many name="productsHeldBackSet" ref="com.axelor.apps.base.db.Product"
      title="Products held back"/>
    <one-to-many name="projectHoldBackLineList"
      ref="com.axelor.apps.project.db.ProjectHoldBackLine" title="HoldBacks lines"
      mappedBy="projectHoldBack"/>


    <extra-code>
      <![CDATA[

          // HOLD BACK TYPE SELECT
          public static final int HOLD_BACK_AS_EX_TAX_TOTAL = 1;
	      public static final int HOLD_BACK_AS_IN_TAX_TOTAL = 2;
      ]]>
    </extra-code>
  </entity>

</domain-models>
