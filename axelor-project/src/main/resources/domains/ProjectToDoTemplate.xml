<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="project" package="com.axelor.apps.project.db"/>

  <entity name="ProjectToDoTemplate">
    <string name="title" title="Title" namecolumn="true"/>
    <string name="typeSelect" selection="to.do.template.type.select" title="Type"
      default="project"/>
    <one-to-many name="projectToDoItemList"
      ref="com.axelor.apps.project.db.ProjectToDoItem" mappedBy="projectToDoTemplate"/>

    <extra-code><![CDATA[

      	// TYPE SELECT
      	public static final String TYPE_SELECT_PROJECT = "project";
      	public static final String TYPE_SELECT_PROJECT_TASK = "task";

    ]]></extra-code>
  </entity>

</domain-models>
