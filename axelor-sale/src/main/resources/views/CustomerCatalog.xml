<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

    <grid name="customer-catalog-grid" title="Customer Catalog" model="com.axelor.apps.sale.db.CustomerCatalog" editable="true">
        <field name="customerPartner" domain="self.isContact = false AND self.isCustomer = true" form-view="partner-form" grid-view="partner-grid"/>
        <field name="productCustomerCode"/>
        <field name="productCustomerName"/>
    </grid>

	<grid name="customer-catalog-partner-grid" title="Customer Catalog" model="com.axelor.apps.sale.db.CustomerCatalog" editable="true">
		<field name="product" form-view="product-form" grid-view="product-grid"/>
		<field name="productCustomerCode"/>
		<field name="productCustomerName"/>
	</grid>
    
    <form name="customer-catalog-form" title="Customer Catalog" model="com.axelor.apps.sale.db.CustomerCatalog">
    	<panel name="mainPanel" colSpan="12">
			<field name="customerPartner" domain="self.isContact = false AND self.isCustomer = true" form-view="partner-form" grid-view="partner-grid"/>
        	<field name="productCustomerCode"/>
        	<field name="productCustomerName"/>
       	</panel>
    </form>

	<form name="customer-catalog-partner-form" title="Customer Catalog" model="com.axelor.apps.sale.db.CustomerCatalog">
		<panel name="mainPanel" colSpan="12">
			<field name="product" form-view="product-form" grid-view="product-grid"/>
			<field name="productCustomerCode"/>
			<field name="productCustomerName"/>
		</panel>
	</form>

        
</object-views>