<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="sale-order-line-tax-grid" title="SO Tax lines"
    model="com.axelor.apps.sale.db.SaleOrderLineTax">
    <field name="taxLine" width="400%" form-view="tax-line-form" grid-view="tax-line-grid"/>
    <field name="taxType" grid-view="tax-type-grid" form-view="tax-type-form"/>
    <field name="saleOrder" hidden="true"/>
    <field name="saleOrder.currency" hidden="true"/>
    <field name="saleOrder.currency.numberOfDecimals" hidden="true"/>
    <field name="exTaxBase" x-scale="saleOrder.currency.numberOfDecimals"/>
    <field name="taxTotal" aggregate="sum" x-scale="saleOrder.currency.numberOfDecimals"/>
  </grid>

  <form name="sale-order-line-tax-form" title="SO Tax line"
    model="com.axelor.apps.sale.db.SaleOrderLineTax" onLoad="action-base-attrs-set-tax-line-scale"
    onNew="action-base-attrs-set-tax-line-scale">
    <panel name="mainPanel">
      <field name="taxLine" canEdit="false" grid-view="tax-line-grid"
        form-view="tax-line-form" readonly="true"/>
      <field name="taxType" grid-view="tax-type-grid" form-view="tax-type-form"
        readonly="true"/>
      <field name="taxLine.tax.name"/>
      <field name="taxLine.value"/>
      <field name="exTaxBase" x-scale="saleOrder.currency.numberOfDecimals" readonly="true"/>
      <field name="taxTotal" x-scale="saleOrder.currency.numberOfDecimals"
        readonlyIf="!taxLine.tax.manageByAmount"
        onChange="action-sale-order-line-tax-method-recompute-amounts"/>
      <field name="inTaxTotal" x-scale="saleOrder.currency.numberOfDecimals" readonly="true"/>
      <field name="percentageTaxTotal" showIf="taxLine.tax.manageByAmount"
        x-scale="saleOrder.currency.numberOfDecimals" readonly="true"/>
      <field name="saleOrder" hidden="true"/>
      <field name="saleOrder.currency" hidden="true"/>
      <field name="saleOrder.currency.numberOfDecimals" hidden="true"/>
      <field name="taxLine.tax.manageByAmount" hidden="true"/>
    </panel>
  </form>

  <action-method name="action-sale-order-line-tax-method-recompute-amounts">
    <call class="com.axelor.apps.sale.web.SaleOrderLineTaxController" method="recomputeAmounts"/>
  </action-method>

</object-views>