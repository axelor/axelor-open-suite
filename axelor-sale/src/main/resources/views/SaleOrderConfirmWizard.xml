<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.2.xsd">

  <form name="sale-order-confirm-wizard-form" title="Confirm"
    model="com.axelor.apps.sale.db.SaleOrder">
    <panel-related name="saleOrderLineListPanel" field="saleOrderLineList"
      canNew="false" grid-view="confirm-wizard-sale-order-line-grid" editable="true"/>
    <panel name="actionPanel">
      <button name="confirmBtn" title="Generate the order"
        onClick="action-sale-order-confirm-wizard-method-generate"/>
    </panel>
  </form>

  <grid name="confirm-wizard-sale-order-line-grid" title="Lines to confirm" edit-icon="false"
    model="com.axelor.apps.sale.db.SaleOrderLine">
    <field name="product.code" width="120"/>
    <field name="productName" readonly="true"/>
    <field name="qty" readonly="true" aggregate="sum" x-scale="$nbDecimalDigitForQty"/>
    <field name="unit" readonly="true" form-view="unit-form" grid-view="unit-grid"/>
    <field name="price" readonly="true" x-scale="$nbDecimalDigitForUnitPrice"/>
    <field name="exTaxTotal" readonly="true" aggregate="sum"
      x-scale="$nbDecimalDigitForUnitPrice"/>
    <field name="orderedQty" readonly="true" x-scale="$nbDecimalDigitForQty"/>
    <field name="$qtyToOrder" title="Qty to order" type="decimal" readonlyIf="$orderAll"
      min="0" x-scale="$nbDecimalDigitForQty"/>
    <field name="$orderAll" title="Order all" type="boolean"
      onChange="action-attrs-sale-order-line-confirm-wizard-fill-qty"/>
    <field name="$nbDecimalDigitForUnitPrice" hidden="true"/>
    <field name="$nbDecimalDigitForQty" hidden="true"/>
  </grid>

  <action-attrs name="action-attrs-sale-order-line-confirm-wizard-fill-qty">
    <attribute for="qtyToOrder" name="value" expr="eval: qty - orderedQty" if="orderAll"/>
  </action-attrs>

  <action-method name="action-sale-order-confirm-wizard-method-open-wizard">
    <call class="com.axelor.apps.sale.web.SaleOrderConfirmController"
      method="showPopUpConfirmWizard"/>
  </action-method>

  <action-method name="action-sale-order-confirm-wizard-method-generate">
    <call class="com.axelor.apps.sale.web.SaleOrderConfirmController"
      method="generateConfirmedSaleOrder"/>
  </action-method>
</object-views>
