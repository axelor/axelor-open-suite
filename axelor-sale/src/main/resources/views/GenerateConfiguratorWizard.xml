<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <form name="generate-configurator-wizard-form" model="com.axelor.apps.base.db.Wizard" title="Generate configurator">
        <panel name="main" >
            <field name="configuratorCreator" title="Template" widget="SuggestBox"
                   type="MANY_TO_ONE" target="com.axelor.apps.sale.db.ConfiguratorCreator"
                   canView="false"
                   target-name="name" form-view="configurator-creator-form"
                   grid-view="configurator-creator-grid"
                   onSelect="action-generate-configurator-creator-method-domain"/>
            <spacer/>
            <button name="generate" title="Generate" onClick="action-generate-configurator-creator-view-show-configurator,close"/>
        </panel>
    </form>

    <action-method name="action-generate-configurator-creator-method-domain">
        <call class="com.axelor.apps.sale.web.ConfiguratorCreatorController"
              method="createWizardDomain"/>
    </action-method>

    <action-view name="action-generate-configurator-creator-view-show-configurator"
                 model="com.axelor.apps.sale.db.Configurator"
                 title="Show Configurator">
        <view type="form" name="configurator-wizard-form"/>
        <view-param name="popup" value="reload"/>
		<view-param name="popup-save" value="false"/>
		<view-param name="show-toolbar" value="false"/>
		<view-param name="show-confirm" value="false"/>
        <context name="_configuratorCreator" expr="eval: configuratorCreator"/>
        <context name="_saleOrderId" expr="eval: _saleOrderId"/>
    </action-view>
    
</object-views>
