<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="loyalty-account-grid" title="Loyalty account"
    model="com.axelor.apps.sale.db.LoyaltyAccount">
    <field name="partner"/>
    <field name="company"/>
    <field name="pointsBalance" x-scale="0"/>
  </grid>

  <grid name="loyalty-account-partner-grid" title="Loyalty account"
    model="com.axelor.apps.sale.db.LoyaltyAccount">
    <field name="company"/>
    <field name="pointsBalance" x-scale="0"/>
  </grid>

  <form name="loyalty-account-form" title="Loyalty account"
    model="com.axelor.apps.sale.db.LoyaltyAccount">
    <panel name="mainPanel" colSpan="12">
      <field name="partner"/>
      <field name="company"/>
      <field name="pointsBalance" x-scale="0"/>
    </panel>
  </form>

  <form name="loyalty-account-partner-form" title="Loyalty account"
    model="com.axelor.apps.sale.db.LoyaltyAccount">
    <panel name="mainPanel" colSpan="12">
      <field name="company"/>
      <field name="pointsBalance" readonly="true" x-scale="0"/>
    </panel>
  </form>

</object-views>