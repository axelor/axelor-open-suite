<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="sale" package="com.axelor.apps.sale.db"/>

  <entity name="LoyaltyAccount">

    <many-to-one name="partner" title="Partner" ref="com.axelor.apps.base.db.Partner"/>
    <many-to-one name="company" title="Company" ref="com.axelor.apps.base.db.Company"/>
    <many-to-one name="tradingName" title="Trading name"
      ref="com.axelor.apps.base.db.TradingName"/>
    <decimal name="pointsBalance" title="Points balance" precision="20" scale="10"
      default="0"/>
    <decimal name="futurePointsBalance" title="Future points balance" precision="20"
      scale="10" default="0"/>
    <one-to-many name="historyLineList" title="History"
      ref="com.axelor.apps.sale.db.LoyaltyAccountHistoryLine" mappedBy="loyaltyAccount"/>
    <many-to-many name="batchSet" ref="com.axelor.apps.base.db.Batch" title="Batchs"/>

    <unique-constraint columns="partner,company"/>
    <unique-constraint columns="partner,tradingName"/>

    <extra-code>
      <![CDATA[
          public static final int LOYALTY_ACCOUNT_MANAGED_ON_COMPANY = 0;
          public static final int LOYALTY_ACCOUNT_MANAGED_ON_PARTNER = 1;
          public static final int LOYALTY_ACCOUNT_MANAGED_ON_TRADING_NAME = 2;
        ]]>
    </extra-code>
  </entity>

</domain-models>
