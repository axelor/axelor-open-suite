<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="sale" package="com.axelor.apps.sale.db"/>

  <entity name="LoyaltyAccount">

    <many-to-one name="partner" title="Partner" ref="com.axelor.apps.base.db.Partner"/>
    <many-to-one name="company" title="Company" ref="com.axelor.apps.base.db.Company"/>
    <decimal name="pointsBalance" title="Points balance" precision="20" scale="10"
      default="0"/>

    <unique-constraint columns="partner,company"/>
  </entity>

</domain-models>
