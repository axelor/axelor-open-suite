<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="invoice-line-event-grid" title="Invoice lines" model="com.axelor.apps.account.db.InvoiceLineEvent">
        <field name="articleId"/>
        <field name="summaryId"/>
        <field name="product"/>
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="qty"/>
        <field name="qtyUnit"/>
        <field name="price"/>
        <field name="priceUnit"/>
        <field name="amount"/>
    </grid>
    
    <form name="invoice-line-event-form" title="Invoice line" model="com.axelor.apps.account.db.InvoiceLineEvent" cols="4">
        <field name="articleId"/>
        <field name="summaryId"/>
        <field name="product"/>
        <break/>
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="qty"/>
        <field name="qtyUnit"/>
        <field name="price"/>
        <field name="priceUnit"/>
        <field name="amount"/>
    </form>
    
</object-views>
