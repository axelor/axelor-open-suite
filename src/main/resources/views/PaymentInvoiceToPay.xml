<!--         <field name="invoice" grid-view="invoice-grid" form-view="invoice-form"/> -->
        <field name="paymentScheduleLine"/>
        <field name="moveLine"/>
        <field name="company"/>
        <field name="currency"/>
        <field name="totalAmount"/>
        <field name="remainingAmount"/>
        <field name="remainingAmountAfterPayment"/>
        <field name="amountToPay"/>
        <field name="moveLineGenerated"/>
    </form>
