<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	<grid title="Application Credential" name="application-credential-grid" model="com.axelor.apps.base.db.ApplicationCredential"
		orderBy="-snType">
		<field name="snType" title="Network Type"></field>
		<field name="apikey" title="API Key"></field>
		<field name="apisecret" title="API Secret"></field>
		<field name="redirectUrl" title="Redirect URL"></field>
		<field name="userId" title="Current User"></field>
	</grid>

	<form title="Application Credential" name="application-credential-form" model="com.axelor.apps.base.db.ApplicationCredential"
		cols="2" colWidths="*,200">
		
		<group title="Application Credential" colSpan="1" cols="4">
			<field name="snType" required="true"></field>
			<break />
			<field name="redirectUrl"></field>
			<break />
			<field name="apikey"></field>
			<field name="apisecret"></field>
		</group>
		<group name="side_help" title="Help" colSpan="1" cols="1"
			canCollapse="true"
			help="Specify The Application's API key and API key Secret for Particualr Social networking Website Application">
			<label
				title="Specify The Application's API key and API key Secret for Particualr Social networking Website Application" />
		</group>
	</form>
</object-views>