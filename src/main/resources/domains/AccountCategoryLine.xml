<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="AccountCategoryLine" lang="java">
    
    <many-to-one name="accountCategory" ref="AccountCategory" title="Catégorie de compte"/>
    <string name="sign" max="1" title="Signe"/>
    <many-to-one name="category" ref="AccountCategory" title="Catégorie"/>
   
    <string name="fullName" namecolumn="true" search="accountCategory,sign" title="Nom">
	    <![CDATA[
		    String name = "Nouvelle ligne de catégorie";
		    if (accountCategory != null) name = accountCategory.getName();
		    if (accountCategory != null && sign != null && !sign.isEmpty()) name = name + " - " + sign;
		    return name;
	    ]]>
    </string>
    
  </entity>

</domain-models>
