<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
	
	<module name="base" package="com.axelor.apps.base.db"/>
	
	<entity name="LnGroupDiscussion">
		<string name="discussionId" title="Id" />
		<string name="discussionSummary" title="Summary" max="4000" multiline="true" />
		<string name="discussionTitle" title="Title" max="200" />
		<string name="discussionFrom" title="From" />
		<datetime name="discussionTime" tz="true" title="Time" />
		<many-to-one name="groupId" ref="com.axelor.apps.base.db.LnGroup" />
		<many-to-one name="userInfo" ref="com.axelor.apps.base.db.UserInfo" title="User" />
		<one-to-many name="discussionCommentsList" ref="com.axelor.apps.base.db.LnGroupDiscussionComments" mappedBy="discussionId" />
		<boolean name="isByUser" default="true" />
	</entity>
</domain-models>