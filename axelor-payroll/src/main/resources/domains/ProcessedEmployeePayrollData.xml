<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.3.xsd">

    <module name="payroll" package="com.axelor.apps.payroll.db"/>

    <entity name="ProcessedEmployeePayrollData" lang="java" cacheable="true">

        <many-to-one name="payPeriod" ref="com.axelor.apps.base.db.Period" title="Pay Period"/>
        <many-to-one name="employee" ref="com.axelor.apps.payroll.db.EmployeePayrollData" title="Employee"/>
        <many-to-many name="earnings" ref="com.axelor.apps.payroll.db.PayrollComponent" title="Earnings"/>
        <many-to-many name="deductions" ref="com.axelor.apps.payroll.db.PayrollComponent" title="Deductions"/>
        <many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company"/>
        <date name="processedDate" title="Processed Date"/>
        <string name="month" title="Month">
            <![CDATA[
                if(processedDate == null){
                    return null;
                }
                String month =  ""+processedDate.getMonth();
                return month.substring(0, 1).toUpperCase() + month.substring(1, month.length()).toLowerCase();
            ]]>
        </string>
        <string name="year" title="year">
            <![CDATA[
                if(processedDate == null){
                    return null;
                }
                return ""+processedDate.getYear();
            ]]>
        </string>
        <boolean name="showDetails" default="false" />
        <decimal name="calculatedTax" title="Calculated Tax"/>
        <decimal name="calculatedDeductions" title="Calculated Deductions"/>
        <decimal name="grossIncome" title="Gross Income" />
        <decimal name="netIncome" title="Net Income" />
        <decimal name="ssnitContribution" title="SSNIT Contribution" />
        <decimal name="totalRemuneration" title="Total Remuneration"/>
        <decimal name="totalSsnitContribution" title="Total SSNIT Contribution" />
        <decimal name="totalTax" title="Total Tax" />
        <decimal name="otherDeductions" title="Deductions aside Tax and SSNIT" />
        <decimal name="totalDeductions" title="Total Deductions" />
        <one-to-many name="payslips" ref="Payslip" />
        <unique-constraint columns="employee,company" />

    </entity>
</domain-models>