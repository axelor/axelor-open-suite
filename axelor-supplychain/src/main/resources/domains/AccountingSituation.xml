<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="AccountingSituation">
    <!-- Customer Credit -->
    <decimal name="acceptedCredit" title="Accepted Credit" precision="20" scale="3"/>
    <decimal name="usedCredit" title="Used Credit" precision="20" scale="3" readonly="true"/>
    <date name="insurCreditDate" title="Insurance date credit"/>
    <string name="description" title="Comment" large="true"/>

    <!-- Analytic fields -->
    <one-to-many name="analyticMoveLineList"
      ref="com.axelor.apps.account.db.AnalyticMoveLine" title="Analytic move lines"
      mappedBy="accountingSituation"/>
    <many-to-one name="axis1AnalyticAccount" title="Cpte Ana. AXIS1"
      ref="com.axelor.apps.account.db.AnalyticAccount"/>
    <many-to-one name="axis2AnalyticAccount" title="Cpte Ana. AXIS2"
      ref="com.axelor.apps.account.db.AnalyticAccount"/>
    <many-to-one name="axis3AnalyticAccount" title="Cpte Ana. AXIS3"
      ref="com.axelor.apps.account.db.AnalyticAccount"/>
    <many-to-one name="axis4AnalyticAccount" title="Cpte Ana. AXIS4"
      ref="com.axelor.apps.account.db.AnalyticAccount"/>
    <many-to-one name="axis5AnalyticAccount" title="Cpte Ana. AXIS5"
      ref="com.axelor.apps.account.db.AnalyticAccount"/>
  </entity>
</domain-models>
