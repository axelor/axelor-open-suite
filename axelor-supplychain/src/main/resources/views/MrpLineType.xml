<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
	
    <grid name="mrp-line-type-grid" model="com.axelor.apps.supplychain.db.MrpLineType" title="MRP Types" orderBy="sequence">
        <hilite if="[5,8,9].indexOf(elementSelect) != -1" strong="true" color="info"/>
        <field name="name"/>
        <field name="elementSelect"/>
        <field name="typeSelect"/>
		<field name="applicationFieldSelect" widget="MultiSelect"/>
        <field name="sequence"/>
    </grid>
    
	<form name="mrp-line-type-form" model="com.axelor.apps.supplychain.db.MrpLineType" title="MRP Type">
	    <panel name="mainPanel" >
	        <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
   	        <field name="label"/>
   	        <field name="name"/>
        	<field name="elementSelect"/>
        	<field name="typeSelect"/>
        	<field name="sequence"/>
        	<field name="statusSelect" widget="MultiSelect" selection="purchase.purchase.order.status.select" showIf="elementSelect == 2"/>
        	<field name="statusSelect" widget="MultiSelect" selection="sale.order.status.select" showIf="elementSelect == 3"/>
        	<field name="statusSelect" widget="MultiSelect" selection="production.manuf.order.status.select" showIf="elementSelect == 6" if-module="axelor-production" if="__config__.app.isApp('production')"/>
	   		<field name="includeElementWithoutDate" showIf="$contains([2,3,6,7], elementSelect)"/>
				<field name="ignoreEndDate" showIf="$contains([2, 6], elementSelect)"/>
	   		<field name="applicationFieldSelect" widget="MultiSelect"/>
	    </panel>
	 </form>
	 
</object-views>