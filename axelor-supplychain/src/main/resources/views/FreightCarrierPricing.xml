<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.2.xsd">

  <form id="supplychain-freight-carrier-mode-form" name="freight-carrier-mode-form"
    title="Freight carrier mode" model="com.axelor.apps.stock.db.FreightCarrierMode"
    extension="true">

    <extend target="/">
      <attribute name="onNew" value="action-freight-carrier-pricing-on-new"/>
      <attribute name="onLoad"
        value="action-freight-carrier-pricing-set-freight-carrier-mode-readonly"/>
    </extend>
  </form>

  <action-group name="action-freight-carrier-pricing-on-new">
    <action name="action-freight-carrier-pricing-set-default-freight-carrier-mode"/>
    <action name="action-freight-carrier-pricing-set-freight-carrier-mode-readonly"/>
  </action-group>

  <action-record
    name="action-freight-carrier-pricing-set-default-freight-carrier-mode"
    model="com.axelor.apps.stock.db.FreightCarrierPricing">
    <field name="freightCarrierMode" expr="eval: __parent__"
      if="__parent__ != null &amp;&amp; __parent__.get('_model') == 'com.axelor.apps.stock.db.FreightCarrierMode'"/>
  </action-record>

  <action-attrs name="action-freight-carrier-pricing-set-freight-carrier-mode-readonly">
    <attribute for="freightCarrierMode" name="readonly" expr="eval: freightCarrierMode"/>
  </action-attrs>

</object-views>
