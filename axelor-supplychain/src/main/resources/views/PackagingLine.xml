<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid name="packaging-line-grid" model="com.axelor.apps.supplychain.db.PackagingLine"
    title="Packaging lines">
    <field name="stockMoveLine"/>
    <field name="stockMoveLine.product"/>
    <field name="stockMoveLine.trackingNumber"/>
    <field name="qty" x-scale="$nbDecimalDigitForQty"/>
    <field name="stockMoveLine.netMass" x-scale="$nbDecimalDigitForPrice"/>
    <field name="$nbDecimalDigitForQty" hidden="true"/>
    <field name="$nbDecimalDigitForPrice" hidden="true"/>
  </grid>

  <form name="packaging-line-form" model="com.axelor.apps.supplychain.db.PackagingLine"
    title="Packaging line">
    <panel name="mainPanel">
      <field name="stockMoveLine" grid-view="stock-move-line-grid"
        form-view="stock-move-line-form"
        onSelect="action-packaging-line-attrs-set-stock-move-line-domain"
        onChange="action-packaging-line-record-stock-move-line-onchange"/>
      <field name="stockMoveLine.product"/>
      <field name="trackingNumber" grid-view="tracking-number-grid"
        form-view="tracking-number-form" readonly="true"/>
      <field name="qty" x-scale="$nbDecimalDigitForQty" readonlyIf="!stockMoveLine" min="0"/>
      <field name="stockMoveLine.netMass" x-scale="$nbDecimalDigitForPrice"/>
      <field name="$nbDecimalDigitForQty" hidden="true"/>
      <field name="$nbDecimalDigitForPrice" hidden="true"/>
    </panel>
  </form>

  <action-record name="action-packaging-line-record-stock-move-line-onchange"
    model="com.axelor.apps.supplychain.db.PackagingLine">
    <field name="qty" expr="eval: stockMoveLine?.qtyRemainingToPackage"/>
    <field name="trackingNumber" expr="eval: stockMoveLine?.trackingNumber"/>
  </action-record>

  <action-attrs name="action-packaging-line-attrs-set-stock-move-line-domain">
    <attribute name="domain" for="stockMoveLine"
      expr="eval: &quot; self.stockMove.typeSelect = 2 AND self.qtyRemainingToPackage > 0 &quot;"
      if="!__parent__"/>
    <attribute name="domain" for="stockMoveLine"
      expr="eval: &quot; self.stockMove.typeSelect = 2 AND self.qtyRemainingToPackage > 0 AND self.stockMove.id IN (${__parent__?.stockMove?.id}) &quot;"
      if="__parent__"/>
  </action-attrs>

</object-views>
