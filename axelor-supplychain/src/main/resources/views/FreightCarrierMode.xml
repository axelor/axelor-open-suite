<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <form id="supplychain-freight-carrier-mode-form" name="freight-carrier-mode-form"
    title="Freight carrier mode" model="com.axelor.apps.stock.db.FreightCarrierMode"
    extension="true">
    <extend target="//panel[@name='mainPanel']/field[@name='shipmentMode']">
      <insert position="after">
        <field name="freightCarrierPricing" form-view="freight-carrier-mode-pricing-form"
          grid-view="freight-carrier-mode-pricing-grid" colSpan="6"/>
        <field name="freightCarrierDelay" form-view="freight-carrier-mode-pricing-form"
          grid-view="freight-carrier-mode-pricing-grid" colSpan="6"/>
      </insert>
    </extend>
  </form>

  <form id="supplychain-freight-carrier-mode-freight-carrier-form"
    name="freight-carrier-mode-freight-carrier-form" title="Freight carrier mode"
    model="com.axelor.apps.stock.db.FreightCarrierMode" extension="true">
    <extend target="//panel[@name='mainPanel']/field[@name='shipmentMode']">
      <insert position="after">
        <field name="freightCarrierPricing" form-view="freight-carrier-mode-pricing-form"
          grid-view="freight-carrier-mode-pricing-grid" colSpan="6"/>
        <field name="freightCarrierDelay" form-view="freight-carrier-mode-pricing-form"
          grid-view="freight-carrier-mode-pricing-grid" colSpan="6"/>
      </insert>
    </extend>
  </form>

</object-views>
