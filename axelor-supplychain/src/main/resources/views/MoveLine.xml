<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="move-line-cut-off-grid" title="Move lines concerned by cut off"
    model="com.axelor.apps.account.db.MoveLine" groupBy="move">
    <toolbar>
      <button name="validateBtn" title="Validate" icon="fa-check"
        onClick="action-move-line-method-validate-cut-off-batch"/>
    </toolbar>
    <hilite color="danger" if="$get('move.cutOffMoveGenerated')"/>
    <field name="move.reference"/>
    <field name="move.date"/>
    <field name="move.journal"/>
    <field name="description"/>
    <field name="move.statusSelect"/>
    <field name="$cutOffProrataAmount" title="Prorata amount" type="decimal" x-scale="2"/>
    <field name="move.cutOffMoveGenerated" hidden="true"/>
    <field name="move" hidden="true"/>
    <field name="id" hidden="true"/>
  </grid>

  <action-method name="action-move-line-method-validate-cut-off-batch">
    <call class="com.axelor.apps.supplychain.web.MoveLineController"
      method="validateCutOffBatch"/>
  </action-method>

</object-views>