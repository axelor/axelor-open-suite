<?xml version="1.0" encoding="UTF-8"?>
<csv-inputs xmlns="http://axelor.com/xml/ns/data-import"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/data-import http://axelor.com/xml/ns/data-import/data-import_7.4.xsd">

  <input file="studio_appMobileSettings.csv" separator=";"
    type="com.axelor.studio.db.AppMobileSettings" search="self.app.code = :code">
    <bind column="fieldsToShowOnTimesheet" to="fieldsToShowOnTimesheet"
      check="com.axelor.apps.base.service.imports.importer.ImportHelper.checkSelection('mobilesettings.employee.timesheet.imputation.select', fieldsToShowOnTimesheet, false)"
      check-message="Invalid fieldsToShowOnTimesheet :fieldsToShowOnTimesheet"/>
    <bind column="productTypesToDisplaySelect" to="productTypesToDisplaySelect"
      check="com.axelor.apps.base.service.imports.importer.ImportHelper.checkSelection('product.product.type.select', productTypesToDisplaySelect, false)"
      check-message="Invalid productTypesToDisplaySelect :productTypesToDisplaySelect"/>
    <bind column="reportingTypesToDisplaySelect" to="reportingTypesToDisplaySelect"
      check="com.axelor.apps.base.service.imports.importer.ImportHelper.checkSelection('mobilesettings.reporting.type.display.select', reportingTypesToDisplaySelect, false)"
      check-message="Invalid reportingTypesToDisplaySelect :reportingTypesToDisplaySelect"/>
    <bind to="app" column="code" search="self.code = :code"/>
  </input>

  <input file="mobilesettings_mobileConfig.csv" separator=";"
    search="self.importId = :importId" type="com.axelor.apps.mobilesettings.db.MobileConfig">
    <bind column="sequence" to="sequence"
      check="com.axelor.apps.base.service.imports.importer.ImportHelper.checkSelection('mobilesettings.mobile.config.sequence.select', sequence, true)"
      check-message="Invalid sequence :sequence"/>
    <bind column="sequence" to="sequence"
      check="com.axelor.apps.base.service.imports.importer.ImportHelper.checkUniqueConstraint('com.axelor.apps.mobilesettings.db.MobileConfig', 'importId', importId, 'sequence', sequence)"
      check-message="Sequence must be unique"/>
  </input>

</csv-inputs>
