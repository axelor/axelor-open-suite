<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid name="mobile-dashboard-line-grid" title="Mobile dashboard lines"
    model="com.axelor.apps.mobilesettings.db.MobileDashboardLine" editable="true">
    <field name="name" required="true"/>
    <field name="mobileChart1" canNew="true" canEdit="true"/>
    <field name="mobileChart2" canNew="true" canEdit="true"/>
    <field name="mobileChart3" canNew="true" canEdit="true"/>
    <field name="mobileChart4" canNew="true" canEdit="true"/>
  </grid>

  <form name="mobile-dashboard-line-form" title="Mobile dashboard line"
    model="com.axelor.apps.mobilesettings.db.MobileDashboardLine" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="name" required="true" colSpan="6"/>
      <spacer colSpan="6"/>
      <field name="mobileChart1" canNew="true" canEdit="true"/>
      <field name="mobileChart2" canNew="true" canEdit="true"/>
      <field name="mobileChart3" canNew="true" canEdit="true"/>
      <field name="mobileChart4" canNew="true" canEdit="true"/>
    </panel>

  </form>
</object-views>
