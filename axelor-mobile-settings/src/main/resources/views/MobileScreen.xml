<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="mobile-screen-grid" title="Mobile screens"
    model="com.axelor.apps.mobilesettings.db.MobileScreen">
    <field name="technicalName"/>
    <field name="name"/>
    <field name="isUsableOnShortcut"/>
  </grid>

  <form name="mobile-screen-form" title="Mobile screen"
    model="com.axelor.apps.mobilesettings.db.MobileScreen" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="name"/>
      <field name="technicalName" colSpan="5"/>
      <field name="isUsableOnShortcut"/>
    </panel>
  </form>
</object-views>
