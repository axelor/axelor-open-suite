<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <form id="business-production-business-project-form" name="business-project-form"
    title="Business project" model="com.axelor.apps.project.db.Project" width="large"
    onLoad="action-business-project-project-group-on-load"
    onNew="action-business-project-project-group-on-new" onSave="action-project-group-on-save"
    extension="true">

    <extend target="//panel-dashlet[@name='saleOrderLinePanelDashlet']">
      <insert position="after">
        <button name="generateProdOrdersBtn" title="Generate production orders"
          onClick="action-project-method-generate-prod-orders"/>
      </insert>
    </extend>

    <extend target="//panel[@name='taskTreePanel']">
      <insert position="after">
        <panel title="Technical case" name="saleOrderPanel" hidden="true">
          <button name="openLines" title="Open lines"
            onClick="action-project-dashlet-sale-order-line"/>
          <panel-dashlet name="saleOrderLinePanelDashlet"
            action="action-project-dashlet-sale-order-line" colSpan="12"/>
        </panel>
      </insert>
    </extend>
  </form>

  <action-method name="action-project-method-generate-prod-orders">
    <call class="com.axelor.apps.businessproduction.web.ProjectController"
      method="generateProdOrders"/>
  </action-method>

  <form id="business-production-business-project-financial-datas-form" title="Business project"
    model="com.axelor.apps.project.db.Project" width="large"
    name="business-project-financial-datas-form" extension="true">

    <extend target="//panel[@name='contractPanel']">
      <insert position="after">
        <panel title="Production" name="productionPanel"
          if-module="axelor-business-production"
          if="__config__.app.isApp('business-project')
				 &amp;&amp; __config__.app.getApp('business-project').getShowProductionOrderRelatedToProject()">
          <button name="showProductionOrdersBtn" title="Show production orders"
            css="btn-custom text-left" icon="fa-cogs"
            onClick="action-project-view-show-production-orders"/>
          <panel-related colSpan="12" field="productionOrderList" canSelect="true"
            canNew="false" canEdit="false" canSearch="true" name="productionOrderList"/>
        </panel>
      </insert>
    </extend>
  </form>

  <action-view name="action-project-dashlet-sale-order-line" title="Sale order lines"
    model="com.axelor.apps.sale.db.SaleOrderLine">
    <view type="grid" name="business-production-sale-order-line-editable-grid"/>
    <view type="form" name="sale-order-line-form"/>
    <view-param name="popup" value="true"/>
    <domain>self.project = :projectId AND self.saleOrder.statusSelect in (2,3)</domain>
    <context name="projectId" expr="eval: id"/>
  </action-view>
</object-views>
