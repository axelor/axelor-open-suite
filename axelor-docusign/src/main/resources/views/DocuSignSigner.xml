<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
	
	<grid name="docusign-signer-grid" title="Signers" model="com.axelor.apps.docusign.db.DocuSignSigner">
       <field name="sequence" width="100"/>
       <field name="name"/>
	   <field name="signer"/>       
	   <field name="company"/>	   
	</grid>
	
	<form name="docusign-signer-form" title="Signer" model="com.axelor.apps.docusign.db.DocuSignSigner">    
       <panel name="mainPanel" colSpan="12">
         <field name="name"/>
         <field name="recipientId"/>                 
         <field name="company" form-view="company-form"/>
         <field name="isRequired"/>         
         <field name="isInPersonSigner"/>
         <field name="signer" form-view="partner-form"/>         
         <field name="accessCode"/>
         <panel-related name="docuSignFieldListPanel" field="docuSignFieldList" colSpan="12" grid-view="docusign-field-grid" form-view="docusign-field-form"/>
       </panel>
    </form>
	
</object-views>