<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="docusign-field-setting-grid" title="Field settings"
    model="com.axelor.apps.docusign.db.DocuSignFieldSetting">
    <field name="name"/>
    <field name="typeSelect"/>
  </grid>

  <form name="docusign-field-setting-form" title="Field setting"
    model="com.axelor.apps.docusign.db.DocuSignFieldSetting">
    <panel name="mainPanel" colSpan="12">
      <field name="name"/>
      <field name="typeSelect"/>
      <field name="docuSignSignerSetting" form-view="docusign-signer-setting-form"
        grid-view="docusign-signer-setting-grid"/>
      <field name="value"/>
      <field name="tabLabel"/>
      <field name="pageNumber"/>
      <field name="anchor"/>
      <field name="anchorUnits" showIf="anchor" help="For example, use 'pixels'"/>
      <field name="anchorYOffset" showIf="anchor"/>
      <field name="anchorXOffset" showIf="anchor"/>
      <field name="xPosition" hideIf="anchor"/>
      <field name="yPosition" hideIf="anchor"/>
      <field name="isRequired"/>
      <field name="font"/>
      <field name="fontSize"/>
      <field name="fontColor"/>
      <field name="isBold"/>
      <panel-related name="docuSignFieldSettingListPanel"
        field="docuSignFieldSettingList" colSpan="12" grid-view="docusign-field-setting-grid"
        form-view="docusign-field-setting-form" showIf="typeSelect == 6 || typeSelect == 8"/>
    </panel>
  </form>

</object-views>