<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
	
	<grid name="docusign-envelope-setting-grid" title="Envelope settings" model="com.axelor.apps.docusign.db.DocuSignEnvelopeSetting">
	   <field name="name"/>
	   <field name="metaModel"/>
	   <field name="emailSubject"/>
	   <field name="docuSignAccount"/>
	</grid>
	
	<form name="docusign-envelope-setting-form" title="Envelope setting" model="com.axelor.apps.docusign.db.DocuSignEnvelopeSetting"
	   onSave="action-docusign-envelope-setting-method-add-item-to-ref-select">    
       <panel name="mainPanel" colSpan="12">         
         <field name="name"/>
         <field name="metaModel" grid-view="meta-model-grid" form-view="meta-model-form"/>         
         <field name="emailSubject"/>
         <field name="docuSignAccount"/>
         <field name="isOrderedDocuments"/>
         <field name="isOrderedSigners"/>         
         <panel-related name="docuSignDocumentSettingListPanel" field="docuSignDocumentSettingList" colSpan="12" grid-view="docusign-document-setting-grid" form-view="docusign-document-setting-form" orderBy="sequence" canMove="true"/>
         <panel-related name="docuSignSignerSettingListPanel" field="docuSignSignerSettingList" colSpan="12" grid-view="docusign-signer-setting-grid" form-view="docusign-signer-setting-form" orderBy="sequence" canMove="true"/>
         <field name="activeWebhook"/>
         <panel name="webhookPanel" title="Webhook setting" colSpan="12" showIf="activeWebhook">
            <field name="checkEnvelopeStatus"/>
            <field name="checkRecipientStatus"/>
            <panel name="envelopeStatutPanel" title="Envelope status" showIf="checkEnvelopeStatus">
              <field name="checkEnvelopeStatusDelivered"/>
              <field name="checkEnvelopeStatusCompleted"/>
              <field name="checkEnvelopeStatusDeclined"/>
              <field name="checkEnvelopeStatusVoided"/>
            </panel>
            <panel name="recipientStatutPanel" title="Recipient status" showIf="checkRecipientStatus">
              <field name="checkRecipientStatusDelivered"/>
              <field name="checkRecipientStatusCompleted"/>
              <field name="checkRecipientStatusDeclined"/>
            </panel>
         </panel>   
       </panel>
    </form>
    
    <action-method name="action-docusign-envelope-setting-method-add-item-to-ref-select">
		<call class="com.axelor.apps.docusign.web.DocuSignEnvelopeSettingController" method="addItemToReferenceSelection"/>
	</action-method>
	
</object-views>