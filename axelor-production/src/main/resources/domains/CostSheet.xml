<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.3.xsd">

  <module name="production" package="com.axelor.apps.production.db"/>

  <entity name="CostSheet" lang="java">
  
  	<many-to-one name="billOfMaterial" ref="com.axelor.apps.production.db.BillOfMaterial" title="BillOfMaterial"/>
    <many-to-one name="manufOrder" ref="com.axelor.apps.production.db.ManufOrder" title="ManufOrder"/>
  	<one-to-many name="costSheetLineList" ref="com.axelor.apps.production.db.CostSheetLine" mappedBy="costSheet" title="Cost sheet lines"/>
    <decimal name="costPrice" title="Cost price" precision="20" scale="10"/>
   	<many-to-one name="currency" ref="com.axelor.apps.base.db.Currency" title="Currency"/>
   	<integer name="calculationTypeSelect" title="Calculation type" selection="production.cost.sheet.calculation.type.select"/>
   	<date name="calculationDate" title="Date of calculation"/>
   	<decimal name="manufOrderProducedRatio" title="Produced ratio" precision="20" scale="5"/>
  	
  	<extra-code><![CDATA[
		// CALCULATION TYPE SELECT
		public static final int CALCULATION_PARTIAL_END_OF_PRODUCTION = 1;
		public static final int CALCULATION_END_OF_PRODUCTION = 2;
		public static final int CALCULATION_WORK_IN_PROGRESS = 3;
		public static final int CALCULATION_BILL_OF_MATERIAL = 4;
	]]></extra-code>
  	
  </entity>
</domain-models>
