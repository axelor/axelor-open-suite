<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">
	
	<dashboard title="Dashboard" name="manufacturing.dashboard.sample"  >
		<dashlet action="manufacturing.dashboard.upcoming.production.orders" height="350" canSearch="true" colSpan="12"/>
		<dashlet action="manufacturing.dashboard.current.production.orders" canSearch="true" height="350" colSpan="12"/>
		<dashlet action="manufacturing.dashboard.standby.manuf.orders" canSearch="true" height="350" colSpan="12"/>
		<dashlet action="manufacturing.dashboard.hr.assigned.manuf.orders" canSearch="true" height="350"/>
		<dashlet action="dashlet.wastes.by.product" height="350"/>
		<dashlet action="manufacturing.dashboard.wasted.products" canSearch="true" height="350" colSpan="12"/>
		<dashlet action="manufacturing.dashboard.time.tracking" canSearch="true" height="350" colSpan="12"/>
	</dashboard>

	<action-view name="manufacturing.dashboard.upcoming.production.orders" title="All Upcoming Manufacturing Orders"
		model="com.axelor.apps.production.db.ManufOrder">
		<view type="grid" name="manuf-order-grid"/>
		<view type="form" name="manuf-order-form"/>
		 <domain>self.plannedStartDateT &gt;= :_today</domain>
  		<context name="_today" expr="eval: __datetime__" />
	</action-view>
	
	<action-view name="manufacturing.dashboard.current.production.orders" title="All Current Manufacturing Orders"
		model="com.axelor.apps.production.db.ManufOrder">
		<view type="grid" name="manuf-order-grid"/>
		<view type="form" name="manuf-order-form"/>
  		<domain>self.realStartDateT &lt;= :_today and (self.realEndDateT is null OR self.realEndDateT >= :_today)</domain>
 		<context name="_today" expr="eval: __datetime__" />
	</action-view>
	
	<action-view name="manufacturing.dashboard.standby.manuf.orders" title="Manufacturing orders on StandBy"
		model="com.axelor.apps.production.db.ManufOrder">
		<view type="grid" name="manuf-order-grid"/>
		<view type="form" name="manuf-order-form"/>
		<domain>self.statusSelect = 5</domain>
	</action-view>
	
	<action-view name="manufacturing.dashboard.hr.assigned.manuf.orders" title="Human Ressources Assigned per Manufacturing order"
		model="com.axelor.apps.production.db.ProdHumanResource">
		<view type="grid" name="prod-human-resource-group-grid"/>
		<view type="form" name="prod-human-resource-form"/>
		 <domain>(self.operationOrder.manufOrder.statusSelect) not in (1,2)</domain>
	</action-view>
	
	<action-view name="manufacturing.dashboard.wasted.products" title="List of Wastes Per Product"
		model="com.axelor.apps.production.db.ProdProduct">
		<view type="grid" name="prod-product-detailed-grid"/>
		<view type="form" name="prod-product-form"/>
		 <domain>self.wasteManufOrder != null</domain>
	</action-view>
	
	<action-view name="dashlet.wastes.by.product" title="Quantity Wasted per Product">
		<view type="chart" name="chart.wastes.by.product"/>
	</action-view>
	
	<action-view name="manufacturing.dashboard.time.tracking" title="Time difference per manufacturing order"
		model="com.axelor.apps.production.db.ManufOrder">
		<view type="grid" name="manuf-order-time-tracking-grid"/>
		<view type="form" name="manuf-order-form"/>
		<domain>self.statusSelect = 6</domain>
	</action-view>

</object-views>

