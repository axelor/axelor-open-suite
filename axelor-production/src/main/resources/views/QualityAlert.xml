<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_8.0.xsd">

  <grid id="production-quality-alert-grid" name="quality-alert-grid" title="Quality alerts"
    model="com.axelor.apps.quality.db.QualityAlert" extension="true">

    <extend target="//field[@name='product']">
      <insert position="after">
        <field name="workCenter" if="__config__.app.isApp('production')"/>
      </insert>
    </extend>
  </grid>

  <form id="production-quality-alert-form" name="quality-alert-form" title="Quality alerts"
    model="com.axelor.apps.quality.db.QualityAlert" extension="true">

    <extend target="//panel[@name='detailsPanel']/field[@name='product']">
      <insert position="after">
        <field name="workCenter" if="__config__.app.isApp('production')"/>
      </insert>
    </extend>

  </form>

</object-views>
