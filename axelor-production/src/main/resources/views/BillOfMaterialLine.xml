<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="bill-of-material-line-grid" title="Bills of material"
    model="com.axelor.apps.production.db.BillOfMaterialLine">
    <field name="priority" width="71"/>
    <field  name="qty" aggregate="sum" x-scale="2"/>
    <field name="product" domain="self.productSubTypeSelect = 1 OR self.productSubTypeSelect = 2"/>
    <field name="productBillOfMaterial"/>
    <field name="hasNoManageStock"/>
  </grid>
  
  <form name="bill-of-material-line-form" title="Bill of materials"
    model="com.axelor.apps.production.db.BillOfMaterial"
    onNew="action-bill-of-material-line-default-record,action-bill-of-material-attrs-price-and-qty-digits"
    onLoad="action-bill-of-material-attrs-product-def-sub-bom,action-bill-of-material-attrs-price-and-qty-digits"
    onSave="save,action-bill-of-material-method-name" width="large">
    <panel name="mainPanel">
      <field name="product" canEdit="false" onChange="action-bill-of-material-group-product"
       domain="self.productSubTypeSelect = 1 OR self.productSubTypeSelect = 2"
        form-view="product-form" grid-view="product-grid"/>
      <field name="hasNoManageStock" colSpan="3"/>
      <field name="qty" colSpan="3"/>
      <field name="unit" colSpan="3" form-view="unit-form" grid-view="unit-grid"
        canEdit="false" required="true"/>
      <field name="wasteRate" min="0"/>
    </panel>

    <panel-tabs name="mainPanelTab" showIf="defineSubBillOfMaterial" hidden="true">
      <panel-related name="componentsPanel" title="Components"
        field="billOfMaterialSet"
        domain="self.defineSubBillOfMaterial = true AND self.personalized = false"
        form-view="bill-of-material-line-form" grid-view="bill-of-material-line-grid"/>
    </panel-tabs>
  </form>

</object-views>


