<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_8.0.xsd">

  <form id="production-product-category-form" name="product-category-form"
    title="Product category" model="com.axelor.apps.base.db.ProductCategory" width="large"
    onLoad="action-attrs-product-category-form-set-hidden"
    onNew="action-attrs-product-category-form-set-hidden" extension="true">

    <extend target="//field[@name='parentProductCategory']">
      <insert position="after">
        <field name="depreciationThreshold" x-scale="2"/>
      </insert>
    </extend>
  </form>

</object-views>
