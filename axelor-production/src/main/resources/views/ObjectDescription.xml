<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="object-description-grid" canMove="true" title="Descriptions"
    model="com.axelor.apps.production.db.ObjectDescription" orderBy="sequence">
    <field name="image" widget="Image"/>
    <field name="description" widget="html"/>
  </grid>

  <form name="object-description-form" title="Description"
    model="com.axelor.apps.production.db.ObjectDescription" width="large">
    <panel name="mainPanel">
      <field name="image" colSpan="3" canNew="true" widget="Image"/>
      <field name="description" widget="html" colSpan="12"/>
    </panel>
  </form>


</object-views>
