<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

	<grid name="operation-order-duration-grid" title="Operation Order Durations" model="com.axelor.apps.production.db.OperationOrderDuration" orderBy="startingDateTime">
		<field name="startingDateTime" width="140"/>
		<field name="stoppingDateTime" width="140"/>
        <field name="startedBy"/>
        <field name="stoppedBy"/>
	</grid>

	<form name="operation-order-duration-form" title="Operation Order Duration" model="com.axelor.apps.production.db.OperationOrderDuration">
		<panel name="mainPanel">
			<field name="operationOrder" colSpan="12"/>
			<field name="startedBy"/>
			<field name="startingDateTime"/>
			<field name="stoppedBy"/>
			<field name="stoppingDateTime"/>
		</panel>
	</form>
</object-views>
