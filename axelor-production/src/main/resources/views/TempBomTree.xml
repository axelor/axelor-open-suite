<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
    
	<tree name="bill-of-material-tree" title="Bills of material">
	   	<column name="product" type="reference"/>
	   	<column name="qty" type="decimal" x-scale="2"/>
	   	<column name="unit" type="reference"/>
	   	<column name="prodProcess" type="reference"/>
		<node model="com.axelor.apps.production.db.TempBomTree" domain="self.id = :_tempBomTreeId" onClick="action-bill-of-material-view">
			<field name="product" as="product"/>
			<field name="qty" as="qty"/>
			<field name="unit" as="unit"/>
			<field name="prodProcess" as="prodProcess"/>
		</node>    	
		<node model="com.axelor.apps.production.db.TempBomTree" parent="parent" draggable="true" onClick="action-bill-of-material-line-view" orderBy="priority">
			<field name="product" as="product"/>
			<field name="qty" as="qty"/>
			<field name="unit" as="unit"/>
			<field name="prodProcess" as="prodProcess"/>
		</node>
	</tree>
	
	<action-view name="action-bill-of-material-view" title="Bill of materials" model="com.axelor.apps.production.db.BillOfMaterial">
		<view type="form" name="bill-of-material-form"/>
        <view-param name="popup" value="reload"/>
        <view-param name="show-toolbar" value="false"/>
  		<view-param name="show-confirm" value="false" />
 	  	<view-param name="popup-save" value="false"/>
    	<context name="_showRecord" expr="eval: bomId"/>
	</action-view>
    
	<action-view name="action-bill-of-material-line-view" title="Bill of materials component" model="com.axelor.apps.production.db.BillOfMaterialLine">
    	<view type="form" name="bill-of-material-line-form"/>
        <view-param name="popup" value="reload"/>
        <view-param name="show-toolbar" value="false"/>
  		<view-param name="show-confirm" value="false" />
 	  	<view-param name="popup-save" value="false"/>
    	<context name="_showRecord" expr="eval: bomLineId"/>
    </action-view>
    
</object-views>


