<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

  <grid name="payment-session-grid" title="Payment sessions"
    model="com.axelor.apps.account.db.PaymentSession">
    <field name="name"/>
    <field name="createdOn"/>
    <field name="company"/>
    <field name="sessionTotalAmount"/>
    <field name="statusSelect"/>
    <field name="assignedToUser" hidden="true"/>
  </grid>

  <form id="bank-payment-payment-session-form" name="payment-session-form"
    title="Payment session" model="com.axelor.apps.account.db.PaymentSession" extension="true">

    <extend target="//panel[@name='emailPanel']">
      <insert position="after">
        <panel name="bankOrderPanel" sidebar="true" title="Bank order"
          showIf="paymentMode &amp;&amp; paymentMode.generateBankOrder &amp;&amp; statusSelect &gt; 1">
          <field name="bankOrder" colSpan="12" readonly="true"/>
          <field name="paymentMode.generateBankOrder" hidden="true" colSpan="12"/>
        </panel>
      </insert>
    </extend>

  </form>

</object-views>