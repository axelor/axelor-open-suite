<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="bank-statement-line-afb-120-grid" title="Bank Statement lines" model="com.axelor.apps.bankpayment.db.BankStatementLineAFB120" orderBy="-bankStatement.toDate,bankDetails,-sequence" edit-icon="true">
	    <toolbar>
      <button onClick="action-bank-statement-line-afb120-view-print-wizard" name="printExportBtn" title="Print"/>
    </toolbar>  
    <hilite color="info" if="lineTypeSelect == 1"/>
	  <hilite color="primary" if="lineTypeSelect == 3"/>
	  <hilite color="danger" if="amountRemainToReconcile > 0 &amp;&amp; amountRemainToReconcile &gt;= debit &amp;&amp; amountRemainToReconcile &gt;= credit"/>
	  <hilite color="warning" if="amountRemainToReconcile > 0 &amp;&amp; amountRemainToReconcile &lt; debit &amp;&amp; amountRemainToReconcile &lt; credit"/>
	  <hilite color="success" if="amountRemainToReconcile == 0"/>
	  <field name="sequence" width="50"/>
	  <field name="lineTypeSelect" width="90"/>
	  <field name="operationDate" width="90"/>
	  <field name="valueDate" width="90"/>
	  <field name="debit" width="90"/>
	  <field name="credit" width="90"/>
	  <field name="currency" width="60" form-view="currency-form" grid-view="currency-grid"/>
	  <field name="bankDetails" width="375" form-view="bank-details-form" grid-view="bank-details-grid"/>
	  <field name="bankDetails.code" width="50"/>
	  <field name="origin" width="70"/>
	  <field name="reference" width="100"/>
	  <field name="description" width="200"/>
	  <field name="amountRemainToReconcile" width="90"/>
	</grid>

	<grid name="bank-statement-line-afb-120-grid-dashlet" title="Bank Statement lines" model="com.axelor.apps.bankpayment.db.BankStatementLineAFB120" orderBy="-bankStatement.toDate,bankDetails,-sequence" edit-icon="true">
	  <hilite color="info" if="lineTypeSelect == 1"/>
	  <hilite color="primary" if="lineTypeSelect == 3"/>
	  <hilite color="danger" if="amountRemainToReconcile > 0 &amp;&amp; amountRemainToReconcile &gt;= debit &amp;&amp; amountRemainToReconcile &gt;= credit"/>
	  <hilite color="warning" if="amountRemainToReconcile > 0 &amp;&amp; amountRemainToReconcile &lt; debit &amp;&amp; amountRemainToReconcile &lt; credit"/>
	  <hilite color="success" if="amountRemainToReconcile == 0"/>
	  <field name="sequence" width="50"/>
	  <field name="lineTypeSelect" width="90"/>
	  <field name="operationDate" width="90"/>
	  <field name="valueDate" width="90"/>
	  <field name="debit" width="90"/>
	  <field name="credit" width="90"/>
	  <field name="currency" width="60" form-view="currency-form" grid-view="currency-grid"/>
	  <field name="bankDetails" width="375" form-view="bank-details-form" grid-view="bank-details-grid"/>
	  <field name="bankDetails.code" width="50"/>
	  <field name="origin" width="70"/>
	  <field name="reference" width="100"/>
	  <field name="description" width="200"/>
	  <field name="amountRemainToReconcile" width="90"/>
	</grid>

	<form name="bank-statement-line-afb-120-form" title="Bank Statement line" model="com.axelor.apps.bankpayment.db.BankStatementLineAFB120" readonlyIf="true">
		<panel name="mainPanel" colSpan="12">
			<field name="sequence"/>
			<field name="lineTypeSelect"/>
			<field name="operationDate"/>
			<field name="valueDate"/>
			<field name="debit"/>
			<field name="credit"/>
			<field name="currency" grid-view="currency-grid" form-view="currency-form"/>
			<field name="bankDetails" grid-view="bank-details-grid" form-view="bank-details-form"/>
			<field name="operationInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
			<field name="rejectInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
			<field name="origin"/>
			<field name="reference"/>
			<field name="unavailabilityIndexSelect"/>
			<field name="commissionExemptionIndexSelect"/>
			<field name="description" colSpan="12"/>
		</panel>
	</form>  
  
  
  <form model="com.axelor.apps.base.db.Wizard" title="Print" name="bank-statement-line-print-wizard-form" onNew="action-bank-statement-line-afb-120-wizard-group-on-new">
    <panel name="mainPanel">
        <field name="fromDate" type="date" title="From"/>
        <field name="toDate" type="date" title="To"/>
        <field name="bankDetails" type="many-to-one" target="com.axelor.apps.base.db.BankDetails"/>
        <field name="exportTypeSelect" type="string" title="Export type" selection="iadministration.export.type.select"  />
        <button onClick="action-bank-statement-line-afb120-method-print" name="wizardPrintBtn" readonlyIf="fromDate == null || toDate == null || bankDetails == null"/>
    </panel>
  </form>

  <action-view name="action-bank-statement-line-afb120-view-print-wizard" title="Print" model="com.axelor.apps.bankpayment.db.BankStatementLineAFB120">
    <view type="form" name="bank-statement-line-print-wizard-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="show-confirm" value="false" />
    <view-param name="popup-save" value="false"/>
  </action-view>
  
  <action-group name="action-bank-statement-line-afb-120-wizard-group-on-new">
    <action name="action-bank-statement-line-afb-120-wizard-set-export-to-pdf"/>
    <action name="action-bank-statement-line-afb120-method-fill-bank-details"/>
  </action-group>
  
  <action-method name="action-bank-statement-line-afb120-method-print">
    <call class="com.axelor.apps.bankpayment.web.BankStatementLineAFB120Controller" method="print"/>
  </action-method>
  
  <action-method name="action-bank-statement-line-afb120-method-fill-bank-details">
    <call class="com.axelor.apps.bankpayment.web.BankStatementLineAFB120Controller" method="fillBankDetails"/>
  </action-method>
  
  <action-record name="action-bank-statement-line-afb-120-wizard-set-export-to-pdf" model="com.axelor.apps.base.db.Wizard">
    <field name="exportTypeSelect" expr="pdf"/>
  </action-record>
</object-views>