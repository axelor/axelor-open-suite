    <view type="form" name="bank-order-decrypt-file-form"/>
    <view-param name="popup" value="true"/>
    <view-param name="popup-save" value="false"/>
    <view-param name="show-toolbar" value="false"/>
    <context name="_bankOrder" expr="eval: __this__.id"/>
  </action-view>

  <action-method name="action-bank-order-method-decrypt-and-download">
    <call class="com.axelor.apps.bankpayment.web.BankOrderController"
      method="decryptAndDownload"/>
  </action-method>

  <action-method name="action-bank-order-method-set-is-file-encrypted">
    <call class="com.axelor.apps.bankpayment.web.BankOrderController"
      method="setIsFileEncrypted"/>
  </action-method>

  <action-method name="action-bank-order-method-encrypt-uploaded-file">
    <call class="com.axelor.apps.bankpayment.web.BankOrderController"
