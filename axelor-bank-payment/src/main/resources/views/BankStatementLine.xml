<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

	<grid name="bank-statement-line-grid" title="Bank Statement lines" model="com.axelor.apps.bankpayment.db.BankStatementLine" orderBy="-operationDate,-sequence">
		<field name="sequence"/>
		<field name="operationDate"/>
		<field name="valueDate"/>
		<field name="debit"/>
		<field name="credit"/>
		<field name="currency" grid-view="currency-grid" form-view="currency-form"/>
		<field name="bankDetails" grid-view="bank-details-grid" form-view="bank-details-form"/>
        <field name="bankDetails.code" />
		<field name="operationInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
		<field name="rejectInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
		<field name="origin" width="120"/>
		<field name="reference"/>
		<field name="description" colSpan="12"/>
		<field name="bankStatement"/>
	</grid>
	
	<grid name="bank-statement-line-bank-statement-grid" title="Bank Statement lines" model="com.axelor.apps.bankpayment.db.BankStatementLine" orderBy="sequence">
		<field name="sequence"/>
		<field name="operationDate"/>
		<field name="valueDate"/>
		<field name="debit"/>
		<field name="credit"/>
		<field name="currency" grid-view="currency-grid" form-view="currency-form"/>
		<field name="bankDetails" grid-view="bank-details-grid" form-view="bank-details-form"/>
        <field name="bankDetails.code" />
		<field name="operationInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
		<field name="rejectInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
		<field name="origin" width="120"/>
		<field name="reference"/>
		<field name="description" colSpan="12"/>
	</grid>

	<form name="bank-statement-line-form" title="Bank Statement line" model="com.axelor.apps.bankpayment.db.BankStatementLine" readonlyIf="true">
		<panel name="mainPanel" colSpan="12">
			<field name="sequence"/>
			<field name="operationDate"/>
			<field name="valueDate"/>
			<field name="debit"/>
			<field name="credit"/>
			<field name="currency" grid-view="currency-grid" form-view="currency-form"/>
			<field name="bankDetails" grid-view="bank-details-grid" form-view="bank-details-form"/>
			<field name="operationInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
			<field name="rejectInterbankCodeLine" grid-view="interbank-code-line-grid" form-view="interbank-code-line-form"/>
			<field name="origin"/>
			<field name="reference"/>
			<field name="description" colSpan="12"/>
			<field name="bankStatement"/>
		</panel>
	</form>

</object-views>