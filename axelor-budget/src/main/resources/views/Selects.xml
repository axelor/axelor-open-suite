<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">


  <selection name="budget.budget.status.select">
    <option value="1">Draft</option>
    <option value="2">Validated</option>
  </selection>

  <selection name="budget.budget.type.select">
    <option value="template" color="deeporange">Template</option>
    <option value="budget" color="green">Budget</option>
  </selection>

  <selection name="budget.level.status.select">
    <option value="draft" color="blue">Draft</option>
    <option value="valid" color="green">Validated</option>
    <option value="archived" color="grey">Archived</option>
  </selection>

  <selection name="budget.budget.source.select">
    <option value="auto">Auto</option>
    <option value="custom">budget.custom</option>
  </selection>

  <selection name="budget.global.budget.check.available">
    <option value="1">Budget Line</option>
    <option value="2">budget.Budget</option>
    <option value="5">Global budget</option>
  </selection>

  <selection name="global.budget.budget.type.select">
    <option value="1">Budget.Purchase</option>
    <option value="2">Budget.Sale</option>
    <option value="3">Investment</option>
    <option value="4">Purchase and investment</option>
  </selection>

  <selection name="global.budget.status.select">
    <option value="0" color="blue">Draft</option>
    <option value="1" color="lime">Validated structure</option>
    <option value="2" color="green">Validated</option>
    <option value="3" color="grey">Archived</option>
  </selection>

  <selection name="budget.scenario.entry.method.select">
    <option value="0">budget.Manual</option>
    <option value="1">Formula</option>
  </selection>

  <selection name="budget.scenario.category.select">
    <option value="1">Revenue</option>
    <option value="2">RH</option>
    <option value="3">Production</option>
    <option value="4">Results</option>
    <option value="5">Current Expenses</option>
    <option value="6">Operations</option>
    <option value="7">Financing</option>
    <option value="8">Investment</option>
    <option value="9">Tax</option>
  </selection>

  <selection name="app.budget.check.missing.select">
    <option value="0">None</option>
    <option value="1">Optional</option>
    <option value="2">Required</option>
  </selection>

  <selection name="app.budget.check.exceed.order.select">
    <option value="0">None</option>
    <option value="1">Optional</option>
    <option value="2">Required</option>
  </selection>

  <selection name="budget.scenario.status.select">
    <option value="0">Draft</option>
    <option value="1">Validated</option>
  </selection>

  <selection name='accounting.report.type.select'
    id="budget.accounting.report.type.select">
    <option order="25" value="25">Revenue and expenditure state</option>
  </selection>

</object-views>
