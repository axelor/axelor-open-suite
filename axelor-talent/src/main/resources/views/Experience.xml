<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid name="experience-grid" title="Experiences" model="com.axelor.apps.talent.db.Experience">
    <field name="company"/>
    <field name="location"/>
    <field name="jobTitle"/>
    <field name="duration"/>
    <field name="fromDate"/>
    <field name="toDate"/>
  </grid>

  <form name="experience-form" title="Experience" model="com.axelor.apps.talent.db.Experience"
    width="large" onNew="action-training-set-default">
    <panel name="mainPanel">
      <field name="company" required="true"/>
      <field name="location"/>
      <field name="jobTitle"/>
      <field name="duration"/>
      <field name="fromDate" validIf="toDate == null || toDate &gt;= fromDate"/>
      <field name="toDate" validIf="toDate == null || toDate &gt;= fromDate"/>
      <field name="description" colSpan="12"/>
      <field name="jobDescription" colSpan="12"/>
    </panel>
  </form>

</object-views>
