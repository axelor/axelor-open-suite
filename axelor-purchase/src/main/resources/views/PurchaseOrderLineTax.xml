<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
   
    <grid name="purchase-order-line-tax-grid" title="PO Tax lines" model="com.axelor.apps.purchase.db.PurchaseOrderLineTax">
		<field name="taxLine" width="400%" form-view="tax-line-form" grid-view="tax-line-grid"/>
		<field name="exTaxBase"/>
		<field name="taxTotal"/>
    </grid>
    
    <form name="purchase-order-line-tax-form" title="PO Tax line" model="com.axelor.apps.purchase.db.PurchaseOrderLineTax">
	  <panel name="mainPanel">
	    <field name="taxLine" canEdit="false" grid-view="tax-line-grid" form-view="tax-line-form"/>
	    <field name="taxLine.tax.name"/>
	    <field name="taxLine.value"/>
	    <field name="exTaxBase"/>
	    <field name="taxTotal"/>
	    <field name="inTaxTotal"/>
	  </panel>
    </form>
    
</object-views>