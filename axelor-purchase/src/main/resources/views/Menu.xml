		<view type="form" name="purchase-request-creator-form" />
	</action-view>


<!-- TOP MENU -->

	<menuitem name="top-menu-purchase" title="Purchases" order="3" top="true" left="false" if="__config__.app.isApp('purchase')"/>
	
	<menuitem name="top-menu-purchase-quotations" title="Sale quotations" top="true"
		 action="top.menu.purchase.quotations" parent="top-menu-purchase"/>
		
	<action-view name="top.menu.purchase.quotations" title="Sale quotations"
