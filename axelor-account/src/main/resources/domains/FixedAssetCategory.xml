<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="FixedAssetCategory" lang="java" cacheable="true">
  
  	<string name="name" title="Name" required="true"/>
  	
	<many-to-one name="fixedAssetType"  massUpdate="true" ref="com.axelor.apps.account.db.FixedAssetType" title="Fixed asset type"/>
	<many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company"/>
	
	<string name="computationMethodSelect" title="Computation method" selection="account.fixed.type.category.computation.method.select"/>
	
	<decimal name="degressiveCoef" title="Degressive coef"/>
	
	<boolean name="isValidateFixedAsset" massUpdate="true" title="Validate automatically fixed assets generated from invoice"/>
	
	<integer name="periodicityInMonth" title="Periodicity in month" default="12"/>
	<integer name="numberOfDepreciation" title="Number of depreciation" default="1"/>
	<integer name="durationInMonth" title="Duration in month"/>
	<string  name="depreciationPlanSelect" title="Depreciation Plan" selection="account.fixed.asset.depreciation.plan"/>
	<integer name="periodicityTypeSelect" title="Periodicity Type" selection="account.fixed.asset.periodicity.type" default="12"/>
	<integer name="firstDepreciationDateInitSelect" massUpdate="true" title="Reference Date for first depreciation" selection="account.fixed.asset.first.depreciation.date.ref.select" default="1"/>
	
	<boolean name="isProrataTemporis" title="Prorata temporis"/>
	<boolean name="isUSProrataTemporis" title="Use US prorata temoris" default="false"/>
	
	<many-to-one name="journal" ref="com.axelor.apps.account.db.Journal" title="Journal" required="true"/>
	<many-to-one name="chargeAccount" ref="com.axelor.apps.account.db.Account" title="Charge account" required="true"/>
	<many-to-one name="depreciationAccount" ref="com.axelor.apps.account.db.Account" title="Depreciation account" required="true"/>
	
	<many-to-one name="analyticDistributionTemplate" title="Analytic distribution template" ref="com.axelor.apps.account.db.AnalyticDistributionTemplate"/>
	
	<many-to-one ref="com.axelor.apps.account.db.Account" name="expenseDepreciationDerogatoryAccount" title="Expense Depreciation Derogatory Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="capitalDepreciationDerogatoryAccount" title="Capital Depreciation Derogatory Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="incomeDepreciationDerogatoryAccount" title="Income Depreciation Derogatory Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="realisedAssetsValueAccount" title="Realised Assets Value Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="realisedAssetsIncomeAccount" title="Realised Assets Income Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="debtReceivableAccount" title="Debt Receivable Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="provisionTangibleFixedAssetAccount" title="Provision Tangible Fixed Asset Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="wbProvisionTangibleFixedAssetAccount" title="WB Provision Tangible Fixed Asset Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="ifrsDepreciationAccount" title="IFRS Depreciation Account"/>
	<many-to-one ref="com.axelor.apps.account.db.Account" name="ifrsChargeAccount" title="IFRS Charge Account"/>
	
		<extra-code><![CDATA[
	
	   	// Reference Date for first depreciation
		public static final int REFERENCE_FIRST_DEPRECIATION_DATE_ACQUISITION = 1;
		public static final int REFERENCE_FIRST_DEPRECIATION_FIRST_SERVICE_DATE = 2;
		
	]]></extra-code>

  </entity>
 
</domain-models>