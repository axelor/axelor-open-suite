<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.2.xsd">
  
  <module name="account" package="com.axelor.apps.account.db"/>
  
  <entity name="AccountingReportConfigLine" lang="java">

    <string name="label" title="Label"/>
    <string name="code" title="Code"/>
    <integer name="sequence"/>
    <integer name="typeSelect" title="Type" selection="accounting.report.config.line.type.select" required="true"/>
    <integer name="ruleTypeSelect" title="Rule type" selection="accounting.report.config.line.rule.type.select" required="true"/>
    <integer name="resultSelect" title="Result" default="1" selection="accounting.report.config.line.sum.of.account.select"/>
    <boolean name="hidden" title="Hidden"/>
    <many-to-many name="accountTypeSet" title="Account types" ref="com.axelor.apps.account.db.AccountType"/>
    <many-to-many name="accountSet" title="Accounts" ref="com.axelor.apps.account.db.Account"/>
    <many-to-one name="reportType" ref="com.axelor.apps.account.db.AccountingReportType"/>
    <string name="rule" title="Rule" large="true"/>
    <string name="accountCode" title="Account code"/>

    <extra-code><![CDATA[

	   	// RULE TYPE SELECT
      public static final int RULE_TYPE_NO_VALUE = 1;
      public static final int RULE_TYPE_SUM_OF_ACCOUNTS = 2;
      public static final int RULE_TYPE_CUSTOM_RULE = 3;

	  ]]></extra-code>

  </entity>
</domain-models>
