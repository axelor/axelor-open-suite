<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.3.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="FixedAssetLine" lang="java" cacheable="true">
  
  	<many-to-one name="fixedAsset" ref="com.axelor.apps.account.db.FixedAsset" title="Fixed asset"/>
  	<date name="depreciationDate" title="Depreciation date"/>
  	<decimal name="depreciation" title="Depreciation"/>
  	<decimal name="cumulativeDepreciation" title="Cumulative depreciation"/>
  	<decimal name="residualValue" title="Residual value"/>
  	<integer name="statusSelect" title="Status" selection="account.fixed.asset.line.status.select"/>
  	<many-to-one name="depreciationAccountMove" ref="com.axelor.apps.account.db.Move" title="Depreciation account move" readonly="true"/>
  	
  	<extra-code><![CDATA[
	
	   	// STATUS SELECT
		public static final int STATUS_PLANNED = 1;
		public static final int STATUS_REALIZED = 2;
		
	]]></extra-code>
	
  </entity>
 
</domain-models>