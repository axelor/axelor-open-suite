<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="invoice-term-move-line-grid" title="Invoice terms"
    model="com.axelor.apps.account.db.InvoiceTerm" canNew="false">
    <toolbar>
      <button name="passedForPaymentValidationBtn" icon="fa-check-circle"
        title="toolbar.validatePFP" onClick="action-invoice-term-method-mass-validate-pfp"
        if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
      <button name="refusalToPayBtn" icon="fa-minus-circle" title="toolbar.refusePFP"
        onClick="action-invoiceterm-view-refusal-to-pay"
        if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
    </toolbar>
    <hilite color="danger"
      if="isPaid == false &amp;&amp; $moment(dueDate).diff(todayDate,'days') &lt; 0"/>
    <field name="sequence"/>
    <field name="name"/>
    <field name="invoice"/>
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="amountRemaining"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="paymentMode"/>
    <field name="financialDiscount.discountRate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscountAmount"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="invoice.financialDiscountDeadlineDate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="pfpValidateStatusSelect"
      if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
  </grid>

  <grid name="invoice-term-move-line-invoice-grid" title="Invoice terms"
    model="com.axelor.apps.account.db.InvoiceTerm" orderBy="dueDate">
    <field name="sequence"/>
    <field name="name"/>
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="paymentMode"/>
    <field name="amountRemaining"/>
    <field name="isPaid"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="financialDiscount" hidden="true"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscount.discountRate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscountAmount"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="invoice.financialDiscountDeadlineDate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="pfpValidateStatusSelect"
      if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
  </grid>

  <grid name="invoice-term-payment-session-grid" title="Invoice terms"
    model="com.axelor.apps.account.db.InvoiceTerm" orderBy="dueDate" groupBy="moveLine.partner"
    edit-icon="true">
    <field name="paymentSession.name" hidden="true"/>
    <field name="$statusSelectPaymentSession" hidden="true"/>
    <field name="moveLine.partner"/>
    <field name="moveLine.move.reference"/>
    <field name="invoice"/>
    <field name="moveLine.move.statusSelect"/>
    <field name="isSelectedOnPaymentSession"/>
    <field name="paymentAmount"/>
    <field name="applyFinancialDiscount"/>
    <field name="financialDiscountAmount"/>
    <field name="amountPaid" aggregate="sum"/>
    <button name="selectBtn" title="Select"
      onClick="action-invoice-term-method-select-terms-btn,action-invoice-term-method-compute-total-payment-session"
      icon="fa-plus-circle"
      readonlyIf="isSelectedOnPaymentSession || $statusSelectPaymentSession &gt; 1"/>
    <button name="unselectBtn" title="Unselect"
      onClick="action-invoice-term-method-unselect-terms-btn,action-invoice-term-method-compute-total-payment-session"
      icon="fa-minus-circle"
      readonlyIf="!isSelectedOnPaymentSession || $statusSelectPaymentSession &gt; 1"/>
    <button name="selectPartnerBtn" title="Select all terms of this Partner"
      icon="fa-user-plus"
      onClick="action-invoice-term-method-select-partner-terms-btn,action-invoice-term-method-compute-total-payment-session"
      readonlyIf="isSelectedOnPaymentSession || $statusSelectPaymentSession &gt; 1"/>
    <button name="unselectPartnerBtn" title="Unselect all terms of this Partner"
      icon="fa-user-times"
      onClick="action-invoice-term-method-unselect-partner-terms-btn,action-invoice-term-method-compute-total-payment-session"
      readonlyIf="!isSelectedOnPaymentSession || $statusSelectPaymentSession &gt; 1"/>
  </grid>

  <form name="invoice-term-move-line-invoice-form" title="Invoice term"
    model="com.axelor.apps.account.db.InvoiceTerm" onNew="action-invoice-term-group-onnew"
    onLoad="action-invoice-term-group-check-pfp-validator-user">
    <panel name="mainPanel" colSpan="12">
      <panel name="headerPanel" colSpan="12" itemSpan="4" readonlyIf="paymentSession">
        <field name="sequence" readonlyIf="isPaid || !isCustomized"/>
        <field name="name" readonly="true"/>
        <field name="invoice" readonly="true" form-view="invoice-form"
          grid-view="invoice-grid"/>
        <field name="isCustomized" readonly="true"/>
        <field name="isPaid" readonly="true"/>
        <field name="moveLine" readonly="true" form-view="move-line-form"
          grid-view="move-line-grid"/>
      </panel>
      <separator colSpan="12"/>
      <panel name="amountDatePanel" colSpan="12" itemSpan="4"
        readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || paymentSession">
        <field name="dueDate" requiredIf="isCustomized"
          onChange="action-invoice-term-record-update-customized-true"
          readonlyIf="isPaid || pfpValidateStatusSelect > 1 || $isPaymentConditionFree == false"/>
        <field name="isHoldBack"
          readonlyIf="(financialDiscount != null &amp;&amp; $isPaymentConditionFree == false) || (invoice != null &amp;&amp; moveLine != null)"/>
        <field name="estimatedPaymentDate" readonlyIf="pfpValidateStatusSelect > 1"
          onChange="action-invoice-term-record-update-customized-true"
          if-module="axelor-cash-management" if="__config__.app.isApp('cash-management')"/>
        <field name="amount" validIf="amount > 0"
          readonlyIf="pfpValidateStatusSelect > 1 || $isPaymentConditionFree == false"
          onChange="action-invoice-term-method-compute-customized-percentage,action-invoice-term-record-update-customized-true"/>
        <field name="percentage" validIf="percentage > 0"
          readonlyIf="pfpValidateStatusSelect > 1 || $isPaymentConditionFree == false"
          onChange="action-invoice-term-record-update-customized,action-invoice-term-method-compute-customized-amount,action-invoice-term-record-update-customized-true"/>
        <field name="amountRemaining" readonly="true"/>
        <field name="paymentMode" readonlyIf="isPaid" required="true"/>
        <field name="bankDetails"
          showIf="paymentMode.typeSelect == 2 || paymentMode.typeSelect == 3 || paymentMode.typeSelect == 9"
          readonlyIf="isPaid"
          requiredIf="paymentMode.typeSelect == 2 || paymentMode.typeSelect == 3 || paymentMode.typeSelect == 9"/>
        <field name="$isPaymentConditionFree" hidden="true"/>
        <field name="paymentMode.typeSelect" hidden="true"/>
      </panel>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4"
        if="__config__.app.getApp('account').getManageFinancialDiscount()" hidden="true"
        showIf="financialDiscount != null" readonlyIf="paymentSession">
        <field name="financialDiscount" readonly="true"/>
        <field name="financialDiscount.discountRate"/>
        <field name="financialDiscountAmount" readonly="true"/>
        <field name="invoice.financialDiscountDeadlineDate"/>
        <field name="invoice.company" hidden="true"/>
      </panel>
      <panel name="actionPanel"
        if="__config__.app.getApp('account').getActivatePassedForPayment()"
        readonlyIf="isPaid || paymentSession"
        showIf="invoice.company.accountConfig.isManagePassedForPayment &amp;&amp; (invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )) &amp;&amp; [2,3].includes(invoice.statusSelect) "
        colSpan="12">
        <panel name="pfpStatus" hidden="true" showIf="pfpValidateStatusSelect == 1"
          colSpan="12">
          <field name="pfpValidateStatusSelect" colSpan="8" widget="navSelect"/>
          <field name="pfpValidatorUser" colSpan="4" canEdit="false"
            onSelect="action-invoice-term-method-hide-send-email-pfp-btn,action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <panel name="pfpStatusDecision" hidden="true" showIf="pfpValidateStatusSelect > 1"
          colSpan="12">
          <field name="pfpValidateStatusSelect" widget="navSelect" colSpan="12"/>
        </panel>
        <panel name="pfpDecisionFullPfp" showIf="pfpValidateStatusSelect == 2" colSpan="12"
          itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="pfpGrantedAmount" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <panel name="pfpDecisionPartialPfp" showIf="pfpValidateStatusSelect == 4" colSpan="12"
          itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="pfpPartialReason" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
          <field name="pfpGrantedAmount" readonly="true"/>
          <field name="pfpRejectedAmount" readonly="true"/>
        </panel>
        <panel name="pfpDecisionDetailsReject" showIf="pfpValidateStatusSelect == 3"
          colSpan="12" itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="reasonOfRefusalToPayStr" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <button name="passedForPaymentValidationBtn" title="Pass for payment validation"
          showIf="$isValidPfpValidatorUser &amp;&amp;[1,3].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          colSpan="4" css="btn-success" onClick="action-invoice-term-group-validate-pfp"/>
        <button name="passedForPaymentPartialValidationBtn" title="Grant Partial PFP"
          showIf="$isValidPfpValidatorUser &amp;&amp; [1].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          css="btn-warning" colSpan="4"
          onClick="action-invoice-term-set-partial-validate-status-select,action-invoice-term-view-pfp-partial-reason-wizard"/>
        <button name="refusalToPayBtn" title="Refuse to pay"
          showIf="$isValidPfpValidatorUser &amp;&amp;[1,2,4].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          colSpan="4" css="btn-danger" onClick="action-invoiceterm-view-refusal-to-pay,save"/>
        <panel name="pfpEmailPanel" colSpan="6">
          <button name="sendPfpNotifyEmailBtn" title="Send a notify email" hidden="true"
            showIf="pfpValidateStatusSelect == 1 &amp;&amp; !$isSelectedPfpValidatorEqualsPartnerPfpValidator  &amp;&amp; invoice.statusSelect > 1"
            colSpan="12" onClick="save"/>
          <field name="moveLine.move.company.accountConfig.isManagePassedForPayment"
            hidden="true"/>
          <field name="invoice.company.accountConfig.isManagePassedForPayment" hidden="true"/>
          <field name="invoice.operationTypeSelect" hidden="true"/>
          <field name="company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="moveLine.move.journal.journalType.technicalTypeSelect" hidden="true"/>
          <field name="moveLine.move.company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="invoice.paymentCondition" hidden="true"/>
          <field name="invoice.paymentCondition.isFree" hidden="true"/>
          <field name="invoice.statusSelect" hidden="true"/>
          <field name="$isValidPfpValidatorUser" type="boolean" hidden="true"/>
          <field name="$isSelectedPfpValidatorEqualsPartnerPfpValidator" type="boolean"
            hidden="true"/>
        </panel>
      </panel>
      <panel name="paymentSessionPanel" title="Payment session" colSpan="12"
        showIf="paymentSession">
        <static name="pastEventText" colSpan="12">
          <![CDATA[<span class='label label-warning'>This form is in readOnly either because the term has been paid or is attached to a payment session.</span>]]></static>
        <field name="paymentSession"/>
        <button name="accessPaymentSessionBtn" title="Access payment session"
          readonlyIf="paymentSession == null"
          onClick="save,action-invoice-term-view-show-payment-session,close"/>
        <field name="isSelectedOnPaymentSession" readonly="true"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="paymentAmount" readonly="true" showIf="isSelectedOnPaymentSession"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="financialDiscountAmount"
          showIf="applyFinancialDiscount &amp;&amp; isSelectedOnPaymentSession"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="amountPaid" readonly="true" showIf="isSelectedOnPaymentSession"/>
      </panel>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
    </panel-mail>
  </form>

  <form name="invoice-term-move-line-form" title="Invoice term"
    model="com.axelor.apps.account.db.InvoiceTerm"
    onLoad="action-invoice-term-group-check-pfp-validator-user"
    onNew="action-invoice-term-group-onnew">
    <panel name="mainPanel" colSpan="12">
      <panel name="headerPanel" colSpan="12" itemSpan="4" readonlyIf="paymentSession">
        <field name="sequence" readonlyIf="isPaid || !isCustomized"/>
        <field name="name" readonly="true"/>
        <field name="invoice" readonly="true" form-view="invoice-form"
          grid-view="invoice-grid"/>
        <field name="isCustomized" readonly="true"/>
        <field name="isPaid" readonly="true"/>
        <field name="moveLine" readonly="true" form-view="move-line-form"
          grid-view="move-line-grid"/>
      </panel>
      <separator colSpan="12"/>
      <panel name="amountDatePanel" colSpan="12" itemSpan="4"
        readonlyIf="isPaid || paymentSession || amountRemaining != amount || !$popup()">
        <field name="dueDate" requiredIf="isCustomized"
          onChange="action-invoice-term-record-update-customized-true"/>
        <field name="isHoldBack" readonlyIf="financialDiscount != null"/>
        <field name="estimatedPaymentDate" readonlyIf="pfpValidateStatusSelect > 1"
          if-module="axelor-cash-management" if="__config__.app.isApp('cash-management')"/>
        <field name="amount" readonlyIf="pfpValidateStatusSelect > 1"
          onChange="action-invoice-term-method-compute-customized-percentage,action-invoice-term-record-update-customized-true"
          validIf="amount > 0"/>
        <field name="percentage" readonlyIf="pfpValidateStatusSelect > 1"
          onChange="action-invoice-term-method-compute-customized-amount,action-invoice-term-record-update-customized-true"
          validIf="percentage > 0"/>
        <field name="amountRemaining" readonly="true"/>
        <field name="paymentMode" required="true"/>
        <field name="bankDetails"
          showIf="paymentMode.typeSelect == 2 || paymentMode.typeSelect == 3 || paymentMode.typeSelect == 9"
          readonlyIf="isPaid"
          requiredIf="paymentMode.typeSelect == 2 || paymentMode.typeSelect == 3 || paymentMode.typeSelect == 9"/>
        <field name="paymentMode.typeSelect" hidden="true"/>
      </panel>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4"
        if="__config__.app.getApp('account').getManageFinancialDiscount()" hidden="true"
        showIf="financialDiscount != null" readonlyIf="paymentSession">
        <field name="applyFinancialDiscount"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="financialDiscount" readonly="true" showIf="applyFinancialDiscount"/>
        <field name="financialDiscount.discountRate" showIf="applyFinancialDiscount"/>
        <field name="financialDiscountAmount" readonly="true" showIf="applyFinancialDiscount"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="invoice.financialDiscountDeadlineDate" showIf="applyFinancialDiscount"/>
        <field name="invoice.company" hidden="true"/>
      </panel>
      <panel name="actionPanel"
        if="__config__.app.getApp('account').getActivatePassedForPayment()"
        readonlyIf="isPaid || paymentSession"
        showIf="move.company.accountConfig.isManagePassedForPayment &amp;&amp; (moveLine.account.journalType.technicalTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp;moveLine.account.journalType.technicalTypeSelect == 3)) &amp;&amp; [2,3].includes(moveLine.move.statusSelect)"
        colSpan="12">
        <panel name="pfpStatus" hidden="true"
          showIf="invoice.statusSelect > 1 &amp;&amp; pfpValidateStatusSelect == 1" colSpan="12">
          <field name="pfpValidateStatusSelect" colSpan="8" widget="navSelect"/>
          <field name="pfpValidatorUser" colSpan="4" canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <panel name="pfpStatusDecision" hidden="true"
          showIf="invoice.statusSelect > 1 &amp;&amp; pfpValidateStatusSelect > 1" colSpan="12">
          <field name="pfpValidateStatusSelect" widget="navSelect" colSpan="12"/>
        </panel>
        <panel name="pfpDecisionFullPfp" showIf="pfpValidateStatusSelect == 2" colSpan="12"
          itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="pfpGrantedAmount" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <panel name="pfpDecisionPartialPfp" showIf="pfpValidateStatusSelect == 4" colSpan="12"
          itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="pfpPartialReason" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
          <field name="pfpGrantedAmount" readonly="true"/>
          <field name="pfpRejectedAmount" readonly="true"/>
        </panel>
        <panel name="pfpDecisionDetailsReject" showIf="pfpValidateStatusSelect == 3"
          colSpan="12" itemSpan="4">
          <field name="decisionPfpTakenDate" readonly="true"/>
          <field name="reasonOfRefusalToPayStr" readonly="true"/>
          <field name="pfpValidatorUser" readonlyIf="pfpValidateStatusSelect != 1"
            canEdit="false"
            onSelect="action-invoice-term-method-domain-pfp-validator-user-on-select"
            onChange="action-invoice-term-group-check-pfp-validator-user"/>
        </panel>
        <button name="passedForPaymentValidationBtn" title="Pass for payment validation"
          showIf="$isValidPfpValidatorUser &amp;&amp;[1,3].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          colSpan="4" css="btn-success" onClick="action-invoice-term-group-validate-pfp"/>
        <button name="passedForPaymentPartialValidationBtn" title="Grant Partial PFP"
          showIf="$isValidPfpValidatorUser &amp;&amp; [1].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          css="btn-warning" colSpan="4"
          onClick="action-invoice-term-set-partial-validate-status-select,action-invoice-term-view-pfp-partial-reason-wizard"/>
        <button name="refusalToPayBtn" title="Refuse to pay"
          showIf="$isValidPfpValidatorUser &amp;&amp;[1,2,4].includes(pfpValidateStatusSelect) &amp;&amp; isPaid == false &amp;&amp; $isValidPfpValidatorUser"
          colSpan="4" css="btn-danger" onClick="action-invoiceterm-view-refusal-to-pay,save"/>
        <panel name="pfpEmailPanel" colSpan="6">
          <button name="sendPfpNotifyEmailBtn" title="Send a notify email" hidden="true"
            showIf="pfpValidateStatusSelect == 1 &amp;&amp; !$isSelectedPfpValidatorEqualsPartnerPfpValidator  &amp;&amp; invoice.statusSelect > 1"
            colSpan="12" onClick="save,action-send-by-email-with-template"/>
          <field name="moveLine.move.company.accountConfig.isManagePassedForPayment"
            hidden="true"/>
          <field name="invoice.company.accountConfig.isManagePassedForPayment" hidden="true"/>
          <field name="invoice.operationTypeSelect" hidden="true"/>
          <field name="company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="moveLine.move.journal.journalType.technicalTypeSelect" hidden="true"/>
          <field name="moveLine.move.company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="invoice.statusSelect" hidden="true"/>
          <field name="$isValidPfpValidatorUser" type="boolean" hidden="true"/>
          <field name="$isSelectedPfpValidatorEqualsPartnerPfpValidator" type="boolean"
            hidden="true"/>
        </panel>
      </panel>
      <panel name="paymentSessionPanel" title="Payment session" colSpan="12"
        showIf="paymentSession">
        <static name="pastEventText" colSpan="12">
      <![CDATA[<span class='label label-warning'>This form is in readOnly either because the term has been paid or is attached to a payment session.</span>]]></static>
        <field name="paymentSession"/>
        <button name="accessPaymentSessionBtn" title="Access payment session"
          readonlyIf="paymentSession == null"
          onClick="save,action-invoice-term-view-show-payment-session"/>
        <field name="isSelectedOnPaymentSession" readonly="true"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="paymentAmount" readonly="true" showIf="isSelectedOnPaymentSession"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="financialDiscountAmount"
          showIf="applyFinancialDiscount &amp;&amp; isSelectedOnPaymentSession"
          onChange="action-invoice-term-record-set-amount-paid"/>
        <field name="amountPaid" readonly="true" showIf="isSelectedOnPaymentSession"/>
      </panel>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
    </panel-mail>
  </form>

  <form name="invoice-term-refusal-to-pay-wizard-form"
    model="com.axelor.apps.account.db.InvoiceTerm" title="Cancellation confirmation">
    <panel name="mainPanel">
      <field name="reasonOfRefusalToPay" domain="self.applicationType = :_xApplicationType"
        colOffset="4" colSpan="4" widget="SuggestBox" canNew="false" canEdit="false"
        onChange="action-attrs-invoice-other-reason" required="true"/>
      <field name="reasonOfRefusalToPayStr" colOffset="4" colSpan="4" hidden="true"/>
      <button name="cancelConfirmBtn" title="Confirm cancellation"
        onClick="action-invoiceterm-refusal-to-pay-cancel-reason-check,action-invoice-term-method-refusal-to-pay"
        colOffset="4" colSpan="4"/>
    </panel>
  </form>

  <form name="invoice-term-pfp-partial-reason-wizard" title="PFP Partial Acceptance"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <panel name="mainPanel">
      <field name="pfpGrantedAmount" required="true" validIf="pfpGrantedAmount > 0"/>
      <field name="pfpPartialReason" required="true"/>
      <button name="pfpPartialReasonConfirmBtn" title="Confirm Partial PFP" colSpan="12"
        onClick="action-invoice-term-method-pfp-partial-reason-confirm-btn"/>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
    </panel-mail>
  </form>

  <action-group name="action-invoice-term-group-onnew">
    <action name="action-method-invoice-init-invoice-term"/>
    <action name="action-invoice-term-record-update-customized-true"/>
  </action-group>

  <action-group name="action-invoice-term-group-check-pfp-validator-user">
    <action name="action-invoice-attrs-is-valid-pfp-validator-user"/>
    <action name="action-invoice-term-method-hide-send-email-pfp-btn"/>
    <action name="action-invoice-term-record-set-is-payment-condition-free"/>
  </action-group>

  <action-group name="action-invoice-term-group-validate-pfp">
    <action name="save"/>
    <action name="action-invoice-term-validate-pfp-stock-move"
      if="__config__.app.isApp('supplychain') &amp;&amp; __config__.app.getApp('supplychain').getGenerateInvoiceFromStockMove()"/>
    <action name="action-invoice-term-method-validate-pfp"/>
    <action name="save"/>
  </action-group>

  <action-record name="action-invoice-term-record-set-is-payment-condition-free"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="$isPaymentConditionFree"
      if="__parent__?._model == 'com.axelor.apps.account.db.Invoice'"
      expr="eval: __parent__?.paymentCondition?.isFree"/>
  </action-record>

  <action-record name="action-invoice-term-record-update-customized-true"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="isCustomized" expr="true"/>
  </action-record>

  <action-validate name="action-invoice-term-validate-pfp-stock-move">
    <alert
      message="At least one stock move is in litigation, do you really want to validate passed for payment ?"
      if="__repo__(StockMove).all().filter(' ? MEMBER OF self.invoiceSet and self.pfpValidateStatusSelect = 3',invoice.id).fetch().size &gt;= 1"/>
  </action-validate>

  <action-record name="action-invoice-term-record-update-customized"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="isCustomized" expr="true"
      if="paymentConditionLine == null || percentage != paymentConditionLine.paymentPercentage"/>
    <field name="isCustomized" expr="false"
      if="paymentConditionLine != null &amp;&amp; percentage == paymentConditionLine.paymentPercentage"/>
  </action-record>

  <action-record name="action-invoice-term-record-set-amount-paid"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="amountPaid" expr="eval: 0"
      if="!applyFinancialDiscount &amp;&amp; !isSelectedOnPaymentSession"/>
    <field name="amountPaid" expr="eval: paymentAmount"
      if="!applyFinancialDiscount &amp;&amp; isSelectedOnPaymentSession"/>
    <field name="amountPaid" expr="eval: paymentAmount - financialDiscountAmount"
      if="applyFinancialDiscount &amp;&amp; isSelectedOnPaymentSession"/>
  </action-record>

