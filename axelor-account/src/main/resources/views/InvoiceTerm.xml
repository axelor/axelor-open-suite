<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="invoice-term-grid" title="Invoice terms" model="com.axelor.apps.account.db.InvoiceTerm" canNew="false">
    <hilite color="danger" if="isPaid == false &amp;&amp; $moment(dueDate).diff(todayDate,'days') &lt; 0" />
    <field name="name"/>
    <field name="invoice"/>
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="amountRemaining"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="paymentMode"/>
    <field name="financialDiscount.discountRate"/>
    <field name="financialDiscountAmount"/>
    <field name="invoice.financialDiscountDeadlineDate"/>
  </grid>

  <grid name="invoice-term-invoice-grid" title="Invoice terms" model="com.axelor.apps.account.db.InvoiceTerm" orderBy="dueDate">
    <field name="name" />
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="paymentMode"/>
    <field name="amountRemaining"/>
    <field name="isPaid"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="financialDiscount.discountRate"/>
    <field name="financialDiscountAmount"/>
    <field name="invoice.financialDiscountDeadlineDate"/>
  </grid>

  <form name="invoice-term-invoice-form" title="Invoice term" model="com.axelor.apps.account.db.InvoiceTerm">
    <panel name="mainPanel">
      <!-- TODO Manage sequence -->
      <field name="name" readonly="true" colSpan="4"/>
      <field name="isCustomized" readonly="true" colSpan="4"/>
      <field name="isPaid" readonly="true" colSpan="4"/>
      <separator colSpan="12"/>
      <field name="amount" readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !paymentConditionLine.paymentCondition.isFree" onChange="action-invoice-term-method-compute-customized-percentage"/>
      <field name="amountRemaining" readonly="true"/>
      <field name="dueDate" onChange="action-invoice-term-record-update-customized-true" readonlyIf="((invoice.operationTypeSelect == 3 || invoice.operationTypeSelect == 4) &amp;&amp; invoice.statusSelect == 3) ||
       ((invoice.operationTypeSelect == 1 || invoice.operationTypeSelect == 2) &amp;&amp; isPaid)"/>
      <field name="estimatedPaymentDate" onChange="action-invoice-term-record-update-customized-true" readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !paymentConditionLine.paymentCondition.isFree" if-module="axelor-cash-management" if="__config__.app.isApp('cash-management')"/>
      <field name="percentage" readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !paymentConditionLine.paymentCondition.isFree" onChange="action-invoice-term-record-update-customized,action-invoice-term-method-compute-customized-amount"/>
      <field name="isHoldBack" readonly="true"/>
      <field name="paymentMode" readonlyIf="isPaid"/>
      <field name="moveLine" form-view="move-line-form" grid-view="move-line-grid" readonly="true"/>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4" hidden="true" showIf="financialDiscount != null">
          <field name="financialDiscount" readonly="true"/>
          <field name="financialDiscount.discountRate"/>
          <field name="financialDiscountAmount" readonly="true"/>
          <field name="invoice.financialDiscountDeadlineDate"/>
      </panel>
      <field name="invoice.company" hidden="true" />
      <field name="paymentConditionLine.paymentCondition.isFree" hidden="true" />
      <field name="paymentConditionLine.paymentPercentage" hidden="true"/>
      <field name="invoice.operationTypeSelect" readonly="true" hidden="true"/>
      <field name="invoice.statusSelect" readonly="true" hidden="true"/>
    </panel>
  </form>

  <form name="invoice-term-form" title="Invoice term" model="com.axelor.apps.account.db.InvoiceTerm">
    <panel name="mainPanel">
      <!-- TODO Manage sequence -->
      <field name="name" readonly="true" colSpan="4"/>
      <field name="invoice" readonly="true" colSpan="4" form-view="invoice-form" grid-view="invoice-grid"/>
      <field name="isPaid" readonly="true" colSpan="4"/>
      <separator colSpan="12"/>
      <field name="amount" readonly="true"/>
      <field name="amountRemaining" readonly="true"/>
      <field name="dueDate" readonly="true"/>
      <field name="estimatedPaymentDate" readonly="true" if-module="axelor-cash-management" if="__config__.app.isApp('cash-management')"/>
      <field name="percentage" readonly="true"/>
      <field name="isHoldBack" readonly="true"/>
      <field name="paymentMode" readonly="true"/>
      <field name="moveLine" form-view="move-line-form" grid-view="move-line-grid" readonly="true"/>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4" hidden="true" showIf="financialDiscount != null" >
          <field name="financialDiscount" readonly="true"/>
          <field name="financialDiscount.discountRate"/>
          <field name="financialDiscountAmount" readonly="true"/>
          <field name="invoice.financialDiscountDeadlineDate"/>
          <field name="invoice.company" hidden="true"/>
      </panel>
    </panel>
  </form>
  
  <action-record name="action-invoice-term-record-update-customized-true" model="com.axelor.apps.account.db.InvoiceTerm">
     <field name="isCustomized" expr="true"/>
  </action-record>
  
   <action-record name="action-invoice-term-record-update-customized" model="com.axelor.apps.account.db.InvoiceTerm">
     <field name="isCustomized" expr="true" if="percentage != paymentConditionLine.paymentPercentage"/>
     <field name="isCustomized" expr="false" if="percentage == paymentConditionLine.paymentPercentage"/>
  </action-record>
  
  <action-method name="action-invoice-term-method-compute-customized-amount">
     <call class="com.axelor.apps.account.web.InvoiceTermController" method="computeCustomizedAmount"/>
  </action-method>
  
  <action-method name="action-invoice-term-method-compute-customized-percentage">
     <call class="com.axelor.apps.account.web.InvoiceTermController" method="computeCustomizedPercentage"/>
  </action-method>

</object-views>