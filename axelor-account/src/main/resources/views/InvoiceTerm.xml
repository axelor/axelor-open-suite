<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="invoice-term-grid" title="Invoice terms"
    model="com.axelor.apps.account.db.InvoiceTerm" canNew="false">
    <hilite color="danger"
      if="isPaid == false &amp;&amp; $moment(dueDate).diff(todayDate,'days') &lt; 0"/>
    <field name="sequence"/>
    <field name="name"/>
    <field name="invoice"/>
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="amountRemaining"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="paymentMode"/>
    <field name="financialDiscount.discountRate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscountAmount"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="invoice.financialDiscountDeadlineDate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="pfpValidateStatusSelect"
      if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
  </grid>

  <grid name="invoice-term-invoice-grid" title="Invoice terms"
    model="com.axelor.apps.account.db.InvoiceTerm" orderBy="dueDate">
    <field name="sequence"/>
    <field name="name"/>
    <field name="dueDate"/>
    <field name="amount"/>
    <field name="paymentMode"/>
    <field name="amountRemaining"/>
    <field name="isPaid"/>
    <field name="isHoldBack"/>
    <field name="percentage"/>
    <field name="financialDiscount" hidden="true"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscount.discountRate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="financialDiscountAmount"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="invoice.financialDiscountDeadlineDate"
      if="__config__.app.getApp('account').getManageFinancialDiscount()"/>
    <field name="pfpValidateStatusSelect"
      if="__config__.app.getApp('account').getActivatePassedForPayment()"/>
  </grid>

  <form name="invoice-term-invoice-form" title="Invoice term"
    model="com.axelor.apps.account.db.InvoiceTerm" onNew="action-method-invoice-init-invoice-term">
    <panel name="mainPanel" colSpan="12">
      <panel name="headerPanel" colSpan="12" itemSpan="4">
        <field name="sequence" readonly="true" readonlyIf="isPaid || !isCustomized"/>
        <field name="name" readonly="true"/>
        <field name="invoice" hidden="true"/>
        <field name="isCustomized" readonly="true"/>
        <field name="isPaid" readonly="true"/>
        <field name="moveLine" readonly="true" form-view="move-line-form"
          grid-view="move-line-grid"/>
      </panel>
      <separator colSpan="12"/>
      <panel name="amountDatePanel" colSpan="12" itemSpan="4">
        <field name="dueDate" requiredIf="isCustomized"
          onChange="action-invoice-term-record-update-customized-true" readonlyIf="isPaid"/>
        <field name="isHoldBack" readonly="true"/>
        <field name="estimatedPaymentDate" readonly="true"
          onChange="action-invoice-term-record-update-customized-true"
          readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !invoice.paymentCondition.isFree"
          if-module="axelor-cash-management" if="__config__.app.isApp('cash-management')"/>
        <field name="amount" validIf="amount > 0"
          readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !invoice.paymentCondition.isFree"
          onChange="action-invoice-term-method-compute-customized-percentage"/>
        <field name="percentage" validIf="percentage > 0"
          readonlyIf="(isHoldBack &amp;&amp; invoice.statusSelect == 3) || isPaid || amountRemaining != amount || !invoice.paymentCondition.isFree"
          onChange="action-invoice-term-record-update-customized,action-invoice-term-method-compute-customized-amount"/>
        <field name="amountRemaining" readonly="true"/>
        <field name="paymentMode" readonlyIf="isPaid"/>
        <field name="bankDetails" readonly="true"/>
      </panel>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4"
        if="__config__.app.getApp('account').getManageFinancialDiscount()" hidden="true"
        showIf="financialDiscount != null">
        <field name="financialDiscount" readonly="true"/>
        <field name="financialDiscount.discountRate"/>
        <field name="financialDiscountAmount" readonly="true"/>
        <field name="invoice.financialDiscountDeadlineDate"/>
        <field name="invoice.company" hidden="true"/>
      </panel>
      <panel name="actionPanel" colSpan="12">
        <field name="pfpValidateStatusSelect" widget="NavSelect" readonly="true" colSpan="6"/>
        <field name="pfpValidatorUser" hidden="true" showIf="invoice.statusSelect &gt; 1"
          readonlyIf="pfpValidateStatusSelect != 1" colSpan="6" canEdit="false"/>
        <button name="passedForPaymentValidationBtn" css="btn-success"
          showIf="[1,3].includes(pfpValidateStatusSelect)" title="Validate PFP" onClick="save"
          colSpan="6"/>
        <button name="refusalToPayBtn" css="btn-danger" showIf="pfpValidateStatusSelect == 1"
          title="Refuse PFP" onClick="save" colSpan="6"/>
        <field if="__config__.app.getApp('account').getActivatePassedForPayment()"
          name="pfpValidatorUser" hidden="true"
          showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	        &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	        || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	        &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; invoice.statusSelect > 1"
          readonlyIf="pfpValidateStatusSelect != 1" colSpan="6" canEdit="false"/>
        <panel if="__config__.app.getApp('account').getActivatePassedForPayment()"
          name="pfpEmailPanel" colSpan="6">
          <field name="decisionPfpTakenDate" hidden="true" colSpan="12"
            showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	          &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	          || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	          &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; decisionPfpTakenDate"/>
          <button name="sendPfpNotifyEmailBtn" title="Send a notify email" hidden="true"
            showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	        &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	        || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	        &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; pfpValidatorUser &amp;&amp; pfpValidateStatusSelect == 1
	        &amp;&amp; !$isSelectedPfpValidatorEqualsPartnerPfpValidator  &amp;&amp; invoice.statusSelect > 1"
            colSpan="12" onClick="save"/>
          <field name="moveLine.move.company.accountConfig.isManagePassedForPayment"
            hidden="true"/>
          <field name="invoice.company.accountConfig.isManagePassedForPayment" hidden="true"/>
          <field name="invoice.operationTypeSelect" hidden="true"/>
          <field name="company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="moveLine.move.journal.journalType.technicalTypeSelect" hidden="true"/>
          <field name="moveLine.move.company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="invoice.statusSelect" hidden="true"/>
        </panel>
        <field name="reasonOfRefusalToPayStr" readonly="true"
          showIf="reasonOfRefusalToPay  &amp;&amp; reasonOfRefusalToPayStr &amp;&amp; pfpValidateStatusSelect == 3"
          colSpan="12" css="red">
          <viewer><![CDATA[{{record.reasonOfRefusalToPayStr}}]]></viewer>
        </field>
      </panel>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
    </panel-mail>
  </form>

  <form name="invoice-term-form" title="Invoice term"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <panel name="mainPanel" colSpan="12">
      <panel name="headerPanel" colSpan="12" itemSpan="4">
        <field name="sequence" readonly="true"/>
        <field name="name" readonly="true"/>
        <field name="invoice" readonly="true" form-view="invoice-form"
          grid-view="invoice-grid"/>
        <field name="isCustomized" readonly="true"/>
        <field name="isPaid" readonly="true"/>
        <field name="moveLine" readonly="true" form-view="move-line-form"
          grid-view="move-line-grid"/>
      </panel>
      <separator colSpan="12"/>
      <panel name="amountDatePanel" colSpan="12" itemSpan="4">
        <field name="dueDate" readonly="true"/>
        <field name="isHoldBack" readonly="true"/>
        <field name="estimatedPaymentDate" readonly="true" if-module="axelor-cash-management"
          if="__config__.app.isApp('cash-management')"/>
        <field name="amount" readonly="true"/>
        <field name="percentage" readonly="true"/>
        <field name="amountRemaining" readonly="true"/>
        <field name="paymentMode" readonly="true"/>
        <field name="bankDetails" readonly="true"/>
      </panel>
      <panel name="financialDiscount" title="Financial discount" colSpan="12" itemSpan="4"
        if="__config__.app.getApp('account').getManageFinancialDiscount()" hidden="true"
        showIf="financialDiscount != null">
        <field name="financialDiscount" readonly="true"/>
        <field name="financialDiscount.discountRate"/>
        <field name="financialDiscountAmount" readonly="true"/>
        <field name="invoice.financialDiscountDeadlineDate"/>
        <field name="invoice.company" hidden="true"/>
      </panel>
      <panel name="actionPanel" colSpan="12">
        <field name="pfpValidateStatusSelect" widget="NavSelect" readonly="true" colSpan="6"/>
        <field name="pfpValidatorUser" hidden="true" showIf="invoice.statusSelect &gt; 1"
          readonlyIf="pfpValidateStatusSelect != 1" colSpan="6" canEdit="false"/>
        <button name="passedForPaymentValidationBtn" css="btn-success"
          showIf="[1,3].includes(pfpValidateStatusSelect)" title="Validate PFP" onClick="save"
          colSpan="6"/>
        <button name="refusalToPayBtn" css="btn-danger" showIf="pfpValidateStatusSelect == 1"
          title="Refuse PFP" onClick="save" colSpan="6"/>
        <field if="__config__.app.getApp('account').getActivatePassedForPayment()"
          name="pfpValidatorUser" hidden="true"
          showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	        &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	        || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	        &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; invoice.statusSelect > 1"
          readonlyIf="pfpValidateStatusSelect != 1" colSpan="6" canEdit="false"/>
        <panel if="__config__.app.getApp('account').getActivatePassedForPayment()"
          name="pfpEmailPanel" colSpan="6">
          <field name="decisionPfpTakenDate" hidden="true" colSpan="12"
            showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	          &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	          || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	          &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; decisionPfpTakenDate"/>
          <button name="sendPfpNotifyEmailBtn" title="Send a notify email" hidden="true"
            showIf="(moveLine.move.company.accountConfig.isManagePassedForPayment || invoice.company.accountConfig.isManagePassedForPayment)
	        &amp;&amp; ((invoice.operationTypeSelect == 1 || (company.accountConfig.isManagePFPInRefund &amp;&amp; invoice.operationTypeSelect == 2 )
	        || moveLine.move.journal.journalType.technicalTypeSelect == 1 || (moveLine.move.company.accountConfig.isManagePFPInRefund
	        &amp;&amp;  moveLine.move.journal.journalType.technicalTypeSelect == 3)) &amp;&amp; pfpValidatorUser &amp;&amp; pfpValidateStatusSelect == 1
	        &amp;&amp; !$isSelectedPfpValidatorEqualsPartnerPfpValidator  &amp;&amp; invoice.statusSelect > 1"
            colSpan="12" onClick="save"/>
          <field name="moveLine.move.company.accountConfig.isManagePassedForPayment"
            hidden="true"/>
          <field name="invoice.company.accountConfig.isManagePassedForPayment" hidden="true"/>
          <field name="invoice.operationTypeSelect" hidden="true"/>
          <field name="company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="moveLine.move.journal.journalType.technicalTypeSelect" hidden="true"/>
          <field name="moveLine.move.company.accountConfig.isManagePFPInRefund" hidden="true"/>
          <field name="invoice.statusSelect" hidden="true"/>
        </panel>
        <field name="reasonOfRefusalToPayStr" readonly="true"
          showIf="reasonOfRefusalToPay  &amp;&amp; reasonOfRefusalToPayStr &amp;&amp; pfpValidateStatusSelect == 3"
          colSpan="12" css="red">
          <viewer><![CDATA[{{record.reasonOfRefusalToPayStr}}]]></viewer>
        </field>
      </panel>
    </panel>
  </form>

  <form name="invoice-term-refusal-to-pay-wizard-form"
    model="com.axelor.apps.account.db.InvoiceTerm" title="Cancellation confirmation">
    <panel name="mainPanel">
      <field name="reasonOfRefusalToPay" domain="self.applicationType = :_xApplicationType"
        colOffset="4" colSpan="4" widget="SuggestBox" canNew="false" canEdit="false"
        onChange="action-attrs-invoice-other-reason"/>
      <field name="reasonOfRefusalToPayStr" colOffset="4" colSpan="4" hidden="true"/>
      <button name="cancelConfirmBtn" title="Confirm cancellation"
        onClick="action-invoiceterm-refusal-to-pay-cancel-reason-check,action-invoice-term-method-refusal-to-pay"
        colOffset="4" colSpan="4"/>
    </panel>
    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
    </panel-mail>
  </form>

  <action-record name="action-invoice-term-record-update-customized-true"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="isCustomized" expr="true"/>
  </action-record>

  <action-record name="action-invoice-term-record-update-customized"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <field name="isCustomized" expr="true"
      if="paymentConditionLine == null || percentage != paymentConditionLine.paymentPercentage"/>
    <field name="isCustomized" expr="false"
      if="paymentConditionLine != null &amp;&amp; percentage == paymentConditionLine.paymentPercentage"/>
  </action-record>

  <action-method name="action-invoice-term-method-compute-customized-amount">
    <call class="com.axelor.apps.account.web.InvoiceTermController"
      method="computeCustomizedAmount"/>
  </action-method>

  <action-method name="action-invoice-term-method-compute-customized-percentage">
    <call class="com.axelor.apps.account.web.InvoiceTermController"
      method="computeCustomizedPercentage"/>
  </action-method>

  <action-method name="action-method-invoice-init-invoice-term">
    <call class="com.axelor.apps.account.web.InvoiceTermController"
      method="initInvoiceTermFromInvoice"/>
  </action-method>

  <action-method name="action-invoice-term-method-refusal-to-pay">
    <call class="com.axelor.apps.account.web.InvoiceTermController" method="refusalToPay"/>
  </action-method>

  <action-view name="action-invoiceterm-view-refusal-to-pay" title="Cancellation"
    model="com.axelor.apps.account.db.InvoiceTerm">
    <view type="form" name="invoice-term-refusal-to-pay-wizard-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="show-confirm" value="false"/>
    <view-param name="popup-save" value="false"/>
    <view-param name="forceEdit" value="true"/>
    <context name="_showRecord" expr="eval: __this__.id"/>
    <context name="_xApplicationType" expr="eval: _model"/>
  </action-view>

  <action-condition name="action-invoiceterm-refusal-to-pay-cancel-reason-check">
    <check error="A cancel reason must be selected" field="cancelReason"
      if="reasonOfRefusalToPay == null || reasonOfRefusalToPay == 0"/>
  </action-condition>

</object-views>