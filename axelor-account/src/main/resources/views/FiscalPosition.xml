<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="fiscal-position-grid" title="Fiscal positions" model="com.axelor.apps.account.db.FiscalPosition">
        <field name="name"/>
        <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
    </grid>

    <form name="fiscal-position-form" title="Fiscal position" model="com.axelor.apps.account.db.FiscalPosition"  width="large">
        <panel name="main" >
	        <field name="name" colSpan="4"/>
	        <field name="code" x-bind="{{code|unaccent|uppercase}}" colSpan="4"/>
            <field name="customerSpecificNote" colSpan="4"/>
            <panel-related field="taxEquivList" form-view="tax-equiv-form" grid-view="tax-equiv-grid" colSpan="12"/>
	        <panel-related field="accountEquivList" form-view="account-equiv-form" grid-view="account-equiv-grid" colSpan="12"/>
        </panel>
    </form>

</object-views>