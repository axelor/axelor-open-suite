<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">

    <grid name="account-category-line-grid" title="Account Category Lines" model="com.axelor.apps.account.db.AccountCategoryLine">
        <field name="accountCategory" form-view="account-category-form" grid-view="account-category-grid"/>
        <field name="sign"/>
        <field name="category" form-view="account-category-form" grid-view="account-category-grid"/>
    </grid>
    
    <form name="account-category-line-form" title="Account Category Line" model="com.axelor.apps.account.db.AccountCategoryLine">
        <panel name="general" title="General">
	        <field name="accountCategory" form-view="account-category-form" grid-view="account-category-grid"/>
	        <field name="sign"/>
	        <field name="category" form-view="account-category-form" grid-view="account-category-grid"/>
        </panel>
    </form>
    
</object-views>