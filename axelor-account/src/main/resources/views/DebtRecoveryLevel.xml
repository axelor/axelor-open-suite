<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="debt-recovery-level-grid" title="Debt recovery levels"
    model="com.axelor.apps.account.db.DebtRecoveryLevel">
    <field name="name"/>
    <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
    <field name="label"/>
  </grid>

  <form name="debt-recovery-level-form" title="Debt recovery level"
    model="com.axelor.apps.account.db.DebtRecoveryLevel">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
      <field name="label" required="true"/>
    </panel>

  </form>

</object-views>