<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
    
	<grid title="Report types" name="accounting-report-type-grid" model="com.axelor.apps.account.db.AccountingReportType">
		<field name="name"/>
		<field name="reportExportTypeSelect"/>
		<field name="typeSelect"/>
	</grid>

	<form title="Report type" name="accounting-report-type-form" model="com.axelor.apps.account.db.AccountingReportType"
				onNew="action-accounting-report-type-record-default-on-new">
		<panel name="accountingReportTypeMainPanel">
			<field name="name"/>
			<field name="company"/>
			<field name="reportExportTypeSelect" validIf="reportExportTypeSelect > 0" onChange="action-accounting-report-type-record-typeselect-onchange"/>
			<panel colSpan="6" stacked="true">
				<field name="typeSelect" validIf="typeSelect > 0" showIf="reportExportTypeSelect == 1" selection-in="[1,2,3,4,5,6,7,10,11,12,13,14,15,16,17,18,2000,2001,3000]"
							 onChange="action-accounting-report-type-method-default-name"/>
				<field name="typeSelect" validIf="typeSelect > 0" showIf="reportExportTypeSelect == 2" selection-in="[1000,1001,1006,1007,1008,1009,1010]"/>
			</panel>
			<field name="reportTitle" requiredIf="typeSelect == 3000" colSpan="12" showIf="reportExportTypeSelect == 1 &amp;&amp; typeSelect == 3000"/>
			<panel-related name="accountingReportTypeAccountingReportConfigLineListPanel" field="accountingReportConfigLineList" colSpan="12"
										 form-view="accounting-report-config-line-form" grid-view="accounting-report-config-line-grid" showIf="typeSelect == 3000"/>
		</panel>
		<panel sidebar="true">
			<field name="template" widget="binary-link"/>
		</panel>
	</form>

	<action-record name="action-accounting-report-type-record-typeselect-onchange" model="com.axelor.apps.account.db.AccountingReportType">
		<field name="typeSelect" expr="eval: null"/>
		<field name="reportTitle" expr="eval: null"/>
		<field name="typeSelect" expr="3000" if="reportExportTypeSelect == 1"/>
	</action-record>

	<action-record name="action-accounting-report-type-record-default-on-new" model="com.axelor.apps.account.db.AccountingReportType">
		<field name="company" expr="eval: __user__.activeCompany"/>
	</action-record>

	<action-method name="action-accounting-report-type-method-default-name">
		<call class="com.axelor.apps.account.web.AccountingReportTypeController" method="defaultName"/>
	</action-method>

</object-views>