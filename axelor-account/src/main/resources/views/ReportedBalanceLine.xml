<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="reported-balance-line-grid" title="Reported balance lines"
    model="com.axelor.apps.account.db.ReportedBalanceLine">
    <field name="accountingSituation" grid-view="accounting-situation-grid"
      form-view="accounting-situation-form"/>
    <field name="year" grid-view="year-account-grid" form-view="year-account-form"/>
    <field name="amount"/>
  </grid>

  <form name="reported-balance-line-form" title="Reported balance line"
    model="com.axelor.apps.account.db.ReportedBalanceLine">
    <panel name="mainPanel">
      <field name="accountingSituation" grid-view="accounting-situation-grid"
        form-view="accounting-situation-form"/>
      <field name="year" grid-view="year-account-grid" form-view="year-account-form"/>
      <field name="amount"/>
    </panel>
  </form>

  <grid name="reported-balance-line-custom-grid"
    model="com.axelor.apps.account.db.ReportedBalanceLine" title="Reported balance lines">
    <field name="year"/>
    <field name="amount"/>
  </grid>

  <form name="reported-balance-line-custom-form"
    model="com.axelor.apps.account.db.ReportedBalanceLine" title="Reported balance line">
    <panel name="overviewPanel" title="Overview">
      <field name="year"/>
      <field name="amount"/>
    </panel>
  </form>
</object-views>