<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

    <grid name="debt-recovery-method-line-grid" orderBy="debtRecoveryLevel" title="Debt recovery method lines" model="com.axelor.apps.account.db.DebtRecoveryMethodLine">
        <field name="debtRecoveryLevel"/>
        <field name="debtRecoveryLevelLabel"/>
        <field name="standardDeadline"/>
        <field name="minThreshold"/>
        <field name="manualValidationOk"/>
    </grid>

	<form name="debt-recovery-method-line-form" title="Debt recovery method line" model="com.axelor.apps.account.db.DebtRecoveryMethodLine" width="large">
		<panel name="debtRecoveryLevelPanel" title="Debt recovery level" colSpan="6">
			<field name="debtRecoveryLevel" canSelect="true" onChange="action-debt-recovery-level-selected"/>
			<field name="debtRecoveryLevelLabel" readonly="true"/>
		</panel>
		<panel name="conditionsPanel" title="Conditions" colSpan="6">
			<field name="standardDeadline"/>
			<field name="minThreshold"/>
			<field name="manualValidationOk"/>
		</panel>
		<panel name="actionsPanel" title="Actions">
			<field name="messageTemplateSet" form-view="template-form" grid-view="template-grid" colSpan="12"/>
			<field name="printingMessage" widget="HTML" colSpan="12"/>
			<field name="specificPrintingMessage" widget="HTML" colSpan="12"/>
		</panel>
	</form>

    
    <action-record name="action-debt-recovery-level-selected" model="com.axelor.apps.account.db.DebtRecoveryMethodLine">
        <field name="debtRecoveryLevelLabel" expr="eval: debtRecoveryLevel.label"/>
    </action-record>
  
</object-views>