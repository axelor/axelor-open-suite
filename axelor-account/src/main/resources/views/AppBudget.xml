<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<form name="app-budget-config-form" title="App budget" model="com.axelor.apps.base.db.AppBudget" canDelete="false" canNew="false" width="large">
		<panel name="appBudgetPanel"  if-module="axelor-account" colSpan="12">
			<field name="checkAvailableBudget" widget="boolean-switch"/>
			<field name="manageMultiBudget" widget="boolean-switch"/>
		</panel>
		
		<panel-mail name="mailPanel">
			<mail-messages limit="4"/>
			<mail-followers/>
		</panel-mail>
	</form>
</object-views>
