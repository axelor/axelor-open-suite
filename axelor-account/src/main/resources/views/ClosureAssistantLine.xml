<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form model="com.axelor.apps.account.db.ClosureAssistantLine" title="Closure assistant line"
    name="closure-assistant-line-form">
    <panel name="mainPanel">
      <field name="sequence" title="Sequence" readonly="true" colSpan="6"/>
      <field name="actionSelect" title="Action" readonly="true" colSpan="6"/>
    </panel>
    <panel name="actionsPanel" sidebar="true">
      <button onClick="account-closure-assistant-line-validate-action-method"
        name="validateActionBtn" hideIf="isValidated" help="Validate step" icon="fa-check-circle"
        colSpan="12"/>
      <button onClick="account-closure-assistant-line-cancel-action-method"
        name="cancelActionBtn" hideIf="!isValidated" help="Cancel step" icon="fa-times-circle"
        colSpan="12"/>
      <button onClick="account-closure-assistant-line-open-view-link-to-action-method"
        name="openViewLinkToActionBtn" icon="fa-gears" help="Open action to execute" colSpan="12"
        hideIf="isValidated"/>
      <field name="validatedOnDate" title="Validated on" readonly="true" colSpan="6"/>
      <field name="validatedByUser" title="Validated by" readonly="true" colSpan="6"/>
    </panel>
  </form>


  <grid model="com.axelor.apps.account.db.ClosureAssistantLine" title="Closure assistant line"
    name="closure-assistant-line-grid">
    <hilite background="green" if="isValidated"/>
    <field name="sequence" title="Sequence"/>
    <field name="actionSelect" title="Action"/>
    <field name="validatedOnDate" title="Validated on"/>
    <field name="validatedByUser" title="Validated by"/>
    <field name="isValidated" title="Validated"/>

    <button onClick="account-closure-assistant-line-validate-action-method"
      name="validateActionBtn" readonlyIf="isValidated" help="Validate step" icon="fa-check-circle"/>
    <button onClick="account-closure-assistant-line-cancel-action-method"
      name="cancelActionBtn" readonlyIf="!isValidated" help="Cancel step" icon="fa-times-circle"/>
    <button onClick="account-closure-assistant-line-open-view-link-to-action-method"
      name="openViewLinkToActionBtn" icon="fa-gears" help="Open action to execute"/>
  </grid>


  <action-method name="account-closure-assistant-line-validate-action-method">
    <call class="com.axelor.apps.account.web.ClosureAssistantLineController" method=""/>
  </action-method>

  <action-method name="account-closure-assistant-line-cancel-action-method">
    <call class="com.axelor.apps.account.web.ClosureAssistantLineController" method=""/>
  </action-method>

  <action-method name="account-closure-assistant-line-open-view-link-to-action-method">
    <call class="com.axelor.apps.account.web.ClosureAssistantLineController" method=""/>
  </action-method>

</object-views>
