<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
    
    <grid name="payment-condition-grid" title="Payment Condition" model="com.axelor.apps.account.db.PaymentCondition">
        <field name="name"/>
        <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
        <field name="typeSelect"/>
        <field name="paymentTime"/>
        <field name="isFree"/>
    </grid>
    
    <form name="payment-condition-form" title="Payment Condition" model="com.axelor.apps.account.db.PaymentCondition"  >
        <panel name="mainPanel" >
        	<field name="name"/>
	        <field name="code" x-bind="{{code|unaccent|uppercase}}" colSpan="3"/>
			<field name="isFree" colSpan="3"/>
	        <field name="typeSelect" colSpan="6"/>
	        <field name="paymentTime" colSpan="6"/>	        
	        <field name="periodTypeSelect" colSpan="6"></field>
	        <field name="daySelect" colSpan="6" showIf="typeSelect == 4"/>
	        <field name="advancePaymentNeeded" if="__config__.app.getApp('supplychain')?.manageAdvancePaymentsFromPaymentConditions"/>
        </panel>
    </form>
    
    <search-filters name="payment-condition-filters" model="com.axelor.apps.account.db.PaymentCondition" title="Payment condition filters">
    	<field name="advancePaymentNeeded" hidden="true" if="!(__config__.app.isApp('supplychain') &amp;&amp; __config__.app.getApp('supplychain')?.manageAdvancePaymentsFromPaymentConditions)"/>
    </search-filters>
    
</object-views>
