<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


  <grid name="service-type-grid" title="Service types"
    model="com.axelor.apps.account.db.ServiceType" orderBy="name">
    <field name="name"/>
    <field name="code"/>
    <field name="n4dsCode"/>
    <field name="isDas2Declarable"/>
  </grid>

  <form name="service-type-form" title="Service type"
    model="com.axelor.apps.account.db.ServiceType">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="code" onChange="action-service-type-method-check-if-duplicate-code"
        validIf="!$duplicateCode"/>
      <field name="$duplicateCode" readonly="true" showTitle="false" showIf="$duplicateCode"
        colSpan="12">
        <viewer>
	      	<![CDATA[
	      		<h4 class="text-right">
	               	 <span class="label label-important">{{record.$duplicateCode}}</span>
	            </h4>
	      	]]>
        </viewer>
      </field>
      <field name="n4dsCode"/>
      <field name="isDas2Declarable"/>
    </panel>
  </form>

  <action-method name="action-service-type-method-check-if-duplicate-code">
    <call class="com.axelor.apps.account.web.ServiceTypeController" method="checkDuplicateCode"/>
  </action-method>

</object-views>