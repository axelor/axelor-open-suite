<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <form name="app-invoice-config-form" title="App invoice"
    model="com.axelor.studio.db.AppInvoice" canDelete="false" canNew="false" width="large">
    <panel name="appInvoiceConfigFormPanel">
      <field name="isInvoiceMoveConsolidated" widget="boolean-switch"/>
      <field name="isVentilationSkipped" widget="boolean-switch"/>
      <field name="isEnabledProductDescriptionCopyForCustomers" widget="boolean-switch"/>
      <field name="isEnabledProductDescriptionCopyForSuppliers" widget="boolean-switch"/>
      <field name="autoGenerateInvoicePrintingFileOnSaleInvoice" widget="boolean-switch"/>
      <field name="autoGenerateInvoicePrintingFileOnPurchaseInvoice" widget="boolean-switch"/>
    </panel>

    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
      <mail-followers/>
    </panel-mail>
  </form>


</object-views>
