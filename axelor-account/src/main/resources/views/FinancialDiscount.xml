<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid model="com.axelor.apps.account.db.FinancialDiscount" title="Financial discounts" name="financial-discount-grid">
    <field name="name"/>
    <field name="discountDelay"/>
    <field name="discountBaseSelect"/>
    <field name="discountRate"/>
  </grid>
  
  <form model="com.axelor.apps.account.db.FinancialDiscount" title="Financial discount" name="financial-discount-form">
    <panel name="mainPanel" colSpan="12">
      <field name="name"/>
      <field name="discountBaseSelect"/>
      <field name="discountDelay"/>
      <field name="discountRate"/>
      <field name="legalNotice" colSpan="12" widget="html"/>
      <panel-related field="partnerList" grid-view="partner-grid" form-view="partner-form" colSpan="12" canNew="false"/>
    </panel>
  </form>

</object-views>