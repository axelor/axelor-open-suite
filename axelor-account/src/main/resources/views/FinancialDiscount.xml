<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    
    <grid name="financial-discount-grid" title="Financial Discounts" model="com.axelor.apps.account.db.FinancialDiscount">
        <field name="name"/>
        <field name="discountDelay"/>
        <field name="discountBaseSelect"/>
        <field name="discountRate"/>
    </grid>
   
   
    <form name="financial-discount-form" title="Financial Discount" model="com.axelor.apps.account.db.FinancialDiscount">
        <panel name="overviewPanel" title="Overview">
        	<field name="name"/>
	        <field name="discountDelay"/>
	        <field name="discountBaseSelect"/>
	        <field name="discountRate"/>
	        <field name="legalNotice" colSpan="12"/>
        </panel>
        <panel name="partnerPanel" colSpan="12">
        	<field name="partnerList" grid-view="partner-grid" form-view="partner-form" colSpan="12"/>
        </panel>
    </form>

</object-views>