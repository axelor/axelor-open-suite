<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="budget-grid" title="Budgets" model="com.axelor.apps.account.db.Budget">
    <field name="name"/>
    <field name="code" x-bind="{{code|unaccent|uppercase}}"/>
    <field name="fromDate"/>
    <field name="toDate"/>
    <field name="company" if="__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="inChargeUser"/>
    <field name="totalAmountExpected" aggregate="sum"/>
    <field name="statusSelect"/>
  </grid>

  <form name="budget-form" title="Budget" model="com.axelor.apps.account.db.Budget"
    width="large" onNew="action-budget-record-on-new" onSave="action-budget-check-shared-dates">
    <menubar>
      <menu name="budgetToolsMenu" title="Tools" icon="fa-wrench" showTitle="true">
        <item name="computeAmountsItem" title="Compute amounts"
          action="action-group-budget-update-amounts" showIf="statusSelect == 2"/>
      </menu>
    </menubar>
    <panel name="mainPanel">
      <field name="statusSelect" showTitle="false" colSpan="12" widget="NavSelect"
        readonly="true"/>
      <field name="name" showTitle="false" colSpan="12">
        <viewer depends="name"><![CDATA[

					<h3>
						<span  style="margin: 5px 0 !important; display: inline-table; line-height: initial;">{{record.code}} / {{record.name}}</span>
					</h3>

	            ]]></viewer>
        <editor>
          <field name="code" required="true" x-bind="{{code|unaccent|uppercase}}" colSpan="3"/>
          <field name="name" required="true" colSpan="9"/>
        </editor>
      </field>
      <field name="company" canEdit="false" readonlyIf="statusSelect == 2"/>
      <field name="company.currency" canEdit="false"/>
      <field name="fromDate" readonlyIf="statusSelect == 2"/>
      <field name="toDate" readonlyIf="statusSelect == 2"/>
    </panel>
    <panel name="periodsGenerationAssistantPanel" title="Periods generation assistant"
      colSpan="12" showIf="statusSelect == 1">
      <field name="periodDurationSelect" colSpan="4"/>
      <field name="amountForGeneration" colSpan="4"/>
      <button name="generatePeriodsBtn" title="Generate periods"
        onClick="action-group-account-budget-generateperiod-click" colSpan="4"/>
    </panel>
    <panel-related name="budgetLineListPanel" field="budgetLineList"
      onChange="action-budget-method-compute-total-amount" readonlyIf="statusSelect == 2"/>
    <panel name="buttonPannel" colSpan="4" sidebar="true" showTitle="false">
      <button name="validateButton" title="Validate"
        onClick="save,action-account-budget-validate" showIf="statusSelect == 1"/>
      <button name="draftButton" title="Draft" onClick="save,action-account-budget-draft"
        showIf="statusSelect == 2"/>
    </panel>
    <panel name="totalAmountExpectedPanel" readonly="true" colSpan="4" sidebar="true"
      title="Total amounts">
      <field name="totalAmountExpected"/>
      <field name="totalAmountCommitted" if-module="axelor-supplychain"
        if="__config__.app.isApp('supplychain')"/>
      <field name="totalAmountRealized"/>
    </panel>

    <panel-dashlet name="budgetDistributionLinePurchaseOrderLinePanel"
      action="action-budget-view-budget-distribution-purchase-order-line" colSpan="12"
      showIf="statusSelect == 2" canSearch="true" height="350" readonly="true"
      if="__config__.app.isApp('supplychain')"/>
    <panel-dashlet name="budgetDistributionLineInvoicePanel"
      action="action-budget-view-budget-distribution-invoice-line" colSpan="12"
      showIf="statusSelect == 2" canSearch="true" height="350" readonly="true"/>

    <panel name="followUpPanel" title="Follow-up" canCollapse="true" sidebar="true"
      collapseIf="true">
      <field name="inChargeUser" canNew="false" canView="false" canEdit="false"/>
    </panel>
    <panel name="configuration" title="Configuration" canCollapse="true" sidebar="true"
      collapseIf="true" readonlyIf="statusSelect == 2">
    </panel>
  </form>

  <action-group name="action-group-account-budget-generateperiod-click">
    <action name="action-year-check-date"/>
    <action name="save"/>
    <action name="action-budget-validate-generate-period"/>
    <action name="action-method-budget-year-generate-periods"/>
    <action name="action-budget-method-compute-total-amount"/>
  </action-group>

  <action-validate name="action-budget-validate-generate-period">
    <error message="To generate periods, please fill in the limits of the budget."
      if="fromDate == null || toDate == null"/>
    <error message="To generate periods, please fill in the Period duration."
      if="periodDurationSelect == null"/>
    <alert message="Warning, existing lines will be deleted, do you wish to continue?"
      if="budgetLineList != null &amp;&amp; !budgetLineList.empty"/>
  </action-validate>

  <action-record name="action-budget-record-on-new"
    model="com.axelor.apps.account.db.Budget">
    <field name="company" expr="eval:__user__.activeCompany"/>
    <field name="inChargeUser" expr="eval: __user__"/>
  </action-record>

  <action-method name="action-budget-method-compute-total-amount">
    <call class="com.axelor.apps.account.web.BudgetController" method="compute"/>
  </action-method>

  <action-method name="action-budget-method-update-lines">
    <call class="com.axelor.apps.account.web.BudgetController" method="updateLines"/>
  </action-method>

  <action-group name="action-group-budget-update-amounts">
    <action name="save"/>
    <action name="action-budget-method-update-lines"/>
    <action name="save"/>
    <action name="action-method-budget-update-total-amount-realized"/>
    <action name="action-method-budget-update-total-amount-committed"
      if="__config__.app.isApp('supplychain')"/>
    <action name="save"/>
  </action-group>

  <action-method name="action-method-budget-update-total-amount-realized">
    <call class="com.axelor.apps.account.web.BudgetController"
      method="computeTotalAmountRealized"/>
  </action-method>

  <action-method name="action-method-budget-update-total-amount-committed">
    <call class="com.axelor.apps.supplychain.web.BudgetController"
      method="computeTotalAmountCommited"/>
  </action-method>

  <action-method name="action-method-budget-year-generate-periods">
    <call class="com.axelor.apps.account.web.BudgetController" method="generatePeriods"/>
  </action-method>

  <action-method name="action-account-budget-validate">
    <call class="com.axelor.apps.account.web.BudgetController" method="validate"/>
  </action-method>

  <action-method name="action-account-budget-draft">
    <call class="com.axelor.apps.account.web.BudgetController" method="draft"/>
  </action-method>

  <action-validate name="action-budget-validate-exceed-line-amount">
    <alert
      if="__config__.app.getApp('budget')?.manageMultiBudget
                  &amp;&amp;budgetDistributionList != null &amp;&amp; budgetDistributionList
                  &amp;&amp; companyInTaxTotal &gt; budgetDistributionList?.sum{it.amount}"
      message="The total amount is greater than the budget distribution total."/>
  </action-validate>

  <action-method name="action-budget-check-shared-dates">
    <call class="com.axelor.apps.account.web.BudgetController" method="checkSharedDates"/>
  </action-method>

  <action-view name="action-budget-view-budget-distribution-purchase-order-line"
    title="Committed lines" model="com.axelor.apps.account.db.BudgetDistribution">
    <view type="grid" name="budget-distribution-grid-purchase-order-line-grid"/>
    <view type="form" name="budget-distribution-grid-purchase-order-line-form"/>
    <view-param name="limit" value="200"/>
    <domain>self.budget.id = :_budgetId AND self.purchaseOrderLine != null</domain>
    <context name="_budgetId" expr="eval: __this__.id"/>
  </action-view>

  <action-view name="action-budget-view-budget-distribution-invoice-line"
    title="Realized lines" model="com.axelor.apps.account.db.BudgetDistribution">
    <view type="grid" name="budget-distribution-grid-invoice-line-grid"/>
    <view type="form" name="budget-distribution-grid-invoice-line-form"/>
    <view-param name="limit" value="200"/>
    <domain>self.budget.id = :_budgetId AND self.invoiceLine != null</domain>
    <context name="_budgetId" expr="eval: __this__.id"/>
  </action-view>

  <search-filters name="budget-filters" model="com.axelor.apps.account.db.Budget"
    title="Budget filters">
    <field name="company" hidden="true"
      if="!__config__.app.getApp('base')?.getEnableMultiCompany()"/>
    <field name="totalAmountCommitted" hidden="true" if="!__config__.app.isApp('supplychain')"/>
  </search-filters>

</object-views>
