<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="card-grid" title="Cards" model="com.axelor.apps.client.portal.db.Card">
    <field name="partner"/>
    <field name="name"/>
    <field name="cardNumber" widget="string"/>
    <field name="brand"/>
    <field name="expiryMonth"/>
    <field name="expiryYear" widget="string"/>
    <field name="isDefault"/>
  </grid>

  <form name="card-form" title="Card" model="com.axelor.apps.client.portal.db.Card"
    onNew="action-client-portal-record-card-onnew"
    onSave="action-client-portal-method-check-default-card">
    <panel name="manPanel">
      <field name="name"/>
      <field name="isDefault" colSpan="2"/>
      <field name="partner" colSpan="4" readonly="true" canView="false"/>
      <field name="cardNumber" colSpan="8" pattern="^[0-9]{13,16}$" widget="string"
        readonlyIf="version > 0"/>
      <field name="brand" colSpan="4" readonly="true"/>
      <field name="expiryMonth" min="1" max="12" required="true" colSpan="4"/>
      <field name="expiryYear" min="1" max="99" required="true" colSpan="4"/>
      <field name="cvc" min="0" max="999" required="true" colSpan="4" readonlyIf="version > 0"/>
      <field name="version"/>
    </panel>
  </form>

  <action-record name="action-client-portal-record-card-onnew"
    model="com.axelor.apps.client.portal.db.Card">
    <field name="partner" expr="eval: __user__.partner"/>
  </action-record>

  <action-method name="action-client-portal-method-check-default-card">
    <call class="com.axelor.apps.portal.web.CardController" method="checkDefaultCard"/>
  </action-method>

</object-views>