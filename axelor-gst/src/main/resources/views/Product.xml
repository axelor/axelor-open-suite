		<action-attrs name="action-gst-product-set-gstRate">
				<attribute name="value" for="gstRate" expr="eval:productCategory.getGstRate()" />
		</action-attrs>

		<action-method name="action-gst-set-invoice-line">
				<call class="com.axelor.apps.gst.web.ProductController" method="createInvoice" />
		</action-method>

		<!-- End gst -->


</object-views>
