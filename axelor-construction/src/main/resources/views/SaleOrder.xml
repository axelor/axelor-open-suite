<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form id="construction-sale-order-form" name="sale-order-form" title="SO line"
    model="com.axelor.apps.sale.db.SaleOrder" extension="true">

    <extend target="//button[@name='computeBtn']">
      <insert position="after">
        <button name="priceStudyButton"
          onClick="action-construction-sale-order-view-show-price-study" title="Prices study"/>
      </insert>
    </extend>
  </form>

  <form name="sale-order-study-prices-form" title="Prices study"
    model="com.axelor.apps.sale.db.SaleOrder" onNew="test" onLoad="test">
    <panel>
      <panel-related field="priceStudyList" colSpan="12" canNew="false"
        canEdit="false" canMove="true" form-view="price-study-form" grid-view="price-study-grid"/>
      <field name="saleOrderLineList"/>
    </panel>

  </form>

  <action-view name="action-construction-sale-order-view-show-price-study"
    title="Prices study" model="com.axelor.utils.db.Wizard">
    <view type="form" name="sale-order-study-prices-form"/>
    <view-param name="popup" value="true"/>
    <view-param name="forceEdit" value="false"/>
    <view-param name="show-confirm" value="false"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="popup-save" value="false"/>
    <context name="_showRecord" expr="eval: id"/>
  </action-view>

  <action-method name="test">
    <call class="com.axelor.apps.web.SaleOrderController" method="populatePriceStudyList"/>
  </action-method>

</object-views>