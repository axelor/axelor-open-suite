<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

  <grid name="characteristic-property-grid" title="Characteristics properties"
    model="com.axelor.apps.quality.db.CharacteristicProperty">
    <field name="name"/>
  </grid>

  <form name="characteristic-property-form" title="Characteristic property"
    model="com.axelor.apps.quality.db.CharacteristicProperty">
    <panel name="mainPanel" colSpan="12">
      <field name="$similarNameExists" readonly="true" hidden="true" colSpan="12"
        showTitle="false">
        <viewer>
          <![CDATA[<>{<Badge bg="warning">{_t("Similar name already exists")}</Badge>}</>]]>
        </viewer>
      </field>
      <field name="name" onChange="action-characteristic-method-check-similar-name"/>
    </panel>
  </form>

  <action-method name="action-characteristic-method-check-similar-name">
    <call class="com.axelor.apps.quality.web.CharacteristicPropertyController"
      method="checkSimilarName"/>
  </action-method>
</object-views>
