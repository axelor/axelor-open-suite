<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_6.1.xsd">

  <module name="quality" package="com.axelor.apps.quality.db"/>

  <entity name="QICause">

    <string name="code" title="Code" required="true"/>
    <string name="name" title="Name" required="true"/>
    <many-to-one name="company" title="Company" ref="com.axelor.apps.base.db.Company"
      required="true"/>
    <integer name="branchSelect" title="Branch" selection="quality.qi.cause.branch.select"
      required="true" default="1"/>
    <boolean name="isProductCause" title="Product"/>
    <boolean name="isSystemCause" title="System"/>

    <extra-code><![CDATA[
	    public static final int BRANCH_MATERIAL = 1;
		public static final int BRANCH_MACHINE = 2;
		public static final int BRANCH_METHODS = 3;
		public static final int BRANCH_MAN_POWER = 4;
		public static final int BRANCH_MANAGEMENT = 5;
		public static final int BRANCH_MEDIUM = 6;
		public static final int BRANCH_MEASURE = 7;
		public static final int BRANCH_FINANCIAL_MEANS = 8;
    ]]></extra-code>

    <track>
      <field name="code"/>
      <field name="name"/>
      <field name="company"/>
      <field name="branchSelect"/>
      <field name="isProductCause"/>
      <field name="isSystemCause"/>
    </track>

  </entity>

</domain-models>
